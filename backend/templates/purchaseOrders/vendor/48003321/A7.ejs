<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>WMES PO LABELS VENDOR=48003321 PAPER=A6</title>
  <style type="text/css">
    * {
      box-sizing: border-box;
      -webkit-box-sizing: border-box;
      margin: 0;
      padding: 0;
      line-height: 1;
    }
    body {
      font-family: Verdana, sans-serif;
      text-align: left;
      text-rendering: optimizeLegibility;
      letter-spacing: 0;
    }
    .page {
      position: relative;
      padding: 5mm 5mm 0 5mm;
    }
    table {
      margin: 0;
      border-collapse: collapse;
      border: 1px solid #000;
      width: 100%;
    }
    td {
      border: 1px solid #000;
      padding: 1mm 2mm;
      font-size: 2.8mm;
      white-space: nowrap;
      line-height: 1.2;
    }
    td:first-child {
      width: 1%;
    }
    .prop-name {
      text-align: right;
      vertical-align: top;
    }
    .barcode {
      vertical-align: middle;
      text-align: center;
      padding: 1.5mm 0 1.5mm 0;
    }
    .qr .barcode {
      padding: 0;
      height: 14mm;
    }
    .qr .barcode-qr {
      position: absolute;
      bottom: 5mm;
      right: 5mm;
      background: #fff;
      padding: 2mm;
      border: 1px solid #000;
    }
  </style>
</head>
<body>
<% pages.forEach(function(page) { %>
<div class="page <%- barcode %>">
  <table>
    <tbody>
      <tr>
        <td class="prop-name">DOSTAWCA:</td>
        <td class="prop-value">
          BART-DRUK Sp. z o. o.<br>
          11-200 Bartoszyce, ul. Kętrzyńska 41
        </td>
      </tr>
      <tr>
        <td class="prop-name">ODBIORCA:</td>
        <td class="prop-value">
          SIGNIFY POLAND Sp. z o. o.<br>
          11-400 Kętrzyn, ul. Chrobrego 8
        </td>
      </tr>
      <tr>
        <td class="prop-name">NR PRZEWOZOWY:</td>
        <td class="prop-value"><%- page.shippingNo || '-' %></td>
      </tr>
      <tr>
        <td class="prop-name">NR DOSTAWCY:</td>
        <td class="prop-value"><%- page.vendorNo || '-' %></td>
      </tr>
      <tr>
        <td class="prop-name">NR ZAMÓWIENIA:</td>
        <td class="prop-value"><%- page.orderNo || '-' %></td>
      </tr>
      <tr>
        <td class="prop-name">NR POZYCJI:</td>
        <td class="prop-value"><%- page.itemNo || '-' %></td>
      </tr>
      <tr>
        <td class="prop-name">12NC PRODUKTU:</td>
        <td class="prop-value"><%- page.nc12 || '-' %></td>
      </tr>
      <tr>
        <td class="prop-name">ILOŚĆ:</td>
        <td class="prop-value"><%- page.quantity || '-' %></td>
      </tr>
      <tr>
        <td class="barcode" colspan="2">
          <% if (barcode === 'qr') { %>
          <div class="barcode-qr"><img src="data:image/png;base64,<%- page.png %>"></div>
          <% } else { %>
          <img src="data:image/png;base64,<%- page.png %>">
          <p class="barcode-data"><%- page.barcodeData %></p>
          <% } %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<% }) %>
</body>
</html>
