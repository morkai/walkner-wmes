<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>WMES PO LABELS PAPER=<%- paper %> BARCODE=<%- barcode %></title>
  <style type="text/css">
    * {
      box-sizing: border-box;
      -webkit-box-sizing: border-box;
      margin: 0;
      padding: 0;
      line-height: 1;
    }
    body {
      font-family: Verdana, sans-serif;
      font-size: 5mm;
      text-align: center;
    }
    .page {
      padding: 25mm 30mm 0 30mm;
    }
    .page + .page {
      page-break-before: always;
    }
    table {
      border-collapse: collapse;
      border: 0;
      width: 100%;
    }
    th {
      font-weight: normal;
      text-transform: uppercase;
      padding: 25mm 0 0 0;
    }
    th:first-child,
    th:last-child {
      width: 1%;
      white-space: nowrap;
    }
    td {
      font-size: 12mm;
      padding: 0;
    }
  </style>
</head>
<body>
<% pages.forEach(function(page) { %>
<div class="page">
  <div class="barcode-container">
    <img src="data:image/png;base64,<%- page.png %>">
    <p class="barcode-data"><%- page.barcodeData %></p>
  </div>
  <table>
    <tr>
      <th>Order no</th>
      <th>Product 12NC</th>
      <th>Quantity</th>
    </tr>
    <tr>
      <td><%- page.orderNo || '-' %></td>
      <td><%- page.nc12 || '-' %></td>
      <td><%- page.quantity || '-' %></td>
    </tr>
    <tr>
      <th>Line no</th>
      <th>Shipping no</th>
      <th>Vendor no</th>
    </tr>
    <tr>
      <td><%- page.itemNo || '-' %></td>
      <td><%- page.shippingNo || '-' %></td>
      <td><%- page.vendorNo || '-' %></td>
    </tr>
  </table>
</div>
<% }) %>
</body>
</html>
