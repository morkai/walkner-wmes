<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>wmes purchase order labels</title>
  <style type="text/css">
  body {
    margin: 0;
    line-height: 1;
    font-family: Consolas, Menlo, Monaco, monospace;
    font-size: 16px;
    text-align: center;
  }
  #barcode-container {
    margin: 0 0 5px 0;
  }
  #barcode-data {
    margin: 0;
  }
  .page + .page {
    page-break-before: always;
  }
  table {
    border-collapse: collapse;
    border: 0;
    width: 100%;
  }
  th {
    font-family: sans-serif;
    font-size: 24px;
    font-weight: normal;
    text-transform: uppercase;
    padding: 40px 0 0 0;
  }
  th:first-child,
  th:last-child {
    width: 1%;
    white-space: nowrap;
  }
  td {
    font-size: 44px;
    padding: 0;
  }
  </style>
</head>
<body>
<% pages.forEach(function(page) { %>
<div class="page">
  <div id="barcode-container">
    <%- page.svg %>
    <p id="barcode-data"><%- page.barcodeData %></p>
  </div>
  <table>
    <tr>
      <th>Order no</th>
      <th>Product 12NC</th>
      <th>Quantity</th>
    </tr>
    <tr>
      <td><%- page.orderNo %></td>
      <td><%- page.nc12 %></td>
      <td><%- page.quantity %></td>
    </tr>
    <tr>
      <th>Line no</th>
      <th>Shipping no</th>
      <th>Vendor no</th>
    </tr>
    <tr>
      <td><%- page.itemNo %></td>
      <td><%- page.shippingNo || '-' %></td>
      <td><%- page.vendorNo || '-' %></td>
    </tr>
  </table>
</div>
<% }) %>
</body>
</html>
