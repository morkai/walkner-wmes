<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-top: 0; margin-bottom: 3px; padding-bottom: 3px;">
  Kaizen
</h3>
<table style="font-family: Arial, sans-serif; font-size: 12px">
  <tbody>
  <tr>
    <th align="left">ID</th>
    <td>: <a href="<%- urlPrefix %>r/osh/kaizens/<%- entry.rid %>"><%- entry.rid %></a></td>
  </tr>
  <tr>
    <th align="left">Temat</th>
    <td>: <%= entry.subject %></td>
  </tr>
  <tr>
    <th align="left">Status</th>
    <td>: <%= entry.status %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Zgłaszający</th>
    <td>: <%= entry.creator %></td>
  </tr>
  <% if (entry.implementers.length === 1) { %>
    <tr>
      <th align="left" style="white-space: nowrap">Realizator</th>
      <td>: <%= entry.implementers[0] %></td>
    </tr>
  <% } %>
  <% if (entry.implementers.length > 1) { %>
    <tr>
      <th align="left" style="white-space: nowrap">Realizatorzy</th>
      <td>:
        <ul>
          <% entry.implementers.forEach(implementer => { %>
            <li><%= implementer %></li>
          <% }) %>
        </ul>
      </td>
    </tr>
  <% } %>
  <tr>
    <th align="left" style="white-space: nowrap">Zakład usprawnienia</th>
    <td>: <%= entry.division %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Wydział usprawnienia</th>
    <td>: <%= entry.workplace %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Budynek</th>
    <td>: <%= entry.building %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Obszar</th>
    <td>: <%= entry.location %></td>
  </tr>
  <% if (entry.station) { %>
    <tr>
      <th align="left" style="white-space: nowrap">Stanowisko</th>
      <td>: <%= entry.station %></td>
    </tr>
  <% } %>
  <tr>
    <th align="left" style="white-space: nowrap">Czas zgłoszenia</th>
    <td>: <%- entry.createdAt %></td>
  </tr>
  <tr>
    <th align="left">Rodzaj</th>
    <td>: <%= entry.kind %></td>
  </tr>
  <tr>
    <th align="left">Kategoria</th>
    <td>: <%= entry.kaizenCategory %></td>
  </tr>
  <tr>
    <th align="left" valign="top">Opis problemu</th>
    <td style="white-space: pre-line">: <%= entry.problem %></td>
  </tr>
  <tr>
    <th align="left" valign="top">Przyczyna wystąpienia</th>
    <td style="white-space: pre-line">: <%= entry.reason %></td>
  </tr>
  <tr>
    <th align="left" valign="top">Propozycja rozwiązania</th>
    <td style="white-space: pre-line">: <%= entry.suggestion %></td>
  </tr>
  <% if (entry.solution) { %>
  <tr>
    <th align="left" valign="top">Wdrożone usprawnienia</th>
    <td style="white-space: pre-line">: <%= entry.solution %></td>
  </tr>
  <% } %>
  <% if (entry.comment) { %>
  <tr>
    <th align="left" valign="top">Komentarz</th>
    <td style="white-space: pre-line">: <%= entry.comment %></td>
  </tr>
  <% } %>
</table>
<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-bottom: 3px; padding-bottom: 3px;">
  Na skróty
</h3>
<ul style="margin-top: 0; font-family: Arial, sans-serif; font-size: 12px">
  <li><a href="<%- urlPrefix %>r/osh/entry/<%- entry.rid %>">Zgłoszenie <%- entry.rid %></a></li>
  <li><a href="<%- urlPrefix %>r/osh/kaizens/mine">Moje zgłoszenia</a></li>
  <li><a href="<%- urlPrefix %>r/osh/kaizens/unseen">Nieprzeczytane zgłoszenia</a></li>
  <li><a href="<%- urlPrefix %>r/osh/kaizens/all">Wszystkie zgłoszenia</a></li>
</ul>
<hr>
<font face="Arial" color="Gray" size="1">
  Ta wiadomość została wygenerowana automatycznie przez system WMES.
</font>
