<font style="font-family: Arial, sans-serif; margin-bottom: 3px; font-size: 12px">
  Witaj, <%= user %>!
  <br><br>
  Dostajesz tę wiadomość, ponieważ znajdujesz się na liście koordynatorów w zgłoszeniach dodanych wczoraj
  w aplikacji REAGUJ.
</font>
<% entryTypes.forEach(entryType => { %>
  <h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-bottom: 3px; padding-bottom: 3px;">
    <%= entryType.name %>
  </h3>
  <ul>
    <% entryType.list.forEach(entry => { %>
      <li>
        <a href="<%- urlPrefix %>r/osh/entry/<%- entry.rid %>" style="font-family: Consolas, monospace"><%= entry.rid %></a>
        <%= entry.subject || '' %>
        <i>(<%= entry.status %>)</i>
      </li>
    <% }) %>
    <li><a href="<%- urlPrefix %>r/osh/<%- entryType.type %>/mine">Moje zgłoszenia</a></li>
    <li><a href="<%- urlPrefix %>r/osh/<%- entryType.type %>/unseen">Nieprzeczytane zgłoszenia</a></li>
    <li><a href="<%- urlPrefix %>r/osh/<%- entryType.type %>/all">Wszystkie zgłoszenia</a></li>
  </ul>
<% }) %>
<hr>
<font face="Arial" color="Gray" size="1">
  Ta wiadomość została wygenerowana automatycznie przez system WMES.
</font>
