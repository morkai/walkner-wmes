<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-top: 0; margin-bottom: 3px; padding-bottom: 3px">
  Zadanie podmiany farb
</h3>
<table style="font-family: Arial, sans-serif; font-size: 12px">
  <tbody>
  <tr>
    <th align="left" style="white-space: nowrap">ID zadania</th>
    <td>: <a href="<%- urlPrefix %>r/dp/all/<%- job._id %>"><%- job._id %></a></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Czas rozpoczęcia</th>
    <td>: <%- job.createdAt %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Czas trwania</th>
    <td>: <%- job.duration %></td>
  </tr>
  <% if (codes.length === 1) { %>
  <tr>
    <th align="left" style="white-space: nowrap">Rodzina dummy</th>
    <td>: <%= codes[0]._id %> <%= codes[0].name %></td>
  </tr>
  <% } else if (codes.length) { %>
  <tr>
    <th align="left" valign="top" style="white-space: nowrap">Rodzina dummy</th>
    <td>
      <ul style="margin: 0; padding: 0; list-style-position: inside">
        <% codes.forEach(code => { %>
        <li style="white-space: nowrap"><%= code._id %> <%= code.name %></li>
        <% }) %>
      </ul>
    </td>
  </tr>
  <% } %>
  <tr>
    <th align="left" style="white-space: nowrap">Instancja SAP GUI</th>
    <td>: <%= worker.name %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Ilość wszystkich</th>
    <td>: <%= stats.all.toLocaleString() %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Ilość zmienionych</th>
    <td>: <%= stats.changes.toLocaleString() %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Ilość błędów</th>
    <td>: <%= stats.errors.toLocaleString() %></td>
  </tr>
</table>
<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-bottom: 3px; padding-bottom: 3px">
  Na skróty
</h3>
<ul style="margin-top: 0; font-family: Arial, sans-serif; font-size: 12px">
  <li><a href="<%- urlPrefix %>r/dp/all/<%- job._id %>">Wszystkie zlecenia</a></li>
  <li><a href="<%- urlPrefix %>r/dp/unchanged/<%- job._id %>">Niezmienione zlecenia</a></li>
</ul>
<hr>
<font face="Arial" color="Gray" size="1">
  Ta wiadomość została wygenerowana automatycznie przez system WMES.
</font>
