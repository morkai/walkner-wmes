<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
  <base href="/">
  <title><%- LANG.HEADER %> - <%- moment(survey.startDate).format('D MMMM') %>-<%- moment(survey.endDate).format('D MMMM') %></title>
  <link rel="stylesheet" href="app/opinionSurveys/assets/current.css">
</head>
<body>
<a id="printer" href="opinionSurveys/<%- survey._id %>.pdf?lang=<%- language %>">
  <img src="app/opinionSurveys/assets/printer.png" alt="">
  <p><%- LANG.PRINT_VERSION %></p>
</a>
<div id="container">
  <div id="hd">
    <h1><%- LANG.HEADER %><em><%- moment(survey.startDate).format('D MMMM') %>-<%- moment(survey.endDate).format('D MMMM') %></em></h1>
    <h2><%- LANG.COMPANY %></h2>
    <a id="flag" href="opinion?lang=<%- language === 'ua' ? 'pl' : 'ua' %>" data-lang="<%- language === 'ua' ? 'pl' : 'ua' %>">
      <span id="flag1"></span>
      <span id="flag2"></span>
    </a>
  </div>
  <div id="bd">
    <div id="intro">
      <%- survey.intro %>
    </div>
    <div id="comment-container">
      <label for="comment"><%- LANG.COMMENT %></label>
      <textarea id="comment" rows="5" tabindex="1"></textarea>
    </div>
    <h1><%- LANG.METRICS %></h1>
    <% if (survey.employers.length) { %>
    <h2><%- LANG.EMPLOYER %></h2>
    <ol id="employer" class="options">
      <% survey.employers.forEach(function(employer) { %>
      <li class="label" tabindex="1"><span class="option" data-group="employer" data-value="<%- employer._id %>"></span><span><%= employer.full %></span></li>
      <% }) %>
    </ol>
    <% } %>
    <h2><%- LANG.SUPERIOR %></h2>
    <div id="superior">
      <ol class="superior options">
        <% survey.superiors.forEach(function(superior, i) { %>
        <% if (i && i % 8 === 0) { %>
      </ol>
      <ol class="superior options">
        <% } %>
        <li class="label" tabindex="1"><span class="option" data-group="superior" data-value="<%- superior._id %>"></span><span><%= superior.full %><% if (survey.showDivision) { %> (<%= superior.division %>)<% } %></span></li>
        <% }) %>
      </ol>
    </div>
    <h1><%- LANG.SURVEY %></h1>
    <p id="warning"><i><%- LANG.WARNING %></i></p>
    <table id="survey">
      <thead>
      <tr>
        <th><%- LANG.NO %></th>
        <th><%- LANG.QUESTION %></th>
        <th class="question-option"><i class="icon-no"></i></th>
        <th class="question-option"><i class="icon-na"></i></th>
        <th class="question-option"><i class="icon-yes"></i></th>
      </tr>
      </thead>
      <tbody>
      <% questions.forEach(function(question, i) { %>
      <tr>
        <td class="question-no"><%- i + 1 %>.</td>
        <td class="question-text"><%= question.full %></td>
        <td class="question-option label" tabindex="1"><span class="option no" data-group="<%- question._id %>" data-value="no"></span></td>
        <td class="question-option label" tabindex="1"><span class="option na is-selected" data-group="<%- question._id %>" data-value="na"></span></td>
        <td class="question-option label" tabindex="1"><span class="option yes" data-group="<%- question._id %>" data-value="yes"></span></td>
      </tr>
      <% }) %>
      <% if (referrals) { %>
      <tr>
        <td class="question-no"><%- questions.length + 1 %>.</td>
        <td class="question-text" colspan="4">
          <%= referrals.full %>
        </td>
      </tr>
      <tr>
        <td class="question-text" colspan="5" style="border-top: none">
          <div id="referrals">
            <% for (var i = 1; i <= 10; ++i) { %>
            <span class="question-option label" tabindex="1"><span class="option <%- i < 7 ? 'no' : i < 9 ? 'na' : 'yes' %>" data-group="<%- referrals._id %>" data-value="<%- i %>"><%- i %></span></span>
            <% } %>
          </div>
        </td>
      </tr>
      <% } %>
      </tbody>
    </table>
    <button id="submit" disabled>Wyślij ankietę</button>
  </div>
  <div id="ft">
    <img src="app/opinionSurveys/assets/logo.png">
    <p><%- LANG.FOOTER %></p>
  </div>
</div>
<script>
var LANG = <%- JSON.stringify(LANG) %>;
var SURVEY = <%- JSON.stringify(survey) %>;
</script>
<script src="vendor/jquery.js"></script>
<script src="app/opinionSurveys/assets/current.js"></script>
</body>
</html>
