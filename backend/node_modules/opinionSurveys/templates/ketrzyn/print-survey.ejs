<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%- LANG.HEADER %> - <%= survey.label %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: Arial, sans-serif;
      font-size: 16px;
      line-height: 1;
      text-align: center;
      text-rendering: geometricPrecision!important;
    }
    #container {
      margin: 0 auto;
      padding-top: 20px;
      width: 718px;
      text-align: left;
    }
    h1 {
      padding-top: 20px;
      font-size: 18px;
    }
    img + h1 {
      padding-top: 0;
    }
    h2 {
      font-size: 16px;
      margin-top: 20px;
    }
    #help {
      display: inline-block;
      margin-top: -1px;
      font-size: 16px;
      font-weight: normal;
      vertical-align: middle;
      white-space: nowrap;
    }
    #warning {
      margin: 15px 0 5px 0;
      font-size: 14px;
      font-style: oblique;
      line-height: 1.4;
    }
    table {
      width: 718px;
      font-size: 13px;
      border: none;
      border-collapse: collapse;
    }
    th,
    td {
      padding: 2px 4px;
      line-height: 1.2;
    }
    th,
    td {
      border-top: 1px solid #000;
    }
    th:first-child,
    td:first-child {
      border-left: 1px solid #000;
    }
    th:last-child,
    td:last-child {
      border-right: 1px solid #000;
    }
    .no {
      width: 30px;
    }
    td.no {
      vertical-align: top;
      text-align: right;
    }
    td.question {
      vertical-align: top;
    }
    .answer {
      width: 92px;
      text-align: center;
    }
    .circles {
      list-style: none;
    }
    .circles > li {
      margin-top: 10px;
      white-space: nowrap;
    }
    .circle + span {
      margin-left: 10px;
      line-height: 24px;
    }
    .circle {
      display: inline-block;
      vertical-align: top;
      width: 24px;
      height: 24px;
      border: 2px solid #000;
      border-radius: 24px;
    }
    .circle.is-full {
      background-color: #000;
    }
    #superiors > .circles {
      display: inline-block;
      margin-right: 20px;
      vertical-align: top;
    }
    #superiors[data-columns="3"] .division {
      font-size: 12px;
    }
    #referrals-row td {
      border-bottom: none;
      padding-bottom: 15px;
    }
    #referrals-img {
      margin-top: 0;
      text-align: center;
    }
  </style>
</head>
<body>
<div id="container">
  <h1><%- LANG.METRICS %> (<span id="help"><em><%- LANG.HELP %></em> <span class="circle"></span> <img src="/app/opinionSurveys/assets/arrow.png" width="18" height="11"> <span class="circle is-full"></span></span>)</h1>
  <h2><%- LANG.EMPLOYER %></h2>
  <ol class="circles">
    <% survey.employers.forEach(function(employer) { %>
    <li><span class="circle"></span><span><%= employer.full %></span></li>
    <% }) %>
  </ol>
  <h2><%- LANG.SUPERIOR %></h2>
  <div id="superiors" data-columns="<%- Math.ceil(survey.superiors.length / superiorColumnLength) %>">
    <ol class="circles">
      <% survey.superiors.forEach(function(superior, i) { %>
      <% if (i && i % superiorColumnLength === 0) { %>
    </ol>
    <ol class="circles">
      <% } %>
      <li><span class="circle"></span><span><%= superior.full %><% if (survey.showDivision) { %> <span class="division">(<%= superior.division %>)</span><% } %></span></li>
      <% }) %>
    </ol>
  </div>
  <p id="warning"><%- LANG.WARNING %></p>
  <table>
    <thead>
    <tr>
      <th class="no"><%- LANG.NO %></th>
      <th class="question"><%- LANG.QUESTION %></th>
      <th class="answer"><%- LANG.DONT_AGREE %></th>
      <th class="answer"><%- LANG.WHATEVER %></th>
      <th class="answer"><%- LANG.AGREE %></th>
    </tr>
    </thead>
    <tbody>
    <% questions.forEach(function(question, i) { %>
    <tr>
      <td class="no"><%- i + 1 %>.</td>
      <td class="question"><%= question.full %></td>
      <td class="answer"><span class="circle"></span></td>
      <td class="answer"><span class="circle"></span></td>
      <td class="answer"><span class="circle"></span></td>
    </tr>
    <% }) %>
    <% if (referrals) { %>
    <tr id="referrals-row">
      <td class="no"><%- questions.length + 1 %>.</td>
      <td class="question" colspan="4"><%= referrals.full %></td>
    </tr>
    <% } %>
    </tbody>
  </table>
  <% if (referrals) { %>
  <div id="referrals-img">
    <img src="/app/opinionSurveys/assets/referrals.png" width="718" height="101" alt="">
  </div>
  <% } %>
</div>
</body>
</html>
