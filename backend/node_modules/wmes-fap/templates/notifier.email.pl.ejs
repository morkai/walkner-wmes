<%

var SUBDIVISION_TYPES = {
  assembly: 'Montaż',
  press: 'Tłocznia',
  wh: 'Magazyn'
};

%>
<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-top: 0; margin-bottom: 3px; padding-bottom: 3px">
  Zgłoszenie FAP
</h3>
<table style="font-family: Arial, sans-serif; font-size: 12px">
  <tbody>
  <tr>
    <th align="left" style="white-space: nowrap">ID</th>
    <td>: <a href="<%- urlPrefix %>r/fap/<%- entry.rid %>"><%- entry.rid %></a></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Dział</th>
    <td>: <%= SUBDIVISION_TYPES[entry.subdivisionType] %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Kategoria</th>
    <td>: <%= entry.category %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Podkategoria</th>
    <td>: <%= entry.subCategory %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Opis problemu</th>
    <td style="white-space: pre-line">: <%= entry.problem %></td>
  </tr>
  <% if (entry.orderNo) { %>
  <tr>
    <th align="left" style="white-space: nowrap">Nr zlecenia</th>
    <td>: <%= entry.orderNo %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Nazwa produktu</th>
    <td>: <%= entry.productName %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">MRP</th>
    <td>: <%= entry.mrp %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">12NC</th>
    <td>: <%= entry.nc12 %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Ilość</th>
    <td>: <%- (entry.qtyDone || 0).toLocaleString() %>/<%- (entry.qtyTodo || 0).toLocaleString() %></td>
  </tr>
  <% } %>
  <% if (entry.componentCode) { %>
  <tr>
    <th align="left" style="white-space: nowrap">Komponent</th>
    <td>: <%= entry.componentCode %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Nazwa komponentu</th>
    <td>: <%= entry.componentName %></td>
  </tr>
  <% } %>
  <% if (entry.lines.length) { %>
  <tr>
    <th align="left" style="white-space: nowrap">Wydział</th>
    <td>: <%= entry.divisions.join('; ') %></td>
  </tr>
  <tr>
    <th align="left" style="white-space: nowrap">Linia</th>
    <td>: <%= entry.lines.join('; ') %></td>
  </tr>
  <% } %>
  <tr>
    <th align="left" style="white-space: nowrap">Osoba zgłaszająca</th>
    <td>: <%= entry.owner.label %></td>
  </tr>
</table>
<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-bottom: 3px; padding-bottom: 3px">
  Na skróty
</h3>
<ul style="margin-top: 0; font-family: Arial, sans-serif; font-size: 12px">
  <li><a href="<%- urlPrefix %>r/fap/<%- entry.rid %>">Zgłoszenie <%- entry.rid %></a></li>
  <li><a href="<%- urlPrefix %>r/fap/mine">Twoje zgłoszenia</a></li>
  <li><a href="<%- urlPrefix %>r/fap/all">Wszystkie zgłoszenia</a></li>
</ul>
<hr>
<font face="Arial" color="Gray" size="1">
  Ta wiadomość została wygenerowana automatycznie przez system WMES
  ponieważ zostałeś przypisany do zgłoszenia FAP.
</font>
