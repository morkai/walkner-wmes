<div class="orderDocumentTree-uploads-upload" data-id="<%- upload.id %>">
  <div class="orderDocumentTree-uploads-fields">
    <input class="orderDocumentTree-uploads-field orderDocumentTree-uploads-nc15" type="text" name="nc15" value="<%- upload.nc15 %>" <%- upload.virtual ? 'readonly' : '' %> required pattern="^[0-9]{15}$" maxlength="15" placeholder="<%- t('orderDocumentTree', 'upload:nc15:placeholder') %>">
    <input class="orderDocumentTree-uploads-field orderDocumentTree-uploads-date" type="date" name="date" value="<%- upload.date %>" required pattern="^[0-9]{4}-[0-9]{2}-[0-9]{2}$">
    <input class="orderDocumentTree-uploads-field orderDocumentTree-uploads-name" type="text" name="name" value="<%= upload.name %>" required placeholder="<%- t('orderDocumentTree', 'upload:name:placeholder') %>">
    <button class="orderDocumentTree-uploads-btn" type="button" data-action="remove"><i class="fa fa-remove"></i></button>
  </div>
  <div class="progress">
    <div class="progress-bar progress-bar-<%- upload.statusClassName %>" style="width: <%- upload.progress %>%"><%- upload.message %></div>
  </div>
</div>
