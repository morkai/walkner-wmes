<div class="orderDocumentTree-toolbar">
  <form id="<%- idPrefix %>-searchForm" class="orderDocumentTree-toolbar-group orderDocumentTree-toolbar-search" title="<%- helpers.t('toolbar:search:title') %>">
    <div class="input-group">
      <input id="<%- idPrefix %>-searchPhrase" name="searchPhrase" type="text" autocomplete="new-password" class="form-control" value="<%= searchPhrase %>" placeholder="<%- helpers.t('toolbar:search:placeholder') %>" autofocus pattern="^[0-9*#]{4,15}$" maxlength="15">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </form>
  <div class="btn-group orderDocumentTree-toolbar-group">
    <input id="<%- idPrefix %>-date" type="date" class="form-control" value="<%- dateFilter || '' %>" min="2000-01-01" max="<%- time.utc.getMoment(Date.now()).add(1, 'years').format('YYYY-MM-DD') %>">
  </div>
  <div class="btn-group orderDocumentTree-toolbar-group" data-toggle="buttons">
    <label class="btn btn-default <%- displayMode === 'tiles' ? 'active' : '' %>" title="<%- helpers.t('toolbar:displayMode:tiles') %>">
      <input type="radio" name="displayMode" value="tiles" <%- displayMode === 'tiles' ? 'checked' : '' %>> <i class="fa fa-th"></i>
    </label>
    <label class="btn btn-default <%- displayMode === 'list' ? 'active' : '' %>" title="<%- helpers.t('toolbar:displayMode:list') %>">
      <input type="radio" name="displayMode" value="list" <%- displayMode === 'list' ? 'checked' : '' %>> <i class="fa fa-th-list"></i>
    </label>
  </div>
  <div class="btn-group orderDocumentTree-toolbar-group">
    <button id="<%- idPrefix %>-copyToClipboard" class="btn btn-default" type="button" title="<%- helpers.t('toolbar:copyToClipboard') %>"><i class="fa fa-clipboard"></i></button>
  </div>
  <div class="btn-group orderDocumentTree-toolbar-group">
    <button id="<%- idPrefix %>-editMarkedFiles" class="btn btn-default" type="button" title="<%- helpers.t('toolbar:editMarkedFiles') %>"><i class="fa fa-edit"></i></button>
    <button id="<%- idPrefix %>-recoverMarkedFiles" class="btn btn-default" type="button" title="<%- helpers.t('toolbar:recoverMarkedFiles') %>"><i class="fa fa-undo"></i></button>
    <button id="<%- idPrefix %>-unlinkMarkedFiles" class="btn btn-default" type="button" title="<%- helpers.t('toolbar:unlinkMarkedFiles') %>"><i class="fa fa-unlink"></i></button>
    <button id="<%- idPrefix %>-removeMarkedFiles" class="btn btn-default" type="button" title="<%- helpers.t('toolbar:removeMarkedFiles') %>"><i class="fa fa-trash-o"></i></button>
  </div>
  <div class="btn-group orderDocumentTree-toolbar-group" title="<%- helpers.t('toolbar:folderCount') %>">
    <i class="fa fa-folder-o"></i><span id="<%- idPrefix %>-folderCount"><%- folderCount %></span>
  </div>
  <div class="btn-group orderDocumentTree-toolbar-group" title="<%- helpers.t('toolbar:fileCount') %>">
    <i class="fa fa-file-o"></i><span id="<%- idPrefix %>-fileCount"><%- fileCount %></span>
  </div>
  <div class="btn-group orderDocumentTree-toolbar-group" title="<%- helpers.t('toolbar:markedFileCount') %>">
    <i class="fa fa-file"></i><span id="<%- idPrefix %>-markedFileCount"><%- markedFileCount %></span>
  </div>
</div>
