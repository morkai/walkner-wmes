<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <%- helpers.formGroup({
        name: 'month',
        type: 'month',
        label: 'PROPERTY:',
        required: true,
        placeholder: 'YYYY-MM',
        min: time.format(window.PRODUCTION_DATA_START_DATE || '2020-01-01', 'YYYY-MM'),
        max: time.getMoment().startOf('month').add(1, 'months').format('YYYY-MM'),
        inputStyle: {
          width: '175px'
        },
        disabled: editMode
      }) %>
      <div class="form-group">
        <input id="<%- id('enableRecount') %>" type="checkbox">
        <button id="<%- id('doRecount') %>" class="btn btn-default" type="button" disabled>
          <%- t('FORM:recount') %>
        </button>
      </div>
      <table class="table" style="margin-bottom: 0">
        <thead>
        <tr>
          <th class="is-min"><%- t('PROPERTY:workplace') %></th>
          <th class="is-min"><%- t('PROPERTY:department') %></th>
          <th class="is-min"><%- t('PROPERTY:internal') %></th>
          <th class="is-min"><%- t('PROPERTY:external') %></th>
          <th class="is-min"><%- t('PROPERTY:absent') %></th>
          <th class="is-min"><%- t('PROPERTY:observers') %></th>
          <th></th>
        </tr>
        </thead>
        <% workplaces.forEach(workplace => { %>
          <tbody>
            <% workplace.departments.forEach((department, departmentI) => { %>
            <tr data-id="<%- department._id %>">
              <td class="is-min"><%= workplace.label %></td>
              <td class="is-min"><%= department.label %></td>
              <td class="is-min">
                <input name="departments.d<%- department._id %>.division" value="<%- workplace.division %>" type="hidden">
                <input name="departments.d<%- department._id %>.workplace" value="<%- workplace._id %>" type="hidden">
                <input name="departments.d<%- department._id %>.department" value="<%- department._id %>" type="hidden">
                <input name="departments.d<%- department._id %>.internal" value="<%- department.internal %>" type="number" min="0" max="99999" class="form-control" style="width: 100px">
              </td>
              <td class="is-min">
                <input name="departments.d<%- department._id %>.external" value="<%- department.external %>" type="number" min="0" max="99999" class="form-control" style="width: 100px">
              </td>
              <td class="is-min">
                <input name="departments.d<%- department._id %>.absent" value="<%- department.absent %>" type="number" min="0" max="99999" class="form-control" style="width: 100px">
              </td>
              <td class="is-min">
                <input name="departments.d<%- department._id %>.observers" value="<%- department.observers %>" type="number" min="0" max="99999" class="form-control" style="width: 100px">
              </td>
              <td></td>
            </tr>
            <% }) %>
          </tbody>
        <% }) %>
      </table>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
