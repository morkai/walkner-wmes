<div>
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitle %></div>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th class="is-min"><%- t('PROPERTY:workplace') %></th>
        <th class="is-min"><%- t('PROPERTY:department') %></th>
        <th class="is-min"><%- t('PROPERTY:count') %></th>
        <th></th>
      </tr>
      </thead>
      <% model.workplaces.forEach(workplace => { %>
        <tbody>
          <% workplace.departments.forEach((department, i) => { %>
            <tr>
              <% if (i === 0) { %>
                <td class="is-min" rowspan="<%- workplace.departments.length %>"><%- workplace.label %></td>
              <% } %>
              <td class="is-min"><%- department.label %></td>
              <td class="is-min is-number"><%- department.count.toLocaleString() %></td>
              <td></td>
            </tr>
          <% }) %>
        </tbody>
      <% }) %>
    </table>
  </div>
</div>
