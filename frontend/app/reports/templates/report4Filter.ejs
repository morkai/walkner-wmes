<form class="well filter-form">
  <% include _filterFromTo.ejs %>
  <div class="form-group">
    <label><%- t('reports', 'filter:interval') %></label>
    <div id="<%- idPrefix %>-intervals" class="btn-group filter-btn-group" data-toggle="buttons">
      <% ['year', 'quarter', 'month', 'week', 'day'].forEach(function(interval) { %>
      <label class="btn btn-default" title="<%- t('reports', 'filter:interval:title:' + interval) %>" data-interval="<%- interval %>">
        <input type="radio" name="interval" value="<%- interval %>"> <%- t('reports', 'filter:interval:' + interval) %>
      </label>
      <% }) %>
    </div>
  </div>
  <div class="form-group">
    <label><%- t('reports', 'filter:divisions') %></label>
    <div id="<%- idPrefix %>-divisions" class="btn-group filter-btn-group" data-toggle="buttons">
      <% divisions.forEach(function(division) { %>
      <label class="btn btn-default" title="<%= division.title %>">
        <input type="checkbox" name="divisions[]" value="<%= division.id %>"> <%= division.label %>
      </label>
      <% }) %>
    </div>
  </div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="mode" type="radio" value="shift">
        <%- t('reports', 'operator:filter:mode:shift') %>
      </label><label>
        <input name="mode" type="radio" value="masters">
        <%- t('reports', 'operator:filter:mode:masters') %>
      </label><label>
        <input name="mode" type="radio" value="operators">
        <%- t('reports', 'operator:filter:mode:operators') %>
      </label>
    </div>
    <div id="<%- idPrefix %>-shift" class="btn-group filter-btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <input type="radio" name="shift" value="1">
        <%- t('core', 'SHIFT:1') %>
      </label>
      <label class="btn btn-default">
        <input type="radio" name="shift" value="2">
        <%- t('core', 'SHIFT:2') %>
      </label>
      <label class="btn btn-default">
        <input type="radio" name="shift" value="3">
        <%- t('core', 'SHIFT:3') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-users" name="users" type="hidden">
  </div>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('reports', 'filter:submit') %></span></button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a data-range="today"><%= t('reports', 'filter:submit:today') %></a></li>
        <li><a data-range="yesterday"><%= t('reports', 'filter:submit:yesterday') %></a></li>
        <li><a data-range="currentWeek"><%= t('reports', 'filter:submit:currentWeek') %></a></li>
        <li><a data-range="prevWeek"><%= t('reports', 'filter:submit:prevWeek') %></a></li>
        <li><a data-range="currentMonth"><%= t('reports', 'filter:submit:currentMonth') %></a></li>
        <li><a data-range="prevMonth"><%= t('reports', 'filter:submit:prevMonth') %></a></li>
        <li><a data-range="q1"><%= t('reports', 'filter:submit:q1') %></a></li>
        <li><a data-range="q2"><%= t('reports', 'filter:submit:q2') %></a></li>
        <li><a data-range="q3"><%= t('reports', 'filter:submit:q3') %></a></li>
        <li><a data-range="q4"><%= t('reports', 'filter:submit:q4') %></a></li>
        <li><a data-range="currentYear" data-interval="quarter"><%= t('reports', 'filter:submit:currentYear') %></a></li>
        <li><a data-range="prevYear" data-interval="quarter"><%= t('reports', 'filter:submit:prevYear') %></a></li>
      </ul>
    </div>
  </div>
</form>
