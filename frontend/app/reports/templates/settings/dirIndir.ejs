<div class="panel-body" data-tab="dirIndir">
  <div class="form-group-horizontal">
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.direct.color',
      label: t('reports', 'settings:color:direct'),
      value: colors.direct
    }) %>
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.directRef.color',
      label: t('reports', 'settings:color:reference'),
      value: colors.directRef
    }) %>
    <div class="form-group">
      <label for="<%- idPrefix %>-directRef"><%- t('reports', 'settings:coeff') %></label>
      <input id="<%- idPrefix %>-directRef" class="form-control" name="reports.directRef.coeff" type="number" min="0" step="0.0001">
    </div>
  </div>
  <div class="form-group-horizontal">
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.indirect.color',
      label: t('reports', 'settings:color:indirect'),
      value: colors.indirect
    }) %>
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.indirectRef.color',
      label: t('reports', 'settings:color:reference'),
      value: colors.indirectRef
    }) %>
    <div class="form-group">
      <label for="<%- idPrefix %>-indirectRef"><%- t('reports', 'settings:coeff') %></label>
      <input id="<%- idPrefix %>-indirectRef" class="form-control" name="reports.indirectRef.coeff" type="number" min="0" step="0.0001">
    </div>
  </div>
  <div class="form-group-horizontal">
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.warehouse.color',
      label: t('reports', 'settings:color:warehouse'),
      value: colors.warehouse
    }) %>
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.warehouseRef.color',
      label: t('reports', 'settings:color:reference'),
      value: colors.warehouseRef
    }) %>
    <div class="form-group">
      <label for="<%- idPrefix %>-warehouseRef"><%- t('reports', 'settings:coeff') %></label>
      <input id="<%- idPrefix %>-warehouseRef" class="form-control" name="reports.warehouseRef.coeff" type="number" min="0" step="0.0001">
    </div>
  </div>
</div>
