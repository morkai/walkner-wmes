<tr data-variable="<%- row.variable %>">
  <td class="is-min text-fixed"><%- row.variable %></td>
  <td class="is-min"><%= row.column %></td>
  <td class="text-fixed"><%= row.formula %></td>
  <td class="actions">
    <div class="actions-group">
      <button data-rearm-action="metricColumns.moveUp" class="btn btn-default" type="button"><i class="fa fa-arrow-up"></i></button>
      <button data-rearm-action="metricColumns.moveDown" class="btn btn-default" type="button"><i class="fa fa-arrow-down"></i></button>
      <button data-rearm-action="metricColumns.edit" class="btn btn-default" type="button"><i class="fa fa-edit"></i></button>
      <button data-rearm-action="metricColumns.delete" class="btn btn-danger" type="button"><i class="fa fa-times"></i></button>
    </div>
  </td>
</tr>
