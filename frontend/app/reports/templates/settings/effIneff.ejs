<div class="panel-body" data-tab="effIneff">
  <div class="form-group-horizontal">
    <div class="form-group">
      <label for="<%- idPrefix %>-absenceRef-prodTask"><%- t('reports', 'settings:absence') %></label>
      <input id="<%- idPrefix %>-absenceRef-prodTask" name="reports.absenceRef.prodTask" type="text">
    </div>
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.absenceRef.color',
      label: t('reports', 'settings:color:reference'),
      value: colors.absenceRef
    }) %>
    <div class="form-group">
      <label for="<%- idPrefix %>-absenceRef-coeff"><%- t('reports', 'settings:coeff') %></label>
      <input id="<%- idPrefix %>-absenceRef-coeff" class="form-control" name="reports.absenceRef.coeff" type="number" min="0" step="0.0001">
    </div>
  </div>
  <div class="form-group-horizontal">
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.dirIndir.color',
      label: t('reports', 'settings:color:dirIndir'),
      value: colors.dirIndir
    }) %>
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.dirIndirRef.color',
      label: t('reports', 'settings:color:reference'),
      value: colors.dirIndirRef
    }) %>
    <div class="form-group">
      <label for="<%- idPrefix %>-dirIndirRef-coeff"><%- t('reports', 'settings:coeff') %></label>
      <input id="<%- idPrefix %>-dirIndirRef-coeff" class="form-control" name="reports.dirIndirRef.coeff" type="number" min="0" step="0.0001">
    </div>
  </div>
  <div class="form-group-horizontal">
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.eff.color',
      label: t('reports', 'settings:color:eff'),
      value: colors.eff
    }) %>
    <%- renderColorPicker({
      idPrefix: idPrefix,
      property: 'reports.ineff.color',
      label: t('reports', 'settings:color:ineff'),
      value: colors.ineff
    }) %>
  </div>
  <p><%- t('reports', 'settings:prodTasks') %></p>
</div>
