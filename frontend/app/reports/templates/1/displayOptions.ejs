<form class="well filter-form">
  <div class="form-group">
    <label for="<%- idPrefix %>-series"><%- t('reports', 'options:series') %></label>
    <select id="<%- idPrefix %>-series" name="series[]" class="form-control is-expandable" size="1" multiple>
      <option value="quantityDone"><%- t('reports', 'coeffs:quantityDone') %></option>
      <option value="efficiency"><%- t('reports', 'coeffs:efficiency') %></option>
      <option value="productivity"><%- t('reports', 'coeffs:productivity') %></option>
      <option value="productivityNoWh"><%- t('reports', 'coeffs:productivityNoWh') %></option>
      <option value="scheduledDowntime"><%- t('reports', 'coeffs:scheduledDowntime') %></option>
      <option value="unscheduledDowntime"><%- t('reports', 'coeffs:unscheduledDowntime') %></option>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-aors"><%- t('reports', 'options:aors') %></label>
    <select id="<%- idPrefix %>-aors" name="aors[]" class="form-control is-expandable" size="1" multiple data-expanded-length="20">
      <% aors.forEach(function(aor) { %>
      <option value="<%- aor.id %>"><%= aor.label %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-reasons"><%- t('reports', 'options:reasons') %></label>
    <select id="<%- idPrefix %>-reasons" name="reasons[]" class="form-control is-expandable" size="1" multiple data-expanded-length="20">
      <% reasons.forEach(function(reason) { %>
      <option value="<%- reason.id %>"><%= reason.label %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-references"><%- t('reports', 'options:references') %></label>
    <select id="<%- idPrefix %>-references" name="references[]" class="form-control is-expandable" size="1" multiple data-expanded-length="20">
      <optgroup label="<%- t('reports', 'options:references:coeffs') %>">
        <option value="efficiency"><%- t('reports', 'coeffs:efficiency') %></option>
        <option value="productivity"><%- t('reports', 'coeffs:productivity') %></option>
        <option value="productivityNoWh"><%- t('reports', 'coeffs:productivityNoWh') %></option>
        <option value="scheduledDowntime"><%- t('reports', 'coeffs:scheduledDowntime') %></option>
        <option value="unscheduledDowntime"><%- t('reports', 'coeffs:unscheduledDowntime') %></option>
      </optgroup>
      <optgroup label="<%- t('reports', 'options:references:aors') %>">
        <% aors.forEach(function(aor) { %>
        <option value="<%- aor.id %>"><%= aor.label %></option>
        <% }) %>
      </optgroup>
      <optgroup label="<%- t('reports', 'options:references:reasons') %>">
        <% reasons.forEach(function(reason) { %>
        <option value="<%- reason.id %>"><%= reason.label %></option>
        <% }) %>
      </optgroup>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-extremes"><%- t('reports', 'options:extremes') %></label>
    <div id="<%- idPrefix %>-extremes" class="btn-group filter-btn-group" data-toggle="buttons">
      <% ['none', 'siblings', 'parent'].forEach(function(extremes) { %>
      <label class="btn btn-default">
        <input type="radio" name="extremes" value="<%- extremes %>"> <%- t('reports', 'options:extremes:' + extremes) %>
      </label>
      <% }) %>
    </div>
  </div>
  <div class="form-group no-label">
    <button id="<%- idPrefix %>-skipEmpty" type="button" name="skipEmpty" class="btn btn-default"><%- t('reports', 'options:skipEmpty') %></button>
  </div>
  <div class="form-group filter-actions">
    <hr>
    <button id="<%- idPrefix %>-showFilter" type="button" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('reports', 'options:filter') %></span></button>
  </div>
</form>
