<form class="well filter-form toolcal-tools-filter" autocomplete="off">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    labels: [
      {text: helpers.t('filter:date:last'), input: {type: 'radio', name: 'dateType', value: 'lastDate'}, ranges: true},
      {text: helpers.t('filter:date:next'), input: {type: 'radio', name: 'dateType', value: 'nextDate'}, ranges: true}
    ]
  }) %>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="mine">
        <%- helpers.t('filter:user:mine') %>
      </label><label>
        <input name="userType" type="radio" value="others">
        <%- helpers.t('filter:user:others') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-status"><%- helpers.t('PROPERTY:status') %></label>
    <select id="<%- idPrefix %>-status" name="status" class="form-control" size="1">
      <option></option>
      <% statuses.forEach(function(status) { %>
        <option value="<%- status %>"><%- helpers.t('status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-type"><%- helpers.t('PROPERTY:type') %></label>
    <select id="<%- idPrefix %>-type" name="type[]" class="form-control is-expandable" multiple size="1" data-expanded-length="15">
      <% types.forEach(function(type) { %>
        <option value="<%- type._id %>"><%= type.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-name"><%- helpers.t('PROPERTY:name') %></label>
    <input id="<%- idPrefix %>-name" name="name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-sn"><%- helpers.t('PROPERTY:sn') %></label>
    <input id="<%- idPrefix %>-sn" name="sn" class="form-control" type="text">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= helpers.t('filter:submit') %></span></button>
  </div>
</form>
