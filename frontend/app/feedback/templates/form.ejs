<form class="feedback-form">
  <div class="form-group">
    <label for="<%- idPrefix %>-summary" class="control-label"><%- t('feedback', 'property:summary') %></label>
    <input id="<%- idPrefix %>-summary" class="form-control" type="text" autocomplete="new-password" name="summary" required>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-comment" class="control-label"><%- t('feedback', 'property:comment') %></label>
    <textarea id="<%- idPrefix %>-comment" class="form-control" name="comment" rows="10" placeholder="<%- t('feedback', 'form:placeholder:comment') %>" required></textarea>
  </div>
  <div class="form-group">
    <div class="checkbox">
      <label><input type="checkbox" name="watch" value="true"> <%- t('feedback', 'form:label:watch') %></label>
    </div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary"><%- t('feedback', 'form:submit') %></button>
  </div>
</form>
