<form class="action-form">
  <div class="form-group">
    <label class="control-label"><%- t('mor', 'watchForm:section') %></label>
    <p class="form-control-static"><%= section %></p>
  </div>
  <div class="form-group has-required-select2">
    <label for="<%- idPrefix %>-user" class="control-label"><%- t('mor', 'watchForm:user') %></label>
    <input id="<%- idPrefix %>-user" type="text" autocomplete="new-password" required value="<%- watch ? watch.user : '' %>">
  </div>
  <div class="form-group">
    <label class="control-label"><%- t('mor', 'watchForm:days') %></label>
    <br>
    <% [1, 2, 3, 4, 5, 6, 7].forEach(function(day) { %>
    <label class="checkbox-inline">
      <input type="checkbox" name="days" value="<%- day %>" <%- watch && watch.days.indexOf(day) !== -1 ? 'checked' : '' %>><%- time.getMoment().startOf('week').day(day).format('ddd') %>
    </label>
    <% }) %>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-from" class="control-label"><%- t('mor', 'watchForm:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control mor-watch-time" value="<%- watch ? watch.from : '06:00' %>" type="text" autocomplete="new-password" required placeholder="00:00" pattern="^[0-9]{2}:[0-9]{2}$">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to" class="control-label"><%- t('mor', 'watchForm:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control mor-watch-time" value="<%- watch ? watch.to : '06:00' %>" type="text" autocomplete="new-password" required placeholder="00:00" pattern="^[0-9]{2}:[0-9]{2}$">
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary"><%- t('mor', 'watchForm:submit:' + mode) %></button>
    <button type="button" class="cancel btn btn-link"><%- t('mor', 'watchForm:cancel') %></button>
  </div>
</form>
