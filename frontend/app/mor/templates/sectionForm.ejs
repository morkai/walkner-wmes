<form class="action-form">
  <div class="form-group">
    <label for="<%- idPrefix %>-name" class="control-label"><%- t('mor', 'sectionForm:name') %></label>
    <input id="<%- idPrefix %>-name" class="form-control" value="<%- section ? section.name : '' %>" type="text" required>
  </div>
  <div class="checkbox">
    <label>
      <input id="<%- idPrefix %>-watchEnabled" value="1" type="checkbox" <%- section && section.watchEnabled ? 'checked' : '' %>>
      <%- t('mor', 'sectionForm:watchEnabled') %>
    </label>
  </div>
  <div class="checkbox">
    <label>
      <input id="<%- idPrefix %>-mrpsEnabled" value="1" type="checkbox" <%- section && section.mrpsEnabled ? 'checked' : '' %>>
      <%- t('mor', 'sectionForm:mrpsEnabled') %>
    </label>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-prodFunctions"><%- t('mor', 'sectionForm:prodFunctions') %></label>
    <input id="<%- idPrefix %>-prodFunctions" type="text" value="<%- section ? section.prodFunctions.join(',') : '' %>">
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary"><%- t('mor', 'sectionForm:submit:' + nlsSuffix) %></button>
    <button type="button" class="cancel btn btn-link"><%- t('mor', 'sectionForm:cancel') %></button>
  </div>
</form>
