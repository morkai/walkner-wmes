<form method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-_id" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-_id" class="form-control" type="text" name="_id" maxlength="12" required autofocus pattern="^[0-9]{12}$">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:description') %></label>
        <input id="<%- idPrefix %>-description" class="form-control" type="text" name="description" maxlength="100" required>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-weight" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:weight') %></label>
        <input id="<%- idPrefix %>-weight" class="form-control" type="number" name="weight" required min="1" step="1">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
