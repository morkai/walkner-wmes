<form method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-nc12" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:nc12') %></label>
        <input id="<%- idPrefix %>-nc12" class="form-control" type="text" name="nc12" maxlength="12" required autofocus pattern="^[0-9]{12}$">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:description') %></label>
        <input id="<%- idPrefix %>-description" class="form-control" type="text" name="description" maxlength="100" required>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-minWeight" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:minWeight') %></label>
        <input id="<%- idPrefix %>-minWeight" class="form-control" type="number" name="minWeight" required min="1" step="1">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-maxWeight" class="control-label is-required"><%- t('xiconfComponentWeights', 'PROPERTY:maxWeight') %></label>
        <input id="<%- idPrefix %>-maxWeight" class="form-control" type="number" name="maxWeight" required min="1" step="1">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
