<form class="well filter-form">
  <% ['_id', 'description'].forEach(function(prop) { %>
  <div class="form-group">
    <label for="<%- idPrefix %>-<%- prop %>"><%- t('xiconfComponentWeights', 'PROPERTY:' + prop) %></label>
    <input id="<%- idPrefix %>-<%- prop %>" class="form-control" name="<%- prop %>" type="text">
  </div>
  <% }) %>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('xiconfComponentWeights', 'filter:submit') %></span></button>
  </div>
</form>
