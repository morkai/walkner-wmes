<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <% ['active', 'external', 'employer'].forEach(prop => { %>
        <div class="checkbox">
          <label class="control-label">
            <input type="checkbox" name="<%- prop %>" value="true">
            <%- t(`PROPERTY:${prop}`) %>
          </label>
        </div>
      <% }) %>
      <%- helpers.formGroup({
        name: 'shortName',
        label: 'PROPERTY:',
        required: true,
        maxLength: 50
      }) %>
      <%- helpers.formGroup({
        name: 'longName',
        label: 'PROPERTY:',
        required: true,
        maxLength: 200
      }) %>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
