<form class="snf-programs-form" method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- helpers.t('PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required autofocus maxlength="150">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-kind" class="control-label"><%- helpers.t('PROPERTY:kind') %></label>
        <select id="<%- idPrefix %>-kind" name="kind">
          <% kinds.forEach(function(kind) { %>
          <option value="<%- kind %>"><%- helpers.t('kind:' + kind) %></option>
          <% }) %>
        </select>
      </div>
      <div class="row snf-programs-form-choices">
        <div class="col-md-3 form-group">
          <label for="<%- idPrefix %>-lightSourceType" class="control-label"><%- helpers.t('PROPERTY:lightSourceType') %></label>
          <select id="<%- idPrefix %>-lightSourceType" name="lightSourceType">
            <% lightSourceTypes.forEach(function(lightSourceType) { %>
            <option value="<%- lightSourceType %>"><%- helpers.t('lightSourceType:' + lightSourceType) %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-3 form-group">
          <label for="<%- idPrefix %>-bulbPower" class="control-label"><%- helpers.t('PROPERTY:bulbPower') %></label>
          <select id="<%- idPrefix %>-bulbPower" name="bulbPower">
            <% bulbPowers.forEach(function(bulbPower) { %>
            <option value="<%- bulbPower %>"><%- helpers.t('bulbPower:' + bulbPower) %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-3 form-group">
          <label for="<%- idPrefix %>-ballast" class="control-label"><%- helpers.t('PROPERTY:ballast') %></label>
          <select id="<%- idPrefix %>-ballast" name="ballast">
            <% ballasts.forEach(function(ballast) { %>
            <option value="<%- ballast %>"><%- helpers.t('ballast:' + ballast) %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-3 form-group">
          <label for="<%- idPrefix %>-ignitron" class="control-label"><%- helpers.t('PROPERTY:ignitron') %></label>
          <select id="<%- idPrefix %>-ignitron" name="ignitron">
            <% ignitrons.forEach(function(ignitron) { %>
            <option value="<%- ignitron %>"><%- helpers.t('ignitron:' + ignitron) %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-waitForStartTime" class="control-label"><%- helpers.t('PROPERTY:waitForStartTime') %></label>
          <input id="<%- idPrefix %>-waitForStartTime" class="form-control snf-programs-form-time" type="text" name="waitForStartTime" required>
        </div>
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-illuminationTime" class="control-label"><%- helpers.t('PROPERTY:illuminationTime') %></label>
          <input id="<%- idPrefix %>-illuminationTime" class="form-control snf-programs-form-time" type="text" name="illuminationTime">
        </div>
      </div>
      <div id="<%- idPrefix %>-hrs" class="row">
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-hrsInterval" class="control-label"><%- helpers.t('PROPERTY:hrsInterval') %></label>
          <input id="<%- idPrefix %>-hrsInterval" class="form-control snf-programs-form-time" type="text" name="hrsInterval" required>
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-hrsTime" class="control-label"><%- helpers.t('PROPERTY:hrsTime') %></label>
          <input id="<%- idPrefix %>-hrsTime" class="form-control snf-programs-form-time" type="text" name="hrsTime">
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-hrsCount" class="control-label"><%- helpers.t('PROPERTY:hrsCount') %></label>
          <input id="<%- idPrefix %>-hrsCount" class="form-control" type="number" name="hrsCount">
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <div class="checkbox">
              <label><input id="<%- idPrefix %>-limitSwitch" type="checkbox" name="limitSwitch" value="true"> <%- helpers.t('PROPERTY:limitSwitch') %></label>
            </div>
            <div class="checkbox">
              <label><input id="<%- idPrefix %>-lampBulb" type="checkbox" name="lampBulb" value="true"> <%- helpers.t('PROPERTY:lampBulb') %></label>
            </div>
            <div class="checkbox">
              <label><input id="<%- idPrefix %>-lightSensors" type="checkbox" name="lightSensors" value="true"> <%- helpers.t('PROPERTY:lightSensors') %></label>
            </div>
            <div class="checkbox">
              <label><input id="<%- idPrefix %>-bulbHolder" type="checkbox" name="bulbHolder" value="true"> <%- helpers.t('PROPERTY:bulbHolder') %></label>
            </div>
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-lampCount" class="control-label"><%- helpers.t('PROPERTY:lampCount') %></label>
            <div class="radio">
              <label><input id="<%- idPrefix %>-lampCount" type="radio" name="lampCount" value="1"> <%- helpers.t('lampCount:1') %></label>
            </div>
            <div class="radio">
              <label><input type="radio" name="lampCount" value="2"> <%- helpers.t('lampCount:2') %></label>
            </div>
            <div class="radio">
              <label><input type="radio" name="lampCount" value="3"> <%- helpers.t('lampCount:3') %></label>
            </div>
          </div>
          <div class="form-group form-group-last">
            <label for="<%- idPrefix %>-interlock" class="control-label"><%- helpers.t('PROPERTY:interlock') %></label>
            <div class="radio">
              <label><input id="<%- idPrefix %>-interlock" type="radio" name="interlock" value="1"> <%- helpers.t('interlock:1') %></label>
            </div>
            <div class="radio">
              <label><input id="<%- idPrefix %>-interlock" type="radio" name="interlock" value="1+2"> <%- helpers.t('interlock:1+2') %></label>
            </div>
            <div class="radio">
              <label><input id="<%- idPrefix %>-interlock" type="radio" name="interlock" value="mnh"> <%- helpers.t('interlock:mnh') %></label>
            </div>
          </div>
        </div>
        <div class="col-md-4 form-group">
          <label class="control-label"><%- helpers.t('PROPERTY:contactors') %></label>
          <% contactors.forEach(function(contactor) { %>
          <div class="checkbox">
            <label><input type="checkbox" name="<%- contactor %>"> <%- helpers.t('PROPERTY:' + contactor) %></label>
          </div>
          <% }) %>
        </div>
        <div class="col-md-4">
          <div class="row">
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-minCurrent" class="control-label"><%- helpers.t('PROPERTY:minCurrent') %></label>
              <input id="<%- idPrefix %>-minCurrent" class="form-control" type="number" name="minCurrent" min="0" max="100">
            </div>
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-maxCurrent" class="control-label"><%- helpers.t('PROPERTY:maxCurrent') %></label>
              <input id="<%- idPrefix %>-maxCurrent" class="form-control" type="number" name="maxCurrent" min="0" max="100">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
