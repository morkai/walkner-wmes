<form class="well filter-form">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    type: 'date',
    startHour: 6
  }) %>
  <div class="form-group">
    <label><%- t('core', 'filter:shift') %></label>
    <div id="<%- idPrefix %>-shift" class="btn-group filter-btn-group" data-toggle="buttons">
      <% [0, 1, 2, 3].forEach(function(shift) { %>
      <label class="btn btn-default">
        <input type="radio" name="shift" value="<%- shift %>"> <%- t('core', 'SHIFT:' + shift) %>
      </label>
      <% }) %>
    </div>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-orderMrp"><%- helpers.t('filter:orderMrp') %></label>
    <input id="<%- idPrefix %>-orderMrp" name="orderMrp" type="text" autocomplete="new-password" data-placeholder=" ">
  </div>
  <div id="<%- idPrefix %>-orgUnit" class="form-group"></div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= helpers.t('filter:submit') %></span></button>
  </div>
</form>
