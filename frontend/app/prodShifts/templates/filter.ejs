<div class="well">
  <form id="<%- idPrefix %>-form" class="filter-form">
    <div class="form-group">
      <label for="<%- idPrefix %>-from"><%- t('prodShifts', 'FILTER:DATE:FROM') %></label>
      <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="YYYY-MM-DD">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-to"><%- t('prodShifts', 'FILTER:DATE:TO') %></label>
      <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="YYYY-MM-DD">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-shift-any"><%- t('prodShifts', 'PROPERTY:shift') %></label>
      <div class="filter-radio-group">
        <label class="radio-inline">
          <input id="<%- idPrefix %>-shift-any" name="shift" type="radio" value="0">
          <%- t('core', 'SHIFT:ANY') %>
        </label>
        <label class="radio-inline">
          <input name="shift" type="radio" value="1">
          <%- t('core', 'SHIFT:1') %>
        </label>
        <label class="radio-inline">
          <input name="shift" type="radio" value="2">
          <%- t('core', 'SHIFT:2') %>
        </label>
        <label class="radio-inline">
          <input name="shift" type="radio" value="3">
          <%- t('core', 'SHIFT:3') %>
        </label>
      </div>
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-prodLine"><%- t('prodShifts', 'PROPERTY:prodLine') %></label>
      <input id="<%- idPrefix %>-prodLine" name="prodLine" type="text" data-placeholder="<%- t('prodShifts', 'FILTER:PLACEHOLDER:prodLine') %>">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-limit"><%- t('prodShifts', 'FILTER:LIMIT') %></label>
      <input id="<%- idPrefix %>-limit" class="form-control" name="limit" type="number" value="25" min="5" max="100" step="1">
    </div><div
      class="form-group filter-actions">
      <input type="submit" class="btn btn-primary" value="<%= t('prodShifts', 'FILTER:BUTTON') %>">
    </div>
  </form>
</div>
