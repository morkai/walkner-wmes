<form class="prodTasks-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('prodTasks', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" value="" autofocus required maxlength="150">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-tags" class="control-label"><%- t('prodTasks', 'PROPERTY:tags') %></label>
        <input id="<%- idPrefix %>-tags" type="text" name="tags" value="">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-color" class="control-label"><%- t('prodTasks', 'PROPERTY:clipColor') %></label>
        <div class="input-group colorpicker-component prodTasks-form-color-picker" data-color="<%- model.clipColor %>" data-color-format="hex">
          <input id="<%- idPrefix %>-color" class="form-control prodTasks-form-color-input" name="clipColor" type="text" value="<%- model.clipColor %>">
          <span class="input-group-addon"><i style="background-color: <%- model.clipColor %>"></i></span>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label checkbox">
          <input type="checkbox" name="fteDiv" value="true">
          <%- t('prodTasks', 'PROPERTY:fteDiv') %>
        </label>
      </div>
      <div class="form-group">
        <label class="control-label checkbox">
          <input type="checkbox" name="inProd" value="true">
          <%- t('prodTasks', 'PROPERTY:inProd') %>
        </label>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
