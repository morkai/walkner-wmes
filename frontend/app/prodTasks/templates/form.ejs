<form class="prodTasks-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- t('prodTasks', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" autofocus required maxlength="150">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-parent" class="control-label"><%- t('prodTasks', 'PROPERTY:parent') %></label>
        <input id="<%- idPrefix %>-parent" type="text" name="parent">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-tags" class="control-label"><%- t('prodTasks', 'PROPERTY:tags') %></label>
        <input id="<%- idPrefix %>-tags" type="text" name="tags" value="">
      </div>
      <%- renderColorPicker({idPrefix: idPrefix, label: t('prodTasks', 'PROPERTY:clipColor'), property: 'clipColor', value: model.clipColor}) %>
      <div class="checkbox">
        <label class="control-label">
          <input id="<%- idPrefix %>-fteDiv" type="checkbox" name="fteDiv" value="true">
          <%- t('prodTasks', 'PROPERTY:fteDiv') %>
        </label>
      </div>
      <div class="checkbox">
        <label class="control-label">
          <input id="<%- idPrefix %>-inProd" type="checkbox" name="inProd" value="true">
          <%- t('prodTasks', 'PROPERTY:inProd') %>
        </label>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
