<form class="prodTasks-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('prodTasks', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" value="" autofocus required maxlength="150">
      </div>
      <div class="checkbox">
        <label class="control-label">
          <input type="checkbox" name="fteMaster" value="true">
          <%- t('prodTasks', 'PROPERTY:fteMaster') %>
        </label>
      </div>
      <div class="checkbox">
        <label class="control-label">
          <input type="checkbox" name="fteLeader" value="true">
          <%- t('prodTasks', 'PROPERTY:fteLeader') %>
        </label>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
