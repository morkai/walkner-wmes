<form class="well filter-form d8Entries-filter">
  <div class="form-group">
    <label for="<%- idPrefix %>-from"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="mine">
        <%- t('d8Entries', 'filter:user:mine') %>
      </label><label>
        <input name="userType" type="radio" value="unseen">
        <%- t('d8Entries', 'filter:user:unseen') %>
      </label><label>
        <input name="userType" type="radio" value="owner">
        <%- t('d8Entries', 'filter:user:owner') %>
      </label><label>
        <input name="userType" type="radio" value="others">
        <%- t('d8Entries', 'filter:user:others') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-status"><%- t('d8Entries', 'PROPERTY:status') %></label>
    <select id="<%- idPrefix %>-status" name="status" class="form-control" size="1">
      <option></option>
      <% statuses.forEach(function(status) { %>
      <option value="<%- status %>"><%- t('d8Entries', 'status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-area"><%- t('d8Entries', 'PROPERTY:area') %></label>
    <select id="<%- idPrefix %>-area" name="area" class="form-control" size="1">
      <option></option>
      <% areas.forEach(function(area) { %>
      <option value="<%- area._id %>"><%= area.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-entrySource"><%- t('d8Entries', 'PROPERTY:entrySource') %></label>
    <select id="<%- idPrefix %>-entrySource" name="entrySource" class="form-control" size="1">
      <option></option>
      <% entrySources.forEach(function(entrySource) { %>
      <option value="<%- entrySource._id %>"><%= entrySource.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-problemSource"><%- t('d8Entries', 'PROPERTY:problemSource') %></label>
    <select id="<%- idPrefix %>-problemSource" name="section" class="form-control" size="1">
      <option></option>
      <% problemSources.forEach(function(problemSource) { %>
      <option value="<%- problemSource._id %>"><%= problemSource.name %></option>
      <% }) %>
    </select>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('d8Entries', 'filter:submit') %></span></button>
  </div>
</form>
