<tr>
  <td class="is-min">
    <input type="hidden" name="observations[<%- i %>].behavior" value="<%- observation.id %>">
    <%= observation.behavior %>
  </td>
  <td class="is-min behaviorObsCards-form-radio">
    <input type="radio" name="observations[<%- i %>].safe" value="1" <%- observation.safe === true ? 'checked' : '' %>>
  </td>
  <td class="is-min behaviorObsCards-form-radio">
    <input type="radio" name="observations[<%- i %>].safe" value="0" <%- observation.safe === false ? 'checked' : '' %>>
  </td>
  <td class="behaviorObsCards-form-textarea">
    <textarea class="form-control" name="observations[<%- i %>].observation" rows="2" required <%- observation.safe !== false ? 'disabled' : '' %>><%= observation.observation %></textarea>
  </td>
  <td class="behaviorObsCards-form-textarea">
    <textarea class="form-control" name="observations[<%- i %>].cause" rows="2" required <%- observation.safe !== false ? 'disabled' : '' %>><%= observation.cause %></textarea>
  </td>
  <td class="is-min behaviorObsCards-form-radio">
    <input type="radio" name="observations[<%- i %>].easy" value="1" required <%- observation.safe === false && observation.easy === true ? 'checked' : '' %> <%- observation.safe !== false ? 'disabled' : '' %>>
  </td>
  <td class="is-min behaviorObsCards-form-radio">
    <input type="radio" name="observations[<%- i %>].easy" value="0" required <%- observation.safe === false && observation.easy === false ? 'checked' : '' %> <%- observation.safe !== false ? 'disabled' : '' %>>
    <input type="radio" name="observations[<%- i %>].safe" value="-1" tabindex="-1" <%- observation.safe === null ? 'checked' : '' %>>
  </td>
</tr>
