<form class="well filter-form behaviorObsCards-filter">
  <div class="form-group">
    <label for="<%- idPrefix %>-from"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="mine">
        <%- helpers.t('filter:user:mine') %>
      </label><label>
        <input name="userType" type="radio" value="observer">
        <%- helpers.t('filter:user:observer') %>
      </label><label>
        <input name="userType" type="radio" value="superior">
        <%- helpers.t('filter:user:superior') %>
      </label><label>
        <input name="userType" type="radio" value="others">
        <%- helpers.t('filter:user:others') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-section"><%- helpers.t('PROPERTY:section') %></label>
    <select id="<%- idPrefix %>-section" name="section[]" class="form-control is-expandable" multiple size="1" data-expanded-length="15">
      <% sections.forEach(function(section) { %>
      <option value="<%- section._id %>"><%= section.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label><%- helpers.t('filter:anyHard') %></label>
    <div id="<%- idPrefix %>-anyHard" class="btn-group filter-btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <input type="checkbox" name="anyHard[]" value="observations"> <%- helpers.t('filter:anyHard:observations') %>
      </label>
      <label class="btn btn-default">
        <input type="checkbox" name="anyHard[]" value="risks"> <%- helpers.t('filter:anyHard:risks') %>
      </label>
    </div>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= helpers.t('filter:submit') %></span></button>
  </div>
</form>
