<form class="companies-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- helpers.t('PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" autocomplete="new-password" name="name" required maxlength="100">
      </div>
      <%- renderColorPicker({idPrefix: idPrefix, property: 'color', label: helpers.t('PROPERTY:color'), value: model.color}) %>
      <div class="form-group">
        <label for="<%- idPrefix %>-cags" class="control-label"><%- helpers.t('PROPERTY:cags') %></label>
        <input id="<%- idPrefix %>-cags" type="text" autocomplete="new-password" name="cags">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
