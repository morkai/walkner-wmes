<form id="<%- idPrefix %>-form" class="well filter-form">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'time',
    type: 'date+time',
    startHour: 6,
    labels: {text: t('events', 'PROPERTY:time'), ranges: '+shifts'}
  }) %>
  <div class="form-group">
    <label for="<%- idPrefix %>-type"><%- t('events', 'PROPERTY:type') %></label>
    <input id="<%- idPrefix %>-type" name="type" type="text" placeholder="<%= t('events', 'filter:placeholder:type') %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-user"><%- t('events', 'PROPERTY:user') %></label>
    <input id="<%- idPrefix %>-user" name="user" type="text" autocomplete="new-password">
  </div>
  <%- renderLimit() %>
  <div class="form-group">
    <label><%- t('events', 'PROPERTY:severity') %></label>
    <div id="<%- idPrefix %>-severity" class="btn-group filter-btn-group" data-toggle="buttons-checkbox">
      <button class="btn btn-default" type="button" value="debug">&nbsp;</button>
      <button class="btn btn-info" type="button" value="info">&nbsp;</button>
      <button class="btn btn-success" type="button" value="success">&nbsp;</button>
      <button class="btn btn-warning" type="button" value="warning">&nbsp;</button>
      <button class="btn btn-danger" type="button" value="error">&nbsp;</button>
    </div>
  </div>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('events', 'filter:submit') %></span></button>
  </div>
</form>
