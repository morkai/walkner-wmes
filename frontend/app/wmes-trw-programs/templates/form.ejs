<form class="trw-programs-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- helpers.t('PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" autocomplete="new-password" name="name" required maxlength="100">
      </div>
      <div class="form-group has-required-select2">
        <label for="<%- idPrefix %>-base" class="control-label is-required"><%- helpers.t('PROPERTY:base') %></label>
        <input id="<%- idPrefix %>-base" type="text" autocomplete="new-password" name="base" required>
      </div>
      <div class="trw-programs-canvasAndSteps">
        <div class="trw-programs-canvas">
          <div class="trw-base-canvas-outer trw-base-canvas-no-endpoints">
            <div id="<%- idPrefix %>-canvas" class="trw-base-canvas-inner"></div>
          </div>
          <div class="trw-testing-ft">
            <div id="<%- idPrefix %>-no" class="trw-testing-app"><%- helpers.t('PROPERTY:steps.no', {no: '?'}) %></div>
            <% ['source', 'target', 'length', 'color'].forEach(function(prop, i) { %>
              <div class="trw-testing-prop <%- i < 2 ? 'is-unclickable' : '' %>" data-prop="<%- prop %>">
                <div class="trw-testing-prop-name"><%- helpers.t('PROPERTY:steps.' + prop) %></div>
                <div class="trw-testing-prop-value">?</div>
              </div>
            <% }) %>
          </div>
        </div>
        <div id="<%- idPrefix %>-steps" class="trw-programs-steps">
          <div class="btn-toolbar">
            <div class="btn-group">
              <button id="<%- idPrefix %>-steps-add" class="btn btn-default" type="button" title="<%- helpers.t('form:steps:add') %>"><i class="fa fa-plus"></i></button>
            </div>
            <div class="btn-group">
              <button id="<%- idPrefix %>-steps-up" class="btn btn-default" type="button" title="<%- helpers.t('form:steps:up') %>"><i class="fa fa-arrow-up"></i></button>
              <button id="<%- idPrefix %>-steps-down" class="btn btn-default" type="button" title="<%- helpers.t('form:steps:down') %>"><i class="fa fa-arrow-down"></i></button>
            </div>
            <div class="btn-group">
              <button id="<%- idPrefix %>-steps-delete" class="btn btn-default" type="button" title="<%- helpers.t('form:steps:delete') %>"><i class="fa fa-trash"></i></button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
