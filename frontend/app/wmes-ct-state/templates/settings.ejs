<form class="settings fap-settings" autocomplete="off">
  <div class="list-group">
    <a class="list-group-item" href="#ct/settings?tab=resultsReport" data-tab="resultsReport"><%- helpers.t('settings:tab:resultsReport') %></a>
  </div>
  <div class="panel panel-primary">
    <div class="panel-body" data-tab="resultsReport">
      <div class="form-group">
        <label for="<%- idPrefix %>-minLineWorkDuration"><%- helpers.t('settings:resultsReport:minLineWorkDuration') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:minLineWorkDuration:help') %></p>
        <input id="<%- idPrefix %>-minLineWorkDuration" name="ct.reports.results.minLineWorkDuration" class="form-control" type="number" min="0" step="0.1">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-shiftCount"><%- helpers.t('settings:resultsReport:shiftCount') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:shiftCount:help') %></p>
        <input id="<%- idPrefix %>-shiftCount" name="ct.reports.results.shiftCount" class="form-control" type="number" min="1" max="3">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-availableWorkDuration"><%- helpers.t('settings:resultsReport:availableWorkDuration') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:availableWorkDuration:help') %></p>
        <input id="<%- idPrefix %>-availableWorkDuration" name="ct.reports.results.availableWorkDuration" class="form-control" type="number" min="0.1" max="8" step="0.1">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-minMrpUnbalance"><%- helpers.t('settings:resultsReport:minMrpUnbalance') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:minMrpUnbalance:help') %></p>
        <input id="<%- idPrefix %>-minMrpUnbalance" name="ct.reports.results.minMrpUnbalance" class="form-control" type="number" min="0" max="100">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-minMrpEfficiency"><%- helpers.t('settings:resultsReport:minMrpEfficiency') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:minMrpEfficiency:help') %></p>
        <input id="<%- idPrefix %>-minMrpEfficiency" name="ct.reports.results.minMrpEfficiency" class="form-control" type="number" min="0" max="100">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-minUpphWorkDuration"><%- helpers.t('settings:resultsReport:minUpphWorkDuration') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:minUpphWorkDuration:help') %></p>
        <input id="<%- idPrefix %>-minUpphWorkDuration" name="ct.reports.results.minUpphWorkDuration" class="form-control" type="number" min="0" max="480" step="1">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-ignoredMrps"><%- helpers.t('settings:resultsReport:ignoredMrps') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:ignoredMrps:help') %></p>
        <input id="<%- idPrefix %>-ignoredMrps" name="ct.reports.results.ignoredMrps" type="text" data-setting>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-includedMrps"><%- helpers.t('settings:resultsReport:includedMrps') %></label>
        <p class="help-block"><%- helpers.t('settings:resultsReport:includedMrps:help') %></p>
        <input id="<%- idPrefix %>-includedMrps" name="ct.reports.results.includedMrps" type="text" data-setting>
      </div>
    </div>
  </div>
</form>
