<form class="well filter-form">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    type: 'date+time',
    property: 'startedAt',
    startHour: 6,
    labels: [{text: t('PROPERTY:startedAt'), ranges: true}]
  }) %>
  <div class="form-group">
    <label for="<%- idPrefix %>-user"><%- t('PROPERTY:user') %></label>
    <input id="<%- idPrefix %>-user" name="user" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-reason"><%- t('PROPERTY:reason') %></label>
    <input id="<%- idPrefix %>-reason" name="reason" type="text" autocomplete="new-password">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('core', 'filter:submit') %></span></button>
  </div>
</form>
