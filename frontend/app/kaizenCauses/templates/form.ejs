<form method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-id" class="control-label"><%- t('kaizenCauses', 'PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-id" class="form-control" type="text" name="_id" autofocus required maxlength="20" pattern="^[A-Za-z0-9-]+$">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('kaizenCauses', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required maxlength="100">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label"><%- t('kaizenCauses', 'PROPERTY:description') %></label>
        <textarea id="<%- idPrefix %>-description" class="form-control" name="description" rows="4"></textarea>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-position" class="control-label is-required"><%- t('kaizenCauses', 'PROPERTY:position') %></label>
        <input id="<%- idPrefix %>-position" class="form-control" type="number" name="position" min="0" required>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
