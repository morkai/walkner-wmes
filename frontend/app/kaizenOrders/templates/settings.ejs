<form class="settings kaizen-settings">
  <div class="list-group">
    <% ['general', 'reward', 'fm24'].forEach(function(tab) { %>
    <a class="list-group-item" href="#kaizenOrders;settings?tab=<%- tab %>" data-tab="<%- tab %>"><%- t('settings:tab:' + tab) %></a>
    <% }) %>
  </div>
  <div class="panel panel-primary">
    <div class="panel-body" data-tab="general">
      <div class="form-group">
        <label for="<%- id('superiorFuncs') %>"><%- t('settings:superiorFuncs') %></label>
        <input id="<%- id('superiorFuncs') %>" name="kaizen.superiorFuncs" type="text" autocomplete="new-password" data-setting>
      </div>
    </div>
    <div class="panel-body" data-tab="reward">
      <div class="form-group">
        <label for="<%- id('reward-kz') %>"><%- t('settings:reward:kz') %></label>
        <input id="<%- id('reward-kz') %>" name="kaizen.reward.kz" type="number" class="form-control" min="0" step="0.01">
      </div>
      <div class="form-group">
        <label for="<%- id('reward-kom') %>"><%- t('settings:reward:kom') %></label>
        <input id="<%- id('reward-kom') %>" name="kaizen.reward.kom" type="number" class="form-control" min="0" step="0.01">
      </div>
    </div>
    <div class="panel-body" data-tab="fm24">
      <div class="form-group">
        <label for="<%- id('fm24-subject') %>"><%- t('settings:fm24:subject') %></label>
        <input id="<%- id('fm24-subject') %>" class="form-control" name="kaizen.fm24.subject" type="text" autocomplete="new-password" data-change-delay="0">
      </div>
      <div class="form-group">
        <label for="<%- id('fm24-message') %>"><%- t('settings:fm24:message') %></label>
        <textarea id="<%- id('fm24-message') %>" class="form-control text-mono" name="kaizen.fm24.message" rows="10" data-keyup-delay="10000" data-change-delay="0"></textarea>
      </div>
    </div>
  </div>
</form>
