<form class="well filter-form kaizenOrders-filter">
  <div class="form-group">
    <label for="<%- idPrefix %>-from"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="mine">
        <%- t('kaizenOrders', 'filter:user:mine') %>
      </label><label>
        <input name="userType" type="radio" value="unseen">
        <%- t('kaizenOrders', 'filter:user:unseen') %>
      </label><label>
        <input name="userType" type="radio" value="creator">
        <%- t('kaizenOrders', 'filter:user:creator') %>
      </label><label>
        <input name="userType" type="radio" value="others">
        <%- t('kaizenOrders', 'filter:user:others') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="text">
  </div>
  <% if (multi) { %>
  <div class="form-group">
    <label for="<%- idPrefix %>-types"><%- t('kaizenOrders', 'PROPERTY:types') %></label>
    <select id="<%- idPrefix %>-types" name="types" class="form-control" size="1">
      <option></option>
      <% types.forEach(function(type) { %>
      <option value="<%- type %>"><%- t('kaizenOrders', 'type:short:' + type) %></option>
      <% }) %>
    </select>
  </div>
  <% } %>
  <div class="form-group">
    <label for="<%- idPrefix %>-status"><%- t('kaizenOrders', 'PROPERTY:status') %></label>
    <select id="<%- idPrefix %>-status" name="status" class="form-control" size="1">
      <option></option>
      <% statuses.forEach(function(status) { %>
      <option value="<%- status %>"><%- t('kaizenOrders', 'status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-area"><%- t('kaizenOrders', 'PROPERTY:area') %></label>
    <select id="<%- idPrefix %>-area" name="area" class="form-control" size="1">
      <option></option>
      <% areas.forEach(function(area) { %>
      <option value="<%- area._id %>"><%= area.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-cause"><%- t('kaizenOrders', 'filter:cause') %></label>
    <select id="<%- idPrefix %>-cause" name="cause" class="form-control" size="1">
      <option></option>
      <% causes.forEach(function(cause) { %>
      <option value="<%- cause._id %>"><%= cause.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-risk"><%- t('kaizenOrders', 'PROPERTY:risk') %></label>
    <select id="<%- idPrefix %>-risk" name="risk" class="form-control" size="1">
      <option></option>
      <% risks.forEach(function(risk) { %>
      <option value="<%- risk._id %>"><%= risk.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-category"><%- t('kaizenOrders', 'PROPERTY:category') %></label>
    <select id="<%- idPrefix %>-category" name="category" class="form-control" size="1">
      <option></option>
      <optgroup label="<%- t('kaizenOrders', 'type:nearMiss') %>">
        <% nearMissCategories.forEach(function(category) { %>
        <option value="nearMiss.<%- category._id %>"><%= category.name %></option>
        <% }) %>
      </optgroup>
      <optgroup label="<%- t('kaizenOrders', 'type:suggestion') %>">
        <% suggestionCategories.forEach(function(category) { %>
        <option value="suggestion.<%- category._id %>"><%= category.name %></option>
        <% }) %>
      </optgroup>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-section"><%- t('kaizenOrders', 'PROPERTY:section') %></label>
    <select id="<%- idPrefix %>-section" name="section" class="form-control" size="1">
      <option></option>
      <% sections.forEach(function(section) { %>
      <option value="<%- section._id %>"><%= section.name %></option>
      <% }) %>
    </select>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('kaizenOrders', 'filter:submit') %></span></button>
  </div>
</form>
