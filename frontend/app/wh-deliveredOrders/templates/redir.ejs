<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%= formMethod %>">
  <div class="form-group has-required-select2">
    <label  for="<%- id('redirReason') %>" class="control-label is-required"><%- t('redir:redirReason') %></label>
    <input id="<%- id('redirReason') %>" name="redirReason" type="text" required autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- id('comment') %>" class="control-label"><%- t('redir:comment') %></label>
    <textarea id="<%- id('comment') %>" name="comment" class="form-control" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label  for="<%- id('sapOrder') %>" class="control-label is-required"><%- t('redir:sapOrder') %></label>
    <input id="<%- id('sapOrder') %>" name="sapOrder" class="form-control" type="text" required pattern="^[0-9]{9}$" autocomplete="new-password">
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="<%- id('sourceLine') %>" class="control-label"><%- t('redir:sourceLine') %></label>
        <input id="<%- id('sourceLine') %>" name="sourceLine" type="text">
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('redir:sourceQty') %></label>
        <p id="<%- id('sourceQty') %>" class="form-control-static" style="height: 34px">?</p>
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('redir:pceTime') %></label>
        <p id="<%- id('sourcePceTime') %>" class="form-control-static" style="height: 34px">?</p>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group has-required-select2">
        <label for="<%- id('targetLine') %>" class="control-label is-required"><%- t('redir:targetLine') %></label>
        <input id="<%- id('targetLine') %>" name="targetLine" type="text" required>
      </div>
      <div class="form-group">
        <label for="<%- id('targetQty') %>" class="control-label is-required"><%- t('redir:targetQty') %></label>
        <input id="<%- id('targetQty') %>" name="targetQty" class="form-control" type="number" required min="1" max="999">
      </div>
      <div class="form-group">
        <label for="<%- id('targetPceTime') %>" class="control-label is-required"><%- t('redir:pceTime') %></label>
        <input id="<%- id('targetPceTime') %>" name="pceTime" class="form-control" type="text" required pattern="^[0-9]{2}:[0-9]{2}:[0-9]{2}$">
      </div>
    </div>
  </div>
  <p id="<%- id('noSourceMsg') %>" class="message message-inline message-warning text-justify hidden" style="margin-top: 15px"><%- t('redir:msg:noSource') %></p>
  <div class="form-actions">
    <button id="<%- id('submit') %>" class="btn btn-primary" type="submit"><%- t('redir:submit') %></button>
    <button class="btn btn-link cancel" type="button"><%- t('core', 'ACTION_FORM:BUTTON:cancel') %></button>
  </div>
</form>
