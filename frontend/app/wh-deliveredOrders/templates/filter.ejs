<form class="well filter-form">
  <div class="form-group">
    <label for="<%- idPrefix %>-line"><%- t('PROPERTY:line') %></label>
    <input id="<%- idPrefix %>-line" name="line" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-sapOrder"><%- t('PROPERTY:sapOrder') %></label>
    <input id="<%- idPrefix %>-sapOrder" name="sapOrder" class="form-control" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-status"><%- t('PROPERTY:status') %></label>
    <select id="<%- idPrefix %>-status" name="status[]" class="form-control is-expandable" multiple size="1">
      <% ['todo', 'blocked', 'done'].forEach(function(status) { %>
      <option value="<%- status %>"><%- t('status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('core', 'filter:submit') %></span></button>
  </div>
</form>
