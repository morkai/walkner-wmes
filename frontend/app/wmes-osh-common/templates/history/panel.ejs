<div class="panel panel-default is-with-actions osh-history-panel">
  <div class="panel-heading">
    <div class="panel-heading-title"><%- t('history:panelTitle') %></div>
    <div class="panel-heading-actions">
      <button id="<%- id('commentsOnly') %>" class="btn btn-default <%- commentsOnly ? 'active' : '' %>" type="button" title="<%- t('history:commentsOnly') %>">
        <i class="fa fa-comments-o"></i>
      </button>
      <button id="<%- id('maximize') %>" class="btn btn-default" type="button" title="<%- t('history:maximize') %>">
        <i class="fa fa-window-maximize"></i>
      </button>
    </div>
  </div>
  <div id="<%- id('items') %>" class="osh-history-items" style="max-height: <%- maxHeight %>px">
    <% items.forEach(item => { %>
      <%- renderItem({item}) %>
    <% }) %>
  </div>
  <form class="panel-footer osh-history-form">
    <textarea id="<%- id('comment') %>" class="form-control" rows="3" required placeholder="<%- t('history:comment:placeholder') %>"></textarea>
    <button id="<%- id('submit') %>" class="btn btn-primary"><i class="fa fa-comment-o"></i><span><%- t('history:comment:submit') %></span></button>
  </form>
</div>
