<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-eye"></i><span><%- t('markAsSeen:pageAction:list') %></span> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu dropdown-menu-right">
    <% ['noComment', 'finished', 'dayOld', 'weekOld', 'all'].forEach(filter => { %>
    <li><a data-filter="<%- filter %>" href="javascript:void(0)"><%- t(`markAsSeen:${filter}`) %></a></li>
    <% }) %>
  </ul>
</div>
