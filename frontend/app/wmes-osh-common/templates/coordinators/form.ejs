<div>
  <table class="table table-bordered table-condensed">
    <thead>
    <tr>
      <th class="is-min"><%- t('coordinators:types') %></th>
      <% if (kinds) { %>
        <th class="is-min"><%- t('coordinators:kinds') %></th>
      <% } %>
      <th><%- t('coordinators:users') %></th>
      <th class="actions"><%- t('core', 'LIST:COLUMN:actions') %></th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td class="is-min"><input name="coordinators[].types" type="text"></td>
        <% if (kinds) { %>
          <td class="is-min"><input name="coordinators[].kinds" type="text"></td>
        <% } %>
        <td><input name="coordinators[].users" type="text"></td>
        <td class="actions">
          <div class="actions-group">
            <button data-action="remove" class="btn btn-default" type="button"><i class="fa fa-times"></i></button>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <button id="<%- id('add') %>" class="btn btn-default" type="button">
    <i class="fa fa-plus"></i><span><%- t('coordinators:add') %></span>
  </button>
</div>
