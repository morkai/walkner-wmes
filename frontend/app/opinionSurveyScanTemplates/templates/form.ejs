<form class="opinionSurveyScanTemplates-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group has-required-select2">
        <label for="<%- idPrefix %>-survey" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:survey') %></label>
        <input id="<%- idPrefix %>-survey" name="survey" type="text" autocomplete="new-password" required>
      </div>
      <div class="row">
        <div class="col-md-2 form-group">
          <label for="<%- idPrefix %>-pageNumber" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:pageNumber') %></label>
          <input id="<%- idPrefix %>-pageNumber" name="pageNumber" class="form-control" type="number" required min="1" max="10">
        </div>
        <div class="col-md-10 form-group">
          <label for="<%- idPrefix %>-name" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:name') %></label>
          <input id="<%- idPrefix %>-name" name="name" class="form-control" type="text" autocomplete="new-password" required>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-dp" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:dp') %></label>
          <input id="<%- idPrefix %>-dp" name="dp" class="form-control" type="number" required min="0.1" max="2" step="0.1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:dp') %></p>
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-cannyThreshold" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:cannyThreshold') %></label>
          <input id="<%- idPrefix %>-cannyThreshold" name="cannyThreshold" class="form-control" type="number" required min="1" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:cannyThreshold') %></p>
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-circleAccumulatorThreshold" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:circleAccumulatorThreshold') %></label>
          <input id="<%- idPrefix %>-circleAccumulatorThreshold" name="circleAccumulatorThreshold" class="form-control" type="number" required min="1" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:circleAccumulatorThreshold') %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-minimumRadius" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:minimumRadius') %></label>
          <input id="<%- idPrefix %>-minimumRadius" name="minimumRadius" class="form-control" type="number" required min="1" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:minimumRadius') %></p>
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-maximumRadius" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:maximumRadius') %></label>
          <input id="<%- idPrefix %>-maximumRadius" name="maximumRadius" class="form-control" type="number" required min="1" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:maximumRadius') %></p>
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-minimumDistance" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:minimumDistance') %></label>
          <input id="<%- idPrefix %>-minimumDistance" name="minimumDistance" class="form-control" type="number" required min="1" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:minimumDistance') %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-filledThreshold" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:filledThreshold') %></label>
          <input id="<%- idPrefix %>-filledThreshold" name="filledThreshold" class="form-control" type="number" required min="100" max="255" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:filledThreshold') %></p>
        </div>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-markedThreshold" class="control-label is-required"><%- t('opinionSurveyScanTemplates', 'PROPERTY:markedThreshold') %></label>
          <input id="<%- idPrefix %>-markedThreshold" name="markedThreshold" class="form-control" type="number" required min="10" max="100" step="1">
          <p class="help-block"><%- t('opinionSurveyScanTemplates', 'form:help:markedThreshold') %></p>
        </div>
      </div>
      <div id="<%-idPrefix %>-toolbar" class="opinionSurveyScanTemplates-toolbar">
        <div id="<%-idPrefix %>-toolbar-inner" class="opinionSurveyScanTemplates-toolbar-inner">
          <input data-role="noImageError" class="form-control opinionSurveyScanTemplates-toolbar-error" type="text" autocomplete="new-password" tabindex="-1" data-action="editImage">
          <input data-role="noRegionsError" class="form-control opinionSurveyScanTemplates-toolbar-error" type="text" autocomplete="new-password" tabindex="-1" data-action="createRegion">
          <button data-action="editImage" type="button" class="btn btn-default"><i class="fa fa-image"></i><span><%- t('opinionSurveyScanTemplates', 'toolbar:editImage') %></span></button><!--
          //--><button data-action="createRegion" type="button" class="btn btn-default"><i class="fa fa-dot-circle-o"></i><span><%- t('opinionSurveyScanTemplates', 'toolbar:createRegion') %></span></button><!--
          //--><button data-action="measureDiameter" type="button" class="btn btn-default"><i class="fa fa-text-height"></i><span><%- t('opinionSurveyScanTemplates', 'toolbar:measureDiameter') %></span></button><!--
          //--><span><%- t('opinionSurveyScanTemplates', 'toolbar:measuredValue') %> <span id="<%- idPrefix %>-measuredValue">0</span>px</span>
        </div>
      </div>
      <div id="<%- idPrefix %>-container" class="opinionSurveyScanTemplates-page-container dragscroll">
        <div class="opinionSurveyScanTemplates-page-wrapper">
          <div id="<%- idPrefix %>-page" class="opinionSurveyScanTemplates-page">
            <img id="<%- idPrefix %>-image" class="opinionSurveyScanTemplates-page-image" src="<%- image.src %>" width="<%- image.width %>" height="<%- image.height %>" data-id="<%- image.id %>">
            <div id="<%- idPrefix %>-overlay" class="opinionSurveyScanTemplates-page-overlay"></div>
            <div id="<%- idPrefix %>-line" class="opinionSurveyScanTemplates-page-line" style="display: none"></div>
            <div id="<%- idPrefix %>-region" class="opinionSurveyScanTemplates-page-region" style="display: none"></div>
            <% regions.forEach(function(region) { %>
            <%- renderRegion(region) %>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
