<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%= formMethod %>">
  <% for (var i = 0; i < 2; ++i) { %>
  <div class="row">
    <div class="col-md-6 form-group">
      <label  for="<%- id('kaizenOwners-' + i) %>" class="control-label"><%- t('FORM:owners:kaizen') %></label>
      <input id="<%- id('kaizenOwners-' + i) %>" name="kaizenOwners[<%- i %>]" type="text">
    </div>
    <div class="col-md-6 form-group has-required-select2">
      <label  for="<%- id('kaizenSuperiors-' + i) %>" class="control-label"><%- t('PROPERTY:superior') %></label>
      <input id="<%- id('kaizenSuperiors-' + i) %>" name="kaizenSuperiors[<%- i %>]" type="text">
    </div>
  </div>
  <% } %>
  <div class="form-group">
    <label  for="<%- id('comment') %>" class="control-label"><%- t('PROPERTY:comment') %></label>
    <textarea id="<%- id('comment') %>" name="comment" class="form-control" rows="4"></textarea>
  </div>
  <div class="form-actions">
    <button id="<%- id('accept') %>" class="btn btn-success" type="button">
      <i class="fa fa-thumbs-up"></i><span><%- t('accept:accept') %></span>
    </button>
    <button id="<%- id('reject') %>" class="btn btn-warning" type="button">
      <i class="fa fa-thumbs-down"></i><span><%- t('accept:reject') %></span>
    </button>
    <button id="<%- id('cancel') %>" class="btn btn-danger" type="button">
      <i class="fa fa-times"></i><span><%- t('accept:cancel') %></span>
    </button>
    <button class="btn btn-link cancel" type="button"><%- t('core', 'ACTION_FORM:BUTTON:cancel') %></button>
  </div>
</form>
