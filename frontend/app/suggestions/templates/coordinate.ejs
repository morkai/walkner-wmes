<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%= formMethod %>">
  <div class="form-group has-required-select2">
    <label  for="<%- id('section') %>" class="control-label is-required"><%- t('coordinate:section') %></label>
    <input id="<%- id('section') %>" name="section" type="text" required autocomplete="new-password">
  </div>
  <div class="form-group has-required-select2">
    <label  for="<%- id('user') %>" class="control-label is-required"><%- t('coordinate:user') %></label>
    <input id="<%- id('user') %>" name="user" type="text" required autocomplete="new-password">
  </div>
  <div class="form-group">
    <label  for="<%- id('comment') %>" class="control-label"><%- t('PROPERTY:comment') %></label>
    <textarea id="<%- id('comment') %>" name="comment" class="form-control" rows="4"></textarea>
  </div>
  <div class="form-actions">
    <button id="<%- id('accept') %>" class="btn btn-success" type="button">
      <i class="fa fa-thumbs-up"></i><span><%- t('coordinate:accept') %></span>
    </button>
    <button id="<%- id('reject') %>" class="btn btn-danger" type="button">
      <i class="fa fa-thumbs-down"></i><span><%- t('coordinate:reject') %></span>
    </button>
    <button class="btn btn-link cancel" type="button"><%- t('core', 'ACTION_FORM:BUTTON:cancel') %></button>
  </div>
</form>
