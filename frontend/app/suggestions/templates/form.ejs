<form class="suggestions-form" method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div id="<%- idPrefix %>-statusGroup" class="form-group clearfix">
        <label for="<%- idPrefix %>-status" class="control-label"><%- t('suggestions', 'PROPERTY:status') %></label>
        <div id="<%- idPrefix %>-status" class="btn-group suggestions-form-statusBtnGroup" data-toggle="buttons">
          <% statuses.forEach(function(status) { %>
          <label class="btn btn-default">
            <input type="radio" name="status" value="<%- status %>"><%- t('suggestions', 'status:' + status) %>
          </label>
          <% }) %>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-subject" class="control-label is-required"><%- t('suggestions', 'PROPERTY:subject') %></label>
        <input id="<%- idPrefix %>-subject" class="form-control" type="text" name="subject" required placeholder="<%- t('suggestions', 'FORM:help:subject') %>">
      </div>
      <div class="row">
        <div class="form-group col-lg-4 has-required-select2">
          <label for="<%- idPrefix %>-section" class="control-label is-required"><%- t('suggestions', 'PROPERTY:section') %></label>
          <input id="<%- idPrefix %>-section" type="text" name="section" required placeholder="<%- t('suggestions', 'FORM:help:section') %>">
        </div>
        <div class="form-group col-lg-8 has-required-select2">
          <label for="<%- idPrefix %>-confirmer" class="control-label is-required"><%- t('suggestions', 'PROPERTY:confirmer') %></label>
          <input id="<%- idPrefix %>-confirmer" type="text" name="confirmer" required placeholder="<%- t('suggestions', 'FORM:help:confirmer') %>">
        </div>
      </div>
      <div id="<%- idPrefix %>-panel-suggestion" class="panel panel-warning suggestions-form-typePanel">
        <div class="panel-heading"><%- t('suggestions', 'type:suggestion') %></div>
        <div id="<%- idPrefix %>-suggestionPanelBody" class="panel-body has-lastElementRow">
          <div class="form-group has-required-select2">
            <label for="<%- idPrefix %>-suggestionOwners" class="control-label is-required"><%- t('suggestions', 'PROPERTY:suggestionOwners') %></label>
            <input id="<%- idPrefix %>-suggestionOwners" type="text" name="suggestionOwners" required>
          </div>
          <div class="row">
            <div class="col-lg-2 form-group has-required-select2">
              <label for="<%- idPrefix %>-date" class="control-label is-required"><%- t('suggestions', 'PROPERTY:date') %></label>
              <input id="<%- idPrefix %>-date" class="form-control" type="date" name="date" required max="<%- today %>" placeholder="<%- t('core', 'placeholder:date') %>">
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 form-group has-required-select2">
              <label for="<%- idPrefix %>-categories" class="control-label is-required"><%- t('suggestions', 'PROPERTY:categories') %></label>
              <input id="<%- idPrefix %>-categories" type="text" name="categories" required>
            </div>
            <div class="col-lg-4 form-group">
              <label for="<%- idPrefix %>-productFamily" class="control-label"><%- t('suggestions', 'PROPERTY:productFamily') %></label>
              <input id="<%- idPrefix %>-productFamily" type="text" name="productFamily">
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 form-group">
              <label for="<%- idPrefix %>-howItIs" class="control-label is-required"><%- t('suggestions', 'PROPERTY:howItIs') %></label>
              <textarea id="<%- idPrefix %>-howItIs" class="form-control" name="howItIs" rows="3" required></textarea>
            </div>
            <div class="col-lg-4 form-group">
              <label for="<%- idPrefix %>-howItShouldBe" class="control-label is-required"><%- t('suggestions', 'PROPERTY:howItShouldBe') %></label>
              <textarea id="<%- idPrefix %>-howItShouldBe" class="form-control" name="howItShouldBe" rows="3" required></textarea>
            </div>
            <div class="col-lg-4 form-group">
              <label for="<%- idPrefix %>-suggestion" class="control-label"><%- t('suggestions', 'PROPERTY:suggestion') %></label>
              <textarea id="<%- idPrefix %>-suggestion" class="form-control" name="suggestion" rows="3"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div id="<%- idPrefix %>-panel-kaizen" class="panel panel-success suggestions-form-typePanel">
        <div class="panel-heading"><%- t('suggestions', 'type:kaizen') %></div>
        <div class="panel-body has-lastElementRow">
          <div id="<%- idPrefix %>-kaizenOwnersFormGroup" class="form-group has-required-select2">
            <label for="<%- idPrefix %>-kaizenOwners" class="control-label is-required"><%- t('suggestions', 'PROPERTY:kaizenOwners') %></label>
            <input id="<%- idPrefix %>-kaizenOwners" type="text" name="kaizenOwners">
          </div>
          <div class="row">
            <div class="form-group col-lg-2">
              <label for="<%- idPrefix %>-kaizenStartDate" class="control-label is-requiredToFinish"><%- t('suggestions', 'PROPERTY:kaizenStartDate') %></label>
              <input id="<%- idPrefix %>-kaizenStartDate" class="form-control" type="date" name="kaizenStartDate" max="<%- today %>" placeholder="<%- t('core', 'placeholder:date') %>">
            </div>
            <div class="form-group col-lg-2">
              <label for="<%- idPrefix %>-kaizenFinishDate" class="control-label is-requiredToFinish"><%- t('suggestions', 'PROPERTY:kaizenFinishDate') %></label>
              <input id="<%- idPrefix %>-kaizenFinishDate" class="form-control" type="date" name="kaizenFinishDate" max="<%- today %>" placeholder="<%- t('core', 'placeholder:date') %>">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-4">
              <label for="<%- idPrefix %>-kaizenImprovements" class="control-label is-requiredToFinish"><%- t('suggestions', 'PROPERTY:kaizenImprovements') %></label>
              <textarea id="<%- idPrefix %>-kaizenImprovements" class="form-control" name="kaizenImprovements" rows="3"></textarea>
            </div>
            <div class="form-group col-md-4">
              <label for="<%- idPrefix %>-kaizenEffect" class="control-label is-requiredToFinish"><%- t('suggestions', 'PROPERTY:kaizenEffect') %></label>
              <textarea id="<%- idPrefix %>-kaizenEffect" class="form-control" name="kaizenEffect" rows="3"></textarea>
            </div>
          </div>
        </div>
      </div>
      <% if (editMode) { %>
      <div class="message message-inline message-warning">
        <p><%- t('suggestions', 'FORM:MSG:attachmentEdit') %></p>
      </div>
      <div class="row suggestions-form-attachments">
        <% ['scan', 'before', 'after'].forEach(function(attachment) { %>
        <div class="col-md-4 form-group">
          <label class="control-label"><%- t('suggestions', 'attachments:' + attachment + ':current') %></label>
          <p class="form-control-static">
            <% if (attachments[attachment]) { %>
            <a href="/suggestions/<%- model._id %>/attachments/<%- attachments[attachment]._id %>"><%= attachments[attachment].name %></a>
            <% } else { %>
            -
            <% }%>
          </p>
        </div>
        <% }) %>
      </div>
      <% } %>
      <div class="row">
        <% ['scan', 'before', 'after'].forEach(function(attachment) { %>
        <div class="col-md-4 form-group">
          <label for="<%- idPrefix %>-attachments-<%- attachment %>" class="control-label"><%- t('suggestions', 'attachments:' + attachment + (editMode ? ':new' : '')) %></label>
          <input id="<%- idPrefix %>-attachments-<%- attachment %>" class="form-control" type="file" data-name="<%- attachment %>">
        </div>
        <% }) %>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-subscribers" class="control-label"><%- t('suggestions', 'PROPERTY:subscribers') %></label>
        <input id="<%- idPrefix %>-subscribers" type="text" name="subscribers">
        <p class="help-block"><%- t('suggestions', 'FORM:help:subscribers') %></p>
      </div>
      <% if (editMode) { %>
      <div class="form-group suggestions-form-comment">
        <label for="<%- idPrefix %>-comment" class="control-label"><%- t('suggestions', 'PROPERTY:comment') %></label>
        <textarea id="<%- idPrefix %>-comment" class="form-control" name="comment" rows="3"></textarea>
      </div>
      <% } %>
    </div>
    <div class="panel-footer">
      <button id="<%- idPrefix %>-submit" type="submit" class="btn btn-primary">
        <i class="fa fa-spinner fa-spin"></i>
        <span><%- formActionText %></span>
      </button>
    </div>
  </div>
</form>
