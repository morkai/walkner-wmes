<form class="well filter-form suggestions-filter">
  <div class="form-group">
    <label for="<%- idPrefix %>-from"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="<%- t('core', 'placeholder:date') %>">
  </div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="mine">
        <%- t('suggestions', 'filter:user:mine') %>
      </label><label>
        <input name="userType" type="radio" value="unseen">
        <%- t('suggestions', 'filter:user:unseen') %>
      </label><label>
        <input name="userType" type="radio" value="owner">
        <%- t('suggestions', 'filter:user:owner') %>
      </label><label>
        <input name="userType" type="radio" value="others">
        <%- t('suggestions', 'filter:user:others') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-status"><%- t('suggestions', 'PROPERTY:status') %></label>
    <select id="<%- idPrefix %>-status" name="status" class="form-control" size="1">
      <option></option>
      <option value="open"><%- t('suggestions', 'status:open') %></option>
      <% statuses.forEach(function(status) { %>
      <option value="<%- status %>"><%- t('suggestions', 'status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-category"><%- t('suggestions', 'PROPERTY:category') %></label>
    <select id="<%- idPrefix %>-category" name="category" class="form-control" size="1">
      <option></option>
      <% categories.forEach(function(category) { %>
      <option value="<%- category._id %>"><%= category.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-productFamily"><%- t('suggestions', 'PROPERTY:productFamily') %></label>
    <select id="<%- idPrefix %>-productFamily" name="productFamily" class="form-control" size="1">
      <option></option>
      <% productFamilies.forEach(function(productFamily) { %>
      <option value="<%- productFamily._id %>"><%= productFamily.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-section"><%- t('suggestions', 'PROPERTY:section') %></label>
    <select id="<%- idPrefix %>-section" name="section" class="form-control" size="1">
      <option></option>
      <% sections.forEach(function(section) { %>
      <option value="<%- section._id %>"><%= section.name %></option>
      <% }) %>
    </select>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('suggestions', 'filter:submit') %></span></button>
  </div>
</form>
