<form class="well filter-form suggestions-filter">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    labels: [
      {text: t('filter:date'), input: {type: 'radio', name: 'dateType', value: 'date'}, ranges: true},
      {text: t('filter:finishedAt'), input: {type: 'radio', name: 'dateType', value: 'finishedAt'}, ranges: true}
    ]
  }) %>
  <div class="form-group">
    <input id="<%- id('userType') %>" name="userType" type="hidden" value="others">
    <input id="<%- id('user') %>" name="user" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- id('status') %>"><%- t('PROPERTY:status') %></label>
    <select id="<%- id('status') %>" name="status[]" class="form-control is-expandable" multiple size="1">
      <% statuses.forEach(function(status) { %>
      <option value="<%- status %>"><%- t('status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- id('categories') %>"><%- t('PROPERTY:category') %></label>
    <select id="<%- id('categories') %>" name="categories[]" class="form-control is-expandable" multiple size="1" data-expanded-length="15" style="max-width: 225px">
      <% categories.forEach(function(category) { %>
      <option value="<%- category._id %>"><%= category.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- id('productFamily') %>"><%- t('PROPERTY:productFamily') %></label>
    <select id="<%- id('productFamily') %>" name="productFamily[]" class="form-control is-expandable" multiple size="1" data-expanded-length="15" style="max-width: 225px">
      <% productFamilies.forEach(function(productFamily) { %>
      <option value="<%- productFamily._id %>"><%= productFamily.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- id('section') %>"><%- t('PROPERTY:section') %></label>
    <select id="<%- id('section') %>" name="section[]" class="form-control is-expandable" multiple size="1" data-expanded-length="15" style="max-width: 225px">
      <% sections.forEach(function(section) { %>
      <option value="<%- section._id %>"><%= section.name %></option>
      <% }) %>
    </select>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('filter:submit') %></span></button>
  </div>
</form>
