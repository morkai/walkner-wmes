<form class="well filter-form suggestions-report-filter">
  <div class="form-group">
    <label for="<%- id('month') %>"><%- t('reward:filter:month') %></label>
    <input id="<%- id('month') %>" name="month" type="month" class="form-control" required placeholder="YYYY-MM">
  </div>
  <div class="form-group">
    <label for="<%- id('confirmer') %>"><%- t('PROPERTY:confirmer') %></label>
    <input id="<%- id('confirmer') %>" name="confirmer" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- id('superior') %>"><%- t('PROPERTY:superior') %></label>
    <input id="<%- id('superior') %>" name="superior" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- id('sections') %>"><%- t('PROPERTY:section') %></label>
    <input id="<%- id('sections') %>" name="sections" type="text" autocomplete="new-password">
  </div>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('reports', 'filter:submit') %></span></button>
  </div>
</form>
