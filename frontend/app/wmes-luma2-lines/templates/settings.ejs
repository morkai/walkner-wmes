<form class="settings luma2-settings" autocomplete="off">
  <div class="list-group">
    <a class="list-group-item" href="#luma2/settings?tab=general" data-tab="general"><%- helpers.t('settings:tab:general') %></a>
  </div>
  <div class="panel panel-primary">
    <div class="panel-body" data-tab="general">
      <% ['rearmShortTime', 'rearmMediumTime', 'inspectionTime'].forEach(function(prop) { %>
      <div class="form-group">
        <label for="<%- idPrefix %>-<%- prop %>"><%- helpers.t('settings:general:' + prop) %></label>
        <input id="<%- idPrefix %>-<%- prop %>" name="luma2.<%- prop %>" class="form-control" type="number" min="1" max="3600" autocomplete="off" data-setting>
      </div>
      <% }) %>
    </div>
  </div>
</form>
