<form class="well filter-form">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'time',
    type: 'date+time',
    startHour: 6,
    labels: {text: helpers.t('PROPERTY:time'), ranges: true}
  }) %>
  <div class="form-group">
    <label for="<%- idPrefix %>-nc15"><%- helpers.t('PROPERTY:nc15') %></label>
    <input id="<%- idPrefix %>-nc15" class="form-control" name="nc15" type="text" maxlength="15" pattern="^[0-9]{6,15}$" style="width: 140px">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-orderNo"><%- helpers.t('PROPERTY:orderNo') %></label>
    <input id="<%- idPrefix %>-orderNo" class="form-control" name="orderNo" type="text" maxlength="9" pattern="^[0-9]{9}$" style="width: 90px">
  </div>
  <div id="<%- idPrefix %>-orgUnit" class="form-group"></div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= helpers.t('core', 'filter:submit') %></span></button>
  </div>
</form>
