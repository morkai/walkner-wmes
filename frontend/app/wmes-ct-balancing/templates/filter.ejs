<form class="well filter-form" autocomplete="off">
  <div class="form-group">
    <label for="<%- idPrefix %>-product" class="control-label is-required"><%- t('filter:product') %></label>
    <input id="<%- idPrefix %>-product" name="product" class="form-control" type="text" required pattern="^([0-9]{9}|[0-9]{12}|[A-Za-z0-9]{7})$" maxlength="12" style="width: 120px">
  </div>
  <div id="<%- idPrefix %>-orgUnit" class="form-group"></div>
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'startedAt',
    labels: {
      text: t('PROPERTY:startedAt'),
      ranges: true
    }
  }) %>
  <div class="form-group">
    <label for="<%- idPrefix %>-minDuration" title="<%- t('filter:d:title') %>"><%- t('PROPERTY:d') %> <i class="fa fa-question-circle"></i></label>
    <div style="display: flex">
      <input id="<%- idPrefix %>-minDuration" name="minDuration" class="form-control" type="text" style="width: 75px">
      <span style="padding: 0 4px; align-self: center">â€“</span>
      <input id="<%- idPrefix %>-maxDuration" name="maxDuration" class="form-control" type="text" style="width: 75px">
    </div>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('core', 'filter:submit') %></span></button>
  </div>
</form>
