<form class="divisions-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-_id" class="control-label"><%- t('divisions', 'PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-_id" class="form-control" type="text" name="_id" autofocus required maxlength="50">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-type" class="control-label"><%- t('divisions', 'PROPERTY:type') %></label>
        <div class="radio">
          <label><input type="radio" name="type" value="prod" checked> <%- t('divisions', 'TYPE:prod') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="type" value="dist"> <%- t('divisions', 'TYPE:dist') %></label>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label"><%- t('divisions', 'PROPERTY:description') %></label>
        <input id="<%- idPrefix %>-description" class="form-control" type="text" name="description" required maxlength="150">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
