<form method="post" action="<%- formAction %>" class="prodDowntimeAlerts-form">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- t('prodDowntimeAlerts', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" name="name" class="form-control" type="text" required>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-repeatInterval" class="control-label"><%- t('prodDowntimeAlerts', 'PROPERTY:repeatInterval') %></label>
        <input id="<%- idPrefix %>-repeatInterval" name="repeatInterval" class="form-control prodDowntimeAlerts-form-repeatInterval" type="text" placeholder="0h 0m 0s">
        <p class="help-block"><%- t('prodDowntimeAlerts', 'FORM:HELP:repeatInterval') %></p>
      </div>
      <div class="panel panel-default prodDowntimeAlerts-form-conditions">
        <div class="panel-heading is-with-actions">
          <%- t('prodDowntimeAlerts', 'PROPERTY:conditions') %>
          <div class="panel-actions">
            <select id="<%- idPrefix %>-conditionTypes" class="form-control prodDowntimeAlerts-form-conditions-types">
              <option value="" disabled selected hidden><%- t('prodDowntimeAlerts', 'FORM:conditions:type') %></option>
              <% _.forEach(conditions, function(condition) { %>
              <option value="<%- condition.type %>" <%- condition.hidden ? '' : 'disabled' %>><%- t('prodDowntimeAlerts', 'conditions:types:' + condition.type) %></option>
              <% }) %>
            </select>
            <button id="<%- idPrefix %>-conditions-add" class="btn btn-default" type="button"><i class="fa fa-plus"></i><span><%- t('prodDowntimeAlerts', 'FORM:conditions:add') %></span></button>
          </div>
        </div>
        <div class="panel-body">
          <p id="<%- idPrefix %>-conditions-empty" class="prodDowntimeAlerts-form-empty"><%- t('prodDowntimeAlerts', 'FORM:conditions:empty') %></p>
          <% _.forEach(conditions, function(condition, i) { %>
          <div class="form-group prodDowntimeAlerts-form-condition <%- condition.hidden ? 'hidden' : '' %>" data-type="<%- condition.type %>">
            <button class="btn btn-default prodDowntimeAlerts-form-condition-remove" type="button" title="<%- t('prodDowntimeAlerts', 'FORM:conditions:remove') %>"><i class="fa fa-remove"></i></button>
            <label for="<%- idPrefix %>-conditions-<%- condition.type %>" class="control-label"><%- t('prodDowntimeAlerts', 'conditions:types:' + condition.type) %></label>
            <div class="prodDowntimeAlerts-form-condition-modes">
              <% _.forEach(['include', 'exclude'], function(mode) { %>
              <label class="radio-inline"><input type="radio" name="conditions[<%- i %>].mode" value="<%- mode %>"> <%- t('prodDowntimeAlerts', 'conditions:modes:' + mode) %></label>
              <% }) %>
            </div>
            <input id="<%- idPrefix %>-conditions-<%- condition.type %>" name="conditions[<%- i %>].values" type="text">
            <input type="hidden" name="conditions[<%- i %>].type" value="<%- condition.type %>">
          </div>
          <% }) %>
        </div>
      </div>
      <div class="panel panel-default prodDowntimeAlerts-form-actions">
        <div class="panel-heading is-with-actions">
          <%- t('prodDowntimeAlerts', 'PROPERTY:actions') %>
          <div class="panel-actions">
            <input id="<%- idPrefix %>-actions-validity" class="btn btn-default prodDowntimeAlerts-form-actions-validity" type="text" tabindex="-1">
            <button id="<%- idPrefix %>-actions-add" class="btn btn-default prodDowntimeAlerts-form-actions-add" type="button"><i class="fa fa-plus"></i><span><%- t('prodDowntimeAlerts', 'FORM:actions:add') %></span></button>
          </div>
        </div>
        <div id="<%- idPrefix %>-actions" class="panel-body">
          <p id="<%- idPrefix %>-actions-empty" class="prodDowntimeAlerts-form-empty"><%- t('prodDowntimeAlerts', 'FORM:actions:empty') %></p>
          <% _.forEach(actions, function(action, i) { %>
          <%- renderAction({i: i, action: action}) %>
          <% }) %>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-userWhitelist" class="control-label"><%- t('prodDowntimeAlerts', 'PROPERTY:userWhitelist') %></label>
        <input id="<%- idPrefix %>-userWhitelist" class="js-actionsValidity" name="userWhitelist" type="text">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-userBlacklist" class="control-label"><%- t('prodDowntimeAlerts', 'PROPERTY:userBlacklist') %></label>
        <input id="<%- idPrefix %>-userBlacklist" name="userBlacklist" type="text">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
