<div class="prodDowntimeAlerts-form-action" data-delay="<%- action.delaySeconds %>">
  <button class="btn btn-default prodDowntimeAlerts-form-action-remove" type="button" title="<%- t('prodDowntimeAlerts', 'FORM:actions:remove') %>"><i class="fa fa-remove"></i></button>
  <span class="prodDowntimeAlerts-form-action-no"><%- action.no %>.</span>
  <input class="form-control prodDowntimeAlerts-form-action-delay js-actionsValidity" name="actions[<%- i %>].delay" type="text" autocomplete="new-password" placeholder="0h 0m 0s"> <%- t('prodDowntimeAlerts', 'FORM:actions:delay') %>
  <label class="checkbox-inline prodDowntimeAlerts-form-action-sendEmail"><input class="js-actionsValidity" name="actions[<%- i %>].sendEmail" type="checkbox" value="1"> <%- t('prodDowntimeAlerts', 'FORM:actions:sendEmail') %></label>
  <label class="checkbox-inline"><input class="js-actionsValidity" name="actions[<%- i %>].sendSms" type="checkbox" value="1"> <%- t('prodDowntimeAlerts', 'FORM:actions:sendSms') %></label>
  <div class="checkbox"><label><input class="js-actionsValidity" name="actions[<%- i %>].informAor" type="checkbox" value="1"> <%- t('prodDowntimeAlerts', 'actions:informAor') %></label></div>
  <div class="checkbox"><label><input class="js-actionsValidity" name="actions[<%- i %>].informManager" type="checkbox" value="1"> <%- t('prodDowntimeAlerts', 'actions:informManager') %></label></div>
  <div class="checkbox"><label><input class="js-actionsValidity" name="actions[<%- i %>].informMaster" type="checkbox" value="1"> <%- t('prodDowntimeAlerts', 'actions:informMaster') %></label></div>
  <div class="checkbox"><label><input class="js-actionsValidity" name="actions[<%- i %>].informLeader" type="checkbox" value="1"> <%- t('prodDowntimeAlerts', 'actions:informLeader') %></label></div>
  <span class="prodDowntimeAlerts-form-action-span"><%- t('prodDowntimeAlerts', 'actions:userWhitelist') %></span>
  <input class="js-actionsValidity" name="actions[<%- i %>].userWhitelist" type="text" autocomplete="new-password">
  <span class="prodDowntimeAlerts-form-action-span"><%- t('prodDowntimeAlerts', 'actions:userBlacklist') %></span>
  <input class="js-actionsValidity" name="actions[<%- i %>].userBlacklist" type="text" autocomplete="new-password">
</div>
