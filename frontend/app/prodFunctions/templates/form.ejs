<form class="prodFunctions-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-id" class="control-label is-required"><%- t('prodFunctions', 'PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-id" class="form-control" type="text" name="_id" autofocus required pattern="^[a-z][a-zA-Z0-9_-]*$" maxlength="50">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-label" class="control-label is-required"><%- t('prodFunctions', 'PROPERTY:label') %></label>
        <input id="<%- idPrefix %>-label" class="form-control" type="text" name="label" required maxlength="100">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-direct-true" class="control-label"><%- t('prodFunctions', 'PROPERTY:direct') %></label>
        <div class="radio">
          <label>
            <input id="<%- idPrefix %>-direct-true" type="radio" name="direct" value="true"> <%- t('prodFunctions', 'direct:true') %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="direct" value="false"> <%- t('prodFunctions', 'direct:false') %>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-dirIndirRatio" class="control-label"><%- t('prodFunctions', 'PROPERTY:dirIndirRatio') %></label>
        <input id="<%- idPrefix %>-dirIndirRatio" class="form-control small" type="number" name="dirIndirRatio" min="0" max="100">
      </div>
      <%- renderColorPicker({idPrefix: idPrefix, property: 'color', label: t('prodFunctions', 'PROPERTY:color'), value: model.color}) %>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
