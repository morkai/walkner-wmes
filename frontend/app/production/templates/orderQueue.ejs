<form class="production-orderQueue">
  <p class="message message-inline message-info"><%- t('orderQueue:message:order') %></p>
  <div class="form-group">
    <label for="<%- id('order') %>"><%- t('orderQueue:order:label') %></label>
    <input id="<%- id('order') %>" class="form-control" type="text" autocomplete="new-password" placeholder="<%- t('orderQueue:order:placeholder') %>" data-ignore-key="1">
  </div>
  <div class="form-group">
    <label for="<%- id('operation') %>"><%- t('orderQueue:operation:label') %></label>
    <input id="<%- id('operation') %>" class="form-control" type="text" autocomplete="new-password" placeholder="<%- t('orderQueue:operation:placeholder') %>" maxlength="4" pattern="^[0-9]+$" data-ignore-key="1">
  </div>
  <div class="form-group">
    <button id="<%- id('enqueue') %>" type="button" class="btn btn-lg btn-default"><%- t('orderQueue:enqueue') %></button>
    <button id="<%- id('clear') %>" type="button" class="btn btn-lg btn-link"><%- t('orderQueue:clear') %></button>
  </div>
  <p id="<%- id('empty') %>" class="message message-inline message-info"><%- t('orderQueue:message:empty') %></p>
  <div class="form-group hidden" id="<%- id('queue') %>">
    <table class="table table-condensed table-bordered table-hover">
      <tbody id="<%- id('rows') %>"></tbody>
    </table>
  </div>
  <div class="form-actions">
    <button id="<%- id('submit') %>" type="button" class="btn btn-lg btn-primary"><%- t('orderQueue:submit') %></button>
    <button type="button" class="cancel btn btn-lg btn-link"><%- t('orderQueue:cancel') %></button>
  </div>
</form>
