<form class="production-newOrderPicker">
  <% if (replacingOrder) { %>
  <p class="message message-inline message-warning"><%- t('production', 'newOrderPicker:checkData:warning') %></p>
  <% if (spigot) { %>
  <div id="<%- idPrefix %>-spigot" class="form-group">
    <label for="<%- idPrefix %>-spigot-nc12"><%- t('production', 'endWorkDialog:spigot:nc12') %></label>
    <input id="<%- idPrefix %>-spigot-nc12" class="form-control production-spigot-nc12 <%- embedded ? 'is-embedded' : '' %>" type="text" value="" placeholder="<%- t('production', 'endWorkDialog:spigot:placeholder') %>" autofocus required>
  </div>
  <% } %>
  <div class="form-group">
    <label for="<%- idPrefix %>-quantityDone"><%- t('production', 'newOrderPicker:quantityDone') %></label>
    <input id="<%- idPrefix %>-quantityDone" class="form-control small <%- embedded ? 'is-embedded' : '' %>" type="<%- embedded ? 'text' : 'number' %>" value="<%- quantityDone %>" <%- spigot ? '' : 'autofocus' %> min="0" max="<%- maxQuantityDone %>" pattern="^[0-9]{1,3}$" data-ignore-key="1" data-vkb="numeric">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-workerCount"><%- t('production', 'newOrderPicker:workerCount') %></label>
    <input id="<%- idPrefix %>-workerCount" class="form-control small <%- embedded ? 'is-embedded' : '' %>" type="<%- embedded ? 'text' : 'number' %>" value="<%- workerCount %>" min="1" max="<%- maxWorkerCount %>" pattern="^[0-9]{1,2}$" data-ignore-key="1" data-vkb="numeric">
  </div>
  <div class="modal-header">
    <h3 class="modal-title"><%- t('production', 'newOrderPicker:title') %></h3>
  </div>
  <% } %>
  <% if (!correctingOrder) { %>
  <% if (offline) { %>
  <p class="message message-inline message-warning"><%- t('production', 'newOrderPicker:offline:warning:' + orderIdType) %></p>
  <% } else { %>
  <p class="message message-inline message-info"><%- t('production', 'newOrderPicker:online:info:' + orderIdType) %></p>
  <% } %>
  <% } %>
  <div class="form-group">
    <label for="<%- idPrefix %>-order"><%- t('production', 'newOrderPicker:order:label:' + orderIdType) %></label>
    <input id="<%- idPrefix %>-order" class="form-control <%- embedded ? 'is-embedded' : '' %>" type="text" placeholder="<%- orderPlaceholder %>" maxlength="<%- orderMaxLength %>" data-ignore-key="1" data-vkb="numeric" <%- embedded || offline ? 'required' : '' %>>
  </div>
  <% if (!offline && embedded) { %>
  <div id="<%- idPrefix %>-operationGroup" class="production-form-btn-group">
    <label><%- t('production', 'newOrderPicker:operation:label:online') %></label>
    <div class="btn-group-vertical"><p><%- t('production', 'newOrderPicker:order:tooShort') %></p></div>
  </div>
  <% } else { %>
  <div id="<%- idPrefix %>-operationGroup" class="form-group">
    <label for="<%- idPrefix %>-operation"><%- t('production', 'newOrderPicker:operation:label:' + (offline ? 'offline' : 'online')) %></label>
    <input id="<%- idPrefix %>-operation" class="form-control <%- embedded ? 'is-embedded' : '' %>" type="text" placeholder="<%- operationPlaceholder %>" maxlength="4" pattern="^[0-9]+$" data-ignore-key="1" data-vkb="numeric">
  </div>
  <% } %>
  <div class="form-actions">
    <button id="<%- idPrefix %>-submit" type="submit" class="btn btn-lg btn-success">
      <%- submitLabel %>
    </button>
    <button type="button" class="cancel btn btn-lg btn-link"><%- t('production', 'newOrderPicker:cancel') %></button>
  </div>
</form>
