<form class="production-quantityEditor">
  <div class="form-group">
    <label for="<%- id('quantity') %>"><%= t('quantityEditor:label:hour') %></label>
    <div class="btn-group" data-toggle="buttons">
      <% hours.forEach(function(hour) { %>
      <label class="btn btn-default <%- hour.disabled ? 'disabled' : '' %>">
        <input type="radio" autocomplete="off" name="hour" value="<%- hour.index %>" data-value="<%- hour.value %>">
        <%- hour.from %><br><%- hour.to%>
      </label>
      <% }) %>
    </div>
  </div>
  <div class="form-group">
    <label for="<%- id('value') %>"><%= t('quantityEditor:label:value') %></label>
    <input id="<%- id('value') %>" class="form-control input-lg small <%- embedded ? 'is-embedded' : '' %>" type="<%- embedded ? 'text' : 'number' %>" min="0" max="<%- maxQuantity %>" data-vkb="numeric">
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-lg btn-primary"><%- t('quantityEditor:submit') %></button>
    <button type="button" class="cancel btn btn-lg btn-link"><%- t('quantityEditor:cancel') %></button>
  </div>
</form>
