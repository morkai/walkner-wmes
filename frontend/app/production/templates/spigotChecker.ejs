<form class="production-spigotChecker" autocomplete="off">
  <div class="form-group">
    <label class="control-label"><%- t('spigotChecker:name:label') %></label>
    <p class="form-control-static"><%= component.name %></p>
  </div>
  <div class="form-group">
    <label for="<%- id('nc12') %>"><%- t('spigotChecker:nc12:label') %></label>
    <input id="<%- id('nc12') %>" class="form-control production-spigot-nc12 <%- embedded ? 'is-embedded' : '' %>" type="text" autocomplete="new-password" placeholder="<%- t('spigotChecker:nc12:placeholder') %>">
  </div>
  <div class="form-actions" style="display: flex">
    <button id="<%- id('submit') %>" type="submit" class="btn btn-lg btn-primary"><%- t('spigotChecker:submit') %></button>
    <button id="<%- id('endWork') %>" type="button" class="btn btn-lg btn-warning" style="margin-left: auto"><%- t('spigotChecker:endWork') %></button>
  </div>
</form>
