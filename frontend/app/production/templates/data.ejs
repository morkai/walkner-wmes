<div class="production-data">
  <h2 class="production-sectionHeader"><%- t('production', 'section:data') %></h2>
  <div class="production-properties production-properties-orderInfo">
    <% ['orderNo', 'nc12', 'productName', 'operationName'].forEach(function(prop) { %>
    <div id="<%- idPrefix %>-<%- prop %>" class="production-property production-property-<%- prop %>">
      <div class="production-property-name"><%- t('production', 'property:' + prop) %></div>
      <div class="production-property-value"></div>
    </div>
    <% }) %>
  </div>
  <div class="production-properties production-properties-orderData">
    <% ['createdAt', 'quantityDone', 'workerCount', 'workerCountSap', 'taktTime', 'lastTaktTime', 'avgTaktTime'].forEach(function(prop) { %>
    <div id="<%- idPrefix %>-<%- prop %>" class="production-property production-property-<%- prop %>">
      <div class="production-property-name"><%- t('production', 'property:' + prop) %></div>
      <div class="production-property-value"></div>
    </div>
    <% }) %>
  </div>
  <div class="production-actions"></div>
</div>
