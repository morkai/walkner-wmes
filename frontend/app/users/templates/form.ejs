<form class="users-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-login" class="control-label"><%- t('users', 'PROPERTY:login') %></label>
        <input id="<%- idPrefix %>-login" class="form-control" type="text" name="login" value="" autofocus required maxlength="50">
      </div>
      <div class="row">
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-password" class="control-label"><%- t('users', 'PROPERTY:password') %></label>
          <input id="<%- idPrefix %>-password" class="form-control" type="password" name="password" value="">
        </div>
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-password2" class="control-label"><%- t('users', 'PROPERTY:password2') %></label>
          <input id="<%- idPrefix %>-password2" class="form-control" type="password" value="">
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-email" class="control-label"><%- t('users', 'PROPERTY:email') %></label>
        <input id="<%- idPrefix %>-email" class="form-control" type="email" name="email" value="" required maxlength="100">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-mobile" class="control-label"><%- t('users', 'PROPERTY:mobile') %></label>
        <input id="<%- idPrefix %>-mobile" class="form-control" type="tel" name="mobile" value="" maxlength="20">
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('users', 'PROPERTY:privileges') %></label>
        <% privileges.forEach(function(privilege) { %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="privileges[]" value="<%- privilege %>">
            <%- t('users', 'PRIVILEGE:' + privilege) %>
          </label>
        </div>
        <% }) %>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
