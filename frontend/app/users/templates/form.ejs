<form class="users-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-firstName" class="control-label"><%- t('users', 'PROPERTY:firstName') %></label>
          <input id="<%- idPrefix %>-firstName" class="form-control" type="text" name="firstName" autofocus maxlength="50">
        </div>
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-lastName" class="control-label"><%- t('users', 'PROPERTY:lastName') %></label>
          <input id="<%- idPrefix %>-lastName" class="form-control" type="text" name="lastName" maxlength="50">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-login" class="control-label"><%- t('users', 'PROPERTY:login') %></label>
          <input id="<%- idPrefix %>-login" class="form-control" type="text" name="login" required maxlength="50">
        </div>
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-email" class="control-label"><%- t('users', 'PROPERTY:email') %></label>
          <input id="<%- idPrefix %>-email" class="form-control" type="email" name="email" maxlength="100">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-password" class="control-label"><%- t('users', 'PROPERTY:password') %></label>
          <input id="<%- idPrefix %>-password" class="form-control" type="password" name="password">
        </div>
        <div class="col-md-6 form-group">
          <label for="<%- idPrefix %>-password2" class="control-label"><%- t('users', 'PROPERTY:password2') %></label>
          <input id="<%- idPrefix %>-password2" class="form-control" type="password">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-company" class="control-label"><%- t('users', 'PROPERTY:company') %></label>
              <select id="<%- idPrefix %>-company" name="company" data-placeholder="<%- t('users', 'NO_DATA:prodFunction') %>">
                <option></option>
                <% companies.forEach(function(company) { %>
                <option value="<%- company._id %>"><%= company.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-prodFunction" class="control-label"><%- t('users', 'PROPERTY:prodFunction') %></label>
              <input id="<%- idPrefix %>-prodFunction" name="prodFunction" type="text" data-placeholder="<%- t('users', 'NO_DATA:prodFunction') %>">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-kdDivision" class="control-label"><%- t('users', 'PROPERTY:kdDivision') %></label>
              <input id="<%- idPrefix %>-kdDivision" class="form-control" type="text" name="kdDivision" maxlength="100">
            </div>
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-kdPosition" class="control-label"><%- t('users', 'PROPERTY:kdPosition') %></label>
              <input id="<%- idPrefix %>-kdPosition" class="form-control" type="text" name="kdPosition" maxlength="100">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-personellId" class="control-label"><%- t('users', 'PROPERTY:personellId') %></label>
              <input id="<%- idPrefix %>-personellId" class="form-control" type="text" name="personellId" maxlength="15">
            </div>
            <div class="col-md-6 form-group">
              <label for="<%- idPrefix %>-card" class="control-label"><%- t('users', 'PROPERTY:card') %></label>
              <input id="<%- idPrefix %>-card" class="form-control" type="text" name="card" maxlength="15">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="orgUnitDropdowns-container"></div>
          <div class="form-group users-form-aor">
            <label for="<%- idPrefix %>-aors" class="control-label"><%- t('users', 'PROPERTY:aors') %></label>
            <select id="<%- idPrefix %>-aors" name="aors[]" multiple data-placeholder="<%- t('users', 'NO_DATA:aors') %>">
              <option></option>
              <% aors.forEach(function(aor) { %>
              <option value="<%- aor._id %>"><%= aor.name %>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-vendor" class="control-label"><%- t('users', 'PROPERTY:vendor') %></label>
            <input id="<%- idPrefix %>-vendor" type="text" name="vendor" maxlength="15">
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-privileges" class="control-label"><%- t('users', 'PROPERTY:privileges') %></label>
        <div class="input-group">
          <input id="<%- idPrefix %>-privileges" type="text" name="privileges">
          <span class="input-group-btn">
            <button id="<%- idPrefix %>-copyPrivileges" class="btn btn-default" type="button"><i class="fa fa-copy"></i></button>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="checkbox">
          <label><input type="checkbox" name="active" value="true"> <%- t('users', 'PROPERTY:active') %></label>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
