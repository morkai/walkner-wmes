<form method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-shortName" class="control-label is-required"><%- helpers.t('PROPERTY:shortName') %></label>
        <input id="<%- idPrefix %>-shortName" class="form-control" type="text" autocomplete="new-password" name="shortName" autofocus required maxlength="10">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-fullName" class="control-label"><%- helpers.t('PROPERTY:fullName') %></label>
        <input id="<%- idPrefix %>-fullName" class="form-control" type="text" autocomplete="new-password" name="fullName">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
