<div class="dashboard-buttonAndMetrics">
  <a class="btn btn-<%- buttonType %>" href="<%- buttonUrl %>"><%- buttonLabel %></a>
  <div class="dashboard-metrics">
    <a class="well dashboard-metric" href="<%- browseUrl %>">
      <span class="dashboard-metric-value"><%- total ? total.allCount : '?' %></span>
      <span class="dashboard-metric-name"><%- t('dashboard', 'metrics:total:allCount') %></span>
    </a>
    <a class="well dashboard-metric" href="<%- browseUrl %>?status=in=(<%- openStatuses %>)&sort(-<%- sortProperty %>)&limit(20)">
      <span class="dashboard-metric-value"><%- total ? total.openCount : '?' %></span>
      <span class="dashboard-metric-name"><%- t('dashboard', 'metrics:total:openCount') %></span>
    </a>
    <div class="well dashboard-metric">
      <span class="dashboard-metric-value"><%- total ? total.monthCount : '?' %></span>
      <span class="dashboard-metric-name"><%- t('dashboard', 'metrics:total:monthCount') %></span>
    </div>
  </div>
  <div class="dashboard-metrics">
    <a class="well dashboard-metric" href="<%- browseUrl %>?observers.user.id=mine&sort(-eventDate)&limit(20)">
      <span class="dashboard-metric-value"><%- user ? user.allCount : '?' %></span>
      <span class="dashboard-metric-name"><%- t('dashboard', 'metrics:user:allCount') %></span>
    </a>
    <a class="well dashboard-metric" href="<%- browseUrl %>?status=in=(<%- openStatuses %>>)&sort(-<%- sortProperty %>)&limit(20)&observers.user.id=mine">
      <span class="dashboard-metric-value"><%- user ? user.openCount : '?' %></span>
      <span class="dashboard-metric-name"><%- t('dashboard', 'metrics:user:openCount') %></span>
    </a>
    <div class="well dashboard-metric">
      <span class="dashboard-metric-value"><%- user ? user.monthCount : '?' %></span>
      <span class="dashboard-metric-name"><%- t('dashboard', 'metrics:user:monthCount') %></span>
    </div>
  </div>
</div>
