<table class="table table-bordered table-condensed table-hover">
  <thead>
  <tr>
    <th colspan="3"><%- t('dashboard', 'top10:title', {month: month}) %></th>
  </tr>
  </thead>
  <tbody>
  <% if (state === 'loading') { %>
  <tr>
    <td><%- t('dashboard', 'top10:loading') %></td>
  </tr>
  <% } else if (state === 'empty') { %>
  <tr>
    <td><%- t('dashboard', 'top10:empty') %></td>
  </tr>
  <% } else { %>
  <% _.forEach(top10, function(entry) { %>
  <tr>
    <td class="dashboard-top-place"><%- entry.place %>.</td>
    <td><span class="dashboard-top-name"><%= entry.name %></span></td>
    <td class="dashboard-top-count" data-place="<%- entry.place %>"><%- entry.count %></td>
  </tr>
  <% }) %>
  <% } %>
  </tbody>
</table>
