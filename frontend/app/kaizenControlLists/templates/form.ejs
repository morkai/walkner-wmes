<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <%- helpers.formGroup({
        id: 'name',
        label: 'PROPERTY:',
        required: true,
        maxLength: 100
      }) %>
      <div class="checkbox">
        <label class="control-label">
          <input type="checkbox" name="active" value="true">
          <%- t('PROPERTY:active') %>
        </label>
      </div>
      <div class="form-group">
        <label class="control-label is-required"><%- t('PROPERTY:categories') %></label>
        <table class="table table-bordered table-condensed">
          <thead>
          <tr>
            <th class="is-min"><%- t('PROPERTY:categories:category') %></th>
            <th><%- t('PROPERTY:categories:shortName') %></th>
            <th><%- t('PROPERTY:categories:fullName') %></th>
            <th class="actions"><%- t('core', 'LIST:COLUMN:actions') %></th>
          </tr>
          </thead>
          <tbody id="<%- id('categories') %>"></tbody>
        </table>
        <input id="<%- id('category') %>" type="text">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
