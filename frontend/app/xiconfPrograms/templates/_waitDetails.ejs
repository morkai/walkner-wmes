<div class="panel panel-default xiconfPrograms-stepPanel xiconfPrograms-stepPanel-wait">
  <div class="panel-heading"><%- stepIndex + 1 %>. <%- helpers.t('step:wait') %></div>
  <div class="panel-details">
    <div class="props first">
      <div class="prop">
        <div class="prop-name"><%- helpers.t('PROPERTY:waitKind') %></div>
        <div class="prop-value">
          <%- helpers.t('PROPERTY:waitKind:' + step.kind) %>
          <% if (step.kind === 'auto') { %>
          <%= time.toString(step.duration, false, true) %>
          <%} %>
        </div>
      </div>
      <% if (model.type === 't24vdc') { %>
      <div class="prop">
        <div class="prop-name"><%- helpers.t('PROPERTY:voltage') %></div>
        <div class="prop-value"><%= step.voltage.toLocaleString() %></div>
      </div>
      <% } %>
    </div>
  </div>
</div>
