<div class="panel panel-default is-with-actions">
  <div class="panel-heading">
    <div class="panel-heading-title"><%- t('PANEL:TITLE:funcs') %></div>
    <div class="panel-heading-actions">
      <% if (canAddUser) { %>
      <button data-action="addFunc" class="btn btn-default" type="button" title="<%- t('addFunc:tooltip') %>"><i class="fa fa-plus"></i></button>
      <% } %>
    </div>
  </div>
  <% if (funcs.length) { %>
  <div class="panel-body compRel-details-funcs">
    <% funcs.forEach(function(func) { %>
    <div class="compRel-details-func" data-id="<%- func._id %>" data-status="<%- func.status %>">
      <% if (func.canAccept) { %>
      <button class="btn btn-default compRel-details-accept" type="button" title="<%- t('accept:button') %>"><i class="fa fa-gavel"></i></button>
      <% } %>
      <div class="form-group">
        <label class="control-label"><%= func.label %></label>
        <p class="form-control-static"><%- func.acceptedBy %></p>
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('PROPERTY:funcs.status') %></label>
        <p class="form-control-static"><%- func.statusText %></p>
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('PROPERTY:funcs.acceptedAt') %></label>
        <p class="form-control-static"><%- func.acceptedAt %></p>
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('PROPERTY:funcs.comment') %></label>
        <p class="form-control-static text-lines"><%= func.comment %></p>
      </div>
      <div class="form-group">
        <label class="control-label">
          <%- t('PROPERTY:funcs.users') %>
          <% if (canAddUser) { %>
          <a data-action="addUser" href="javascript:void(0)" style="padding: 0 7px 0 3px" title="<%- t('addUser:tooltip') %>"><i class="fa fa-plus"></i></a>
          <% } %>
        </label>
        <ul>
          <% func.users.forEach(function(user) { %>
          <li><%- user %></li>
          <% }) %>
        </ul>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="panel-body">
    <p><%- t('funcs:empty') %></p>
  </div>
  <% } %>
</div>
