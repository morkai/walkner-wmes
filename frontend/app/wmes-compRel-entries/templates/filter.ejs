<form class="well filter-form compRel-entries-filter" autocomplete="off">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'createdAt',
    startHour: 6,
    hidden: true,
    labels: {text: t('PROPERTY:createdAt'), ranges: true}
  }) %>
  <div class="form-group">
    <div class="filter-radioLabels">
      <% ['mine', 'creator', 'acceptor', 'others'].forEach(function(userType) { %>
      <label title="<%- t('filter:user:' + userType + ':title') %>">
        <input name="userType" type="radio" value="<%- userType %>">
        <%- t('filter:user:' + userType) %>
      </label>
      <% }) %>
    </div>
    <input id="<%- id('user') %>" name="user" type="text">
  </div>
  <div class="form-group" style="min-width: 150px">
    <label for="<%- id('status') %>"><%- t('PROPERTY:status') %></label>
    <select id="<%- id('status') %>" name="status[]" class="form-control is-expandable" multiple size="1" data-expanded-length="10">
      <% statuses.forEach(function(status) { %>
      <option value="<%- status %>"><%- t('status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <%- helpers.formGroup({
    name: 'oldComponent',
    label: 'PROPERTY:',
    groupClassName: 'hidden',
    groupAttrs: {'data-filter': 'oldComponent'},
    inputClassName: 'text-mono',
    inputStyle: {
      'width': '130px'
    }
  }) %>
  <%- helpers.formGroup({
    name: 'newComponent',
    label: 'PROPERTY:',
    groupClassName: 'hidden',
    groupAttrs: {'data-filter': 'newComponent'},
    inputClassName: 'text-mono',
    inputStyle: {
      'width': '130px'
    }
  }) %>
  <%- helpers.formGroup({
    name: 'orderNo',
    label: 'PROPERTY:',
    inputClassName: 'text-mono',
    inputStyle: {
      'width': '99px'
    }
  }) %>
  <div class="form-group hidden" data-filter="mrps">
    <label for="<%- id('mrps') %>"><%- t('PROPERTY:mrps') %></label>
    <input id="<%- id('mrps') %>" name="mrps" type="text" autocomplete="new-password" data-placeholder=" ">
  </div>
  <%- renderLimit({hidden: true}) %>
  <div class="form-group no-label">
    <div id="<%- id('invalid') %>" class="btn-group filter-btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <input type="checkbox" name="invalid" value="true"> <%- t('filter:invalid') %>
      </label>
    </div>
  </div>
  <div class="form-group filter-actions">
    <%- renderButton() %>
  </div>
</form>
