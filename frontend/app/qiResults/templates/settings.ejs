<form class="settings qi-settings">
  <div class="list-group">
    <% ['results', 'reports'].forEach(function(tab) { %>
    <a class="list-group-item" href="#qi/settings?tab=<%- tab %>" data-tab="<%- tab %>"><%- helpers.t('settings:tab:' + tab) %></a>
    <% }) %>
  </div>
  <div class="panel panel-primary">
    <div class="panel-body" data-tab="results">
      <div class="form-group">
        <label for="<%- idPrefix %>-requiredCount"><%- helpers.t('settings:requiredCount') %></label>
        <input id="<%- idPrefix %>-requiredCount" class="form-control" name="qi.requiredCount" type="number" min="0" max="9999">
      </div>
    </div>
    <div class="panel-body" data-tab="reports">
      <div class="form-group">
        <label for="<%- idPrefix %>-maxNokPerDay"><%- helpers.t('settings:maxNokPerDay') %></label>
        <input id="<%- idPrefix %>-maxNokPerDay" class="form-control" name="qi.maxNokPerDay" type="number" min="0" max="1000">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-okRatioRef"><%- helpers.t('settings:okRatioRef') %></label>
        <input id="<%- idPrefix %>-okRatioRef" class="form-control" name="qi.okRatioRef" type="number" min="0" max="100" step="0.01">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-nokRatioRef"><%- helpers.t('settings:nokRatioRef') %></label>
        <input id="<%- idPrefix %>-nokRatioRef" class="form-control" name="qi.nokRatioRef" type="number" min="0" max="100" step="0.01">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-oqlKinds"><%- helpers.t('settings:oqlKinds') %></label>
        <input id="<%- idPrefix %>-oqlKinds" name="qi.oqlKinds" type="text" autocomplete="off" data-setting>
      </div>
    </div>
  </div>
</form>
