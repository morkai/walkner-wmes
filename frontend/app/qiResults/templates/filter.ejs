<form class="well filter-form qiResults-filter">
  <div class="form-group">
    <label><%- helpers.t('filter:result') %></label>
    <div id="<%- idPrefix %>-result" class="btn-group filter-btn-group qiResults-filter-result" data-toggle="buttons">
      <label class="btn btn-default qiResults-filter-ok"><input type="radio" name="result" value="ok"> <%- helpers.t('filter:result:ok') %></label>
      <label class="btn btn-default qiResults-filter-nok"><input type="radio" name="result" value="nok"> <%- helpers.t('filter:result:nok') %></label>
    </div>
  </div>
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'inspectedAt',
    type: 'date',
    labels: {text: helpers.t('PROPERTY:inspectedAt'), ranges: true}
  }) %>
  <div class="form-group hidden" data-filter="order">
    <label for="<%- idPrefix %>-order"><%- helpers.t('filter:order') %></label>
    <input id="<%- idPrefix %>-order" class="form-control" name="order" type="text" autocomplete="new-password" maxlength="12">
  </div>
  <div class="form-group hidden" data-filter="serialNumbers">
    <label for="<%- idPrefix %>-serialNumbers"><%- helpers.t('PROPERTY:serialNumbers') %></label>
    <input id="<%- idPrefix %>-serialNumbers" class="form-control" name="serialNumbers" type="text" autocomplete="new-password" pattern="^[A-Za-z]{2}[0-9]{2}\.[0-9]{9}\.[0-9]{4}$">
  </div>
  <div class="form-group hidden" data-filter="productFamily">
    <label for="<%- idPrefix %>-productFamily"><%- helpers.t('filter:productFamily') %></label>
    <input id="<%- idPrefix %>-productFamily" name="productFamily" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="division">
    <label for="<%- idPrefix %>-division"><%- helpers.t('filter:division') %></label>
    <input id="<%- idPrefix %>-division" name="division" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="line">
    <label for="<%- idPrefix %>-line"><%- helpers.t('filter:line') %></label>
    <input id="<%- idPrefix %>-line" name="line" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="kind">
    <label for="<%- idPrefix %>-kind"><%- helpers.t('filter:kind') %></label>
    <input id="<%- idPrefix %>-kind" name="kind" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="errorCategory">
    <label for="<%- idPrefix %>-errorCategory"><%- helpers.t('PROPERTY:errorCategory') %></label>
    <input id="<%- idPrefix %>-errorCategory" name="errorCategory" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="faultCode">
    <label for="<%- idPrefix %>-faultCode"><%- helpers.t('PROPERTY:faultCode') %></label>
    <input id="<%- idPrefix %>-faultCode" name="faultCode" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="status">
    <label for="<%- idPrefix %>-status"><%- helpers.t('correctiveActions:status') %></label>
    <input id="<%- idPrefix %>-status" name="status" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="inspector">
    <label for="<%- idPrefix %>-inspector"><%- helpers.t('PROPERTY:inspector') %></label>
    <input id="<%- idPrefix %>-inspector" name="inspector" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="nokOwner">
    <label for="<%- idPrefix %>-nokOwner"><%- helpers.t('PROPERTY:nokOwner') %></label>
    <input id="<%- idPrefix %>-nokOwner" name="nokOwner" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="leader">
    <label for="<%- idPrefix %>-leader"><%- helpers.t('PROPERTY:leader') %></label>
    <input id="<%- idPrefix %>-leader" name="leader" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="coach">
    <label for="<%- idPrefix %>-coach"><%- helpers.t('PROPERTY:coach') %></label>
    <input id="<%- idPrefix %>-coach" name="coach" type="text" autocomplete="new-password">
  </div>
  <%- renderLimit({hidden: true}) %>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- helpers.t('filter:submit') %></span></button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="<%- helpers.t('filter:filters') %>"><span class="caret"></span></button>
      <ul class="dropdown-menu">
        <% filters.forEach(function(filter) { %>
        <li><a data-filter="<%- filter %>"><%= helpers.t('filter:' + filter) %></a></li>
        <% }) %>
      </ul>
    </div>
  </div>
</form>
