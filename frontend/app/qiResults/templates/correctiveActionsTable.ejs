<table class="table table-condensed <%- bordered ? 'table-bordered table-hover' : '' %>">
  <thead>
  <tr>
    <th class="is-min"><%- helpers.t('correctiveActions:#') %></th>
    <th class="is-min"><%- helpers.t('correctiveActions:status') %></th>
    <th class="is-min"><%- helpers.t('correctiveActions:when') %></th>
    <th><%- helpers.t('correctiveActions:who') %></th>
    <th><%- helpers.t('correctiveActions:what') %></th>
  </tr>
  </thead>
  <tbody>
  <% correctiveActions.forEach(function(action, i) { %>
  <tr>
    <td class="is-min"><%- i + 1 %></td>
    <td class="is-min"><%= action.status %></td>
    <td class="is-min"><%= action.when %></td>
    <td class="is-min qiResults-correctiveActions-who"><%= action.who %></td>
    <td class="text-lines"><%= action.what %></td>
  </tr>
  <% }) %>
  </tbody>
</table>
