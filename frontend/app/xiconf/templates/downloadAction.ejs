<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-download"></i><span><%- helpers.t('PAGE_ACTION:download') %></span> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu pull-right">
    <% Object.keys(files).forEach(function(type) { %>
    <li class="<%- files[type] ? '' : 'disabled' %>"><a <%- files[type] ? ('href="' + files[type] + '"') : '' %>><%- helpers.t('PAGE_ACTION:download:' + type) %></a></li>
    <% }) %>
  </ul>
</div>
