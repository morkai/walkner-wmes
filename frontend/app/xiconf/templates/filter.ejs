<div class="well">
  <form id="<%- idPrefix %>-form" class="filter-form xiconf-filter">
    <div class="form-group">
      <label for="<%- idPrefix %>-from"><%- t('xiconf', 'FILTER:from') %></label>
      <input id="<%- idPrefix %>-from" class="form-control" name="from" type="datetime-local" placeholder="YYYY-MM-DD HH:mm">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-to"><%- t('xiconf', 'FILTER:to') %></label>
      <input id="<%- idPrefix %>-to" class="form-control" name="to" type="datetime-local" placeholder="YYYY-MM-DD HH:mm">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-srcId"><%- t('xiconf', 'PROPERTY:srcId') %></label>
      <input id="<%- idPrefix %>-srcId" name="srcId" type="text" placeholder="<%- t('xiconf', 'FILTER:PLACEHOLDER:srcId') %>">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-no"><%- t('xiconf', 'PROPERTY:no') %></label>
      <input id="<%- idPrefix %>-no" class="form-control" name="no" type="text" maxlength="9" pattern="^[0-9]{9}$">
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-nc12"><%- t('xiconf', 'PROPERTY:nc12') %></label>
      <input id="<%- idPrefix %>-nc12" class="form-control" name="nc12" type="text" maxlength="12" pattern="^[0-9]{12}$">
    </div><div
      class="form-group">
      <label><%- t('xiconf', 'PROPERTY:result') %></label>
      <div class="btn-group filter-btn-group xiconf-filter-result" data-toggle="buttons">
        <label class="btn btn-default xiconf-filter-success">
          <input type="checkbox" name="result[]" value="success"> <%- t('xiconf', 'FILTER:result:success') %>
        </label>
        <label class="btn btn-default xiconf-filter-failure">
          <input type="checkbox" name="result[]" value="failure"> <%- t('xiconf', 'FILTER:result:failure') %>
        </label>
      </div>
    </div><div
      class="form-group">
      <label for="<%- idPrefix %>-limit"><%- t('xiconf', 'FILTER:limit') %></label>
      <input id="<%- idPrefix %>-limit" class="form-control" name="limit" type="number" value="25" min="5" max="100" step="1">
    </div><div
      class="form-group filter-actions">
      <input type="submit" class="btn btn-primary" value="<%= t('xiconf', 'FILTER:submit') %>">
    </div>
  </form>
</div>
