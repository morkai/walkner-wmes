<div class="table-responsive is-colored">
  <table class="table table-bordered table-hover osh-report-engagement-users">
    <thead>
    <tr>
      <th rowspan="2"><%- t('engagement:employee') %></th>
      <% months.forEach(month => { %>
        <th colspan="7"><%- time.format(month, 'MMMM YYYY') %></th>
      <% }) %>
      <th rowspan="2"></th>
    </tr>
    <tr>
      <% months.forEach(month => { %>
        <th class="osh-report-engagement-metric" data-metric="nearMisses"><%- t('engagement:nearMisses:header') %></th>
        <th class="osh-report-engagement-separator">/</th>
        <th class="osh-report-engagement-metric" data-metric="kaizens"><%- t('engagement:kaizens:header') %></th>
        <th class="osh-report-engagement-separator">/</th>
        <th class="osh-report-engagement-metric" data-metric="actions"><%- t('engagement:actions:header') %></th>
        <th class="osh-report-engagement-separator">/</th>
        <th class="osh-report-engagement-metric" data-metric="observations"><%- t('engagement:observations:header') %></th>
      <% }) %>
    </tr>
    </thead>
    <tbody>
    <% users.forEach((user, i) => { %>
      <tr data-i="<%- i %>" data-id="<%- user.id %>">
        <td><%- user.info %></td>
        <% months.forEach(month => { %>
          <% let metrics = user.months[month] || empty %>
          <td class="osh-report-engagement-metric <%- metrics[0] ? '' : 'is-invalid' %>" data-month="<%- month %>" data-metric="nearMisses"><%- metrics[0].toLocaleString() %></td>
          <td class="osh-report-engagement-separator">/</td>
          <td class="osh-report-engagement-metric <%- metrics[1] ? '' : 'is-invalid' %>" data-month="<%- month %>" data-metric="kaizens"><%- metrics[1].toLocaleString() %></td>
          <td class="osh-report-engagement-separator">/</td>
          <td class="osh-report-engagement-metric <%- metrics[2] ? '' : 'is-invalid' %>" data-month="<%- month %>" data-metric="actions"><%- metrics[2].toLocaleString() %></td>
          <td class="osh-report-engagement-separator">/</td>
          <td class="osh-report-engagement-metric <%- metrics[3] ? '' : 'is-invalid' %>" data-month="<%- month %>" data-metric="observations"><%- metrics[3].toLocaleString() %></td>
        <% }) %>
        <td></td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>
