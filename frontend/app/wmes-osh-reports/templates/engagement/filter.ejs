<form class="well filter-form osh-report-filter" autocomplete="off">
  <%- forms.dateTimeRange({
    idPrefix,
    type: 'month',
    labels: {
      ranges: 'months quarters years'
    },
    required: [true, false]
  }) %>
  <div id="<%- id('orgUnit') %>" class="form-group"></div>
  <div class="form-group">
    <label class="control-label">
      <input type="radio" name="mode" value="leader" class="filter-inLabel">
      <span><%- t('filter:leader') %></span>
    </label>
    <input id="<%- id('leader') %>" name="leader" type="text">
  </div>
  <div class="form-group filter-actions">
    <%- renderButton() %>
  </div>
</form>
