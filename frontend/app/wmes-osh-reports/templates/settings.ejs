<form class="settings reports-settings">
  <div class="list-group">
    <% [
      'engagement',
      'observers'
    ].forEach(function(tab) { %>
    <a class="list-group-item" href="#osh/reports;settings?tab=<%- tab %>" data-tab="<%- tab %>"><%- t(`settings:tab:${tab}`) %></a>
    <% }) %>
  </div>
  <div class="panel panel-primary">
    <div class="panel-body" data-tab="engagement">
      <div class="form-group">
        <label for="<%- id('minEngagement') %>"><%- t('settings:minEngagement') %></label>
        <input id="<%- id('minEngagement') %>" class="form-control" name="osh.minEngagement" type="number" min="0" max="100" step="1">
      </div>
    </div>
    <div class="panel-body" data-tab="observers">
      <div class="form-group">
        <label for="<%- id('obsPerDept') %>"><%- t('settings:obsPerDept') %></label>
        <input id="<%- id('obsPerDept') %>" class="form-control" name="osh.obsPerDept" type="number" min="0" max="100" step="1">
      </div>
      <div class="form-group">
        <label for="<%- id('minObsCards') %>"><%- t('settings:minObsCards') %></label>
        <input id="<%- id('minObsCards') %>" class="form-control" name="osh.minObsCards" type="number" min="0" max="1000" step="1">
      </div>
    </div>
  </div>
</form>
