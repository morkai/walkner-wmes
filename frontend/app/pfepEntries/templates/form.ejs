<form class="pfepEntries-form" method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-nc12" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:nc12') %></label>
          <input id="<%- idPrefix %>-nc12" name="nc12" class="form-control" type="text" autocomplete="new-password" required maxlength="12" pattern="^([0-9]{12}|[A-Z][A-Z0-9]{6})$">
        </div>
        <div class="col-lg-4 form-group">
          <label for="<%- idPrefix %>-description" class="control-label"><%- t('pfepEntries', 'PROPERTY:description') %></label>
          <input id="<%- idPrefix %>-description" name="description" class="form-control" type="text" autocomplete="new-password">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-unit" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:unit') %></label>
          <input id="<%- idPrefix %>-unit" name="unit" class="form-control" type="text" autocomplete="new-password" required>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-packType" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:packType') %></label>
          <input id="<%- idPrefix %>-packType" name="packType" class="form-control" type="text" autocomplete="new-password" required>
        </div>
        <% ['externalPackQty', 'internalPackQty'].forEach(function(prop) { %>
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" name="<%- prop %>" class="form-control" type="number" required min="0">
        </div>
        <% }) %>
      </div>
      <div class="row">
        <% ['packLength', 'packWidth', 'packHeight'].forEach(function(prop) { %>
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" name="<%- prop %>" class="form-control" type="number" required min="0">
        </div>
        <% }) %>
      </div>
      <div class="row">
        <% ['packGrossWeight', 'componentNetWeight', 'componentGrossWeight'].forEach(function(prop) { %>
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" name="<%- prop %>" class="form-control" type="number" required min="0" step="0.01">
        </div>
        <% }) %>
      </div>
      <div class="row">
        <% ['qtyPerLayer', 'qtyOnPallet'].forEach(function(prop) { %>
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" name="<%- prop %>" class="form-control" type="number" required min="0" step="0.01">
        </div>
        <% }) %>
      </div>
      <div class="row">
        <% ['palletLength', 'palletWidth', 'palletHeight'].forEach(function(prop) { %>
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" name="<%- prop %>" class="form-control" type="number" required min="0">
        </div>
        <% }) %>
      </div>
      <div class="row">
        <% ['moq', 'roundingValue'].forEach(function(prop) { %>
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" name="<%- prop %>" class="form-control" type="number" required min="0">
        </div>
        <% }) %>
      </div>
      <div class="row">
        <div class="col-lg-2 form-group">
          <label for="<%- idPrefix %>-vendor" class="control-label is-required"><%- t('pfepEntries', 'PROPERTY:vendor') %></label>
          <input id="<%- idPrefix %>-vendor" name="vendor" class="form-control" type="text" autocomplete="new-password" required>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-notes" class="control-label"><%- t('pfepEntries', 'PROPERTY:notes') %></label>
        <textarea id="<%- idPrefix %>-notes" name="notes" class="form-control" rows="3"></textarea>
      </div>
      <% if (editMode) { %>
      <div class="form-group">
        <label for="<%- idPrefix %>-comment" class="control-label"><%- t('pfepEntries', 'PROPERTY:comment') %></label>
        <textarea id="<%- idPrefix %>-comment" name="comment" class="form-control" rows="3"></textarea>
      </div>
      <% } %>
    </div>
    <div class="panel-footer">
      <button id="<%- idPrefix %>-submit" type="submit" class="btn btn-primary">
        <span><%- formActionText %></span>
      </button>
    </div>
  </div>
</form>
