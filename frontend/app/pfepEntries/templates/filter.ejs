<form class="well filter-form pfepEntries-filter">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'createdAt',
    labels: {
      text: helpers.t('PROPERTY:date'),
      ranges: true
    }
  }) %>
  <div class="form-group hidden" data-filter="nc12">
    <label for="<%- idPrefix %>-nc12"><%- t('pfepEntries', 'filter:nc12') %></label>
    <input id="<%- idPrefix %>-nc12" class="form-control" name="nc12" type="text" autocomplete="new-password" maxlength="12">
  </div>
  <div class="form-group hidden" data-filter="packType">
    <label for="<%- idPrefix %>-packType"><%- t('pfepEntries', 'filter:packType') %></label>
    <input id="<%- idPrefix %>-packType" class="form-control" name="packType" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="vendor">
    <label for="<%- idPrefix %>-vendor"><%- t('pfepEntries', 'filter:vendor') %></label>
    <input id="<%- idPrefix %>-vendor" class="form-control" name="vendor" type="text" autocomplete="new-password">
  </div>
  <div class="form-group hidden" data-filter="creator">
    <label for="<%- idPrefix %>-creator"><%- t('pfepEntries', 'PROPERTY:creator') %></label>
    <input id="<%- idPrefix %>-creator" name="creator" type="text" autocomplete="new-password">
  </div>
  <%- renderLimit({hidden: true}) %>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('pfepEntries', 'filter:submit') %></span></button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="<%- t('pfepEntries', 'filter:filters') %>"><span class="caret"></span></button>
      <ul class="dropdown-menu">
        <% filters.forEach(function(filter) { %>
        <li><a data-filter="<%- filter %>"><%= t('pfepEntries', 'filter:' + filter) %></a></li>
        <% }) %>
      </ul>
    </div>
  </div>
</form>
