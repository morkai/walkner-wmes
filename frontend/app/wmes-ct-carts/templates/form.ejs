<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label is-required"><%- helpers.t('PROPERTY:description') %></label>
        <input id="<%- idPrefix %>-description" class="form-control" type="text" name="description" autofocus required maxlength="100">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-cards" class="control-label"><%- helpers.t('PROPERTY:cards') %></label>
        <textarea id="<%- idPrefix %>-cards" class="form-control text-fixed" name="cards" rows="6"></textarea>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
