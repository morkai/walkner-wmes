<form>
  <div class="paintShop-datePicker-input">
    <input id="<%- idPrefix %>-day" name="day" class="form-control" value="<%- day %>" pattern="^[0-9]{1,2}$" maxlength="2" required placeholder="<%- t('paintShop', 'datePicker:placeholder:day') %>" data-vkb="numeric" min="1" max="31">
    <span class="paintShop-datePicker-separator">-</span>
    <input id="<%- idPrefix %>-month" name="month" class="form-control" value="<%- month %>" pattern="^[0-9]{1,2}$" maxlength="2" required placeholder="<%- t('paintShop', 'datePicker:placeholder:month') %>" data-vkb="numeric" min="1" max="12">
    <span class="paintShop-datePicker-separator">-</span>
    <input id="<%- idPrefix %>-year" name="year" class="form-control" value="<%- year %>" pattern="^[0-9]{4}$" maxlength="4" required placeholder="<%- t('paintShop', 'datePicker:placeholder:year') %>" data-vkb="numeric" min="2017" max="2100">
  </div>
  <div class="paintShop-datePicker-buttons">
    <button class="btn btn-default" type="button" data-days="-2"><%- t('paintShop', 'datePicker:d-2') %></button>
    <button class="btn btn-default" type="button" data-days="-1"><%- t('paintShop', 'datePicker:d-1') %></button>
    <button class="btn btn-default" type="button" data-days="0"><%- t('paintShop', 'datePicker:d0') %></button>
    <button class="btn btn-default" type="button" data-days="1"><%- t('paintShop', 'datePicker:d+1') %></button>
    <button class="btn btn-default" type="button" data-days="2"><%- t('paintShop', 'datePicker:d+2') %></button>
    <button class="btn btn-primary"><%- t('paintShop', 'datePicker:submit') %></button>
  </div>
</form>
