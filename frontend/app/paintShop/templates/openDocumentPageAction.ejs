<% if (documents.length === 1) { %>
<a class="btn btn-default" href="/orderDocuments/<%- documents[0].nc15 %>" data-nc15="<%- documents[0].nc15 %>">
  <i class="fa fa-file-o"></i><span><%= documents[0].name || documents[0].nc15 %></span>
</a>
<% } else { %>
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-file-o"></i><span><%- t('PAGE_ACTION:openDocument') %></span> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <% documents.forEach(function(doc) { %>
    <li><a href="/orderDocuments/<%- doc.nc15 %>" data-nc15="<%- doc.nc15 %>"><%= doc.name || doc.nc15 %></a></li>
    <% }) %>
  </ul>
</div>
<% } %>
