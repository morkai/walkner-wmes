<form class="well filter-form">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: '_id.ts',
    type: 'date+time',
    startHour: 6,
    labels: {text: t('load:history:time'), ranges: '+shifts'}
  }) %>
  <%- helpers.formGroup({
    name: 'counter',
    type: 'select',
    label: 'load:history:counter',
    expandable: true,
    options: [1, 2, 3].map(function(value) { return {value: value, label: t('load:counters:' + value)}; })
  }) %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('core', 'filter:submit') %></span></button>
  </div>
</form>
