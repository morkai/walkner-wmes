<table class="paintShop-orderDetails">
  <thead>
  <tr>
    <th><%- t('paintShop', 'PROPERTY:no') %></th>
    <th><%- t('paintShop', 'PROPERTY:order') %></th>
    <th><%- t('paintShop', 'PROPERTY:nc12') %></th>
    <th colspan="2"><%- t('paintShop', 'PROPERTY:qty') %></th>
    <th colspan="3"><%- t('paintShop', 'PROPERTY:name') %></th>
  </tr>
  </thead>
  <% if (canAct) { %>
  <tfoot>
  <tr>
    <td colspan="8">
      <div class="paintShop-orderDetails-actions">
        <% if (order.status === 'new') { %>
        <button class="btn btn-info" type="button" data-action="start"><%- t('paintShop', 'action:start') %></button>
        <button class="btn btn-danger" type="button" data-action="cancel"><%- t('paintShop', 'action:cancel') %></button>
        <% } else if (order.status === 'started') { %>
        <div class="paintShop-orderDetails-qtyDone">
          <input id="<%- idPrefix %>-qtyDone" class="form-control" type="text" maxlength="3" min="0" max="999" placeholder="<%- order.qty %>" data-vkb="numeric">
          <button class="btn btn-success" type="button" data-action="finish" title="<%- t('paintShop', 'action:finish') %>"><i class="fa fa-check"></i></button>
        </div>
        <button class="btn btn-default" type="button" data-action="reset"><%- t('paintShop', 'action:reset') %></button>
        <% } else if (order.status === 'finished' || order.status === 'partial') { %>
        <button class="btn btn-info" type="button" data-action="continue"><%- t('paintShop', 'action:continue') %></button>
        <button class="btn btn-default" type="button" data-action="reset"><%- t('paintShop', 'action:reset') %></button>
        <% } else { %>
        <button class="btn btn-default" type="button" data-action="reset"><%- t('paintShop', 'action:reset') %></button>
        <% } %>
        <button class="btn btn-primary" type="button" data-action="comment"><%- t('paintShop', 'action:comment') %></button>
      </div>
    </td>
  </tr>
  </tfoot>
  <% } %>
  <%- renderQueueOrder({
    order: order,
    visible: true,
    first: false,
    last: false,
    commentVisible: false
  }) %>
  <% if (canAct) { %>
  <tbody>
  <tr>
    <td id="<%- idPrefix %>-filler" class="paintShop-orderDetails-filler" colspan="8" style="height: <%- fillerHeight %>px"></td>
  </tr>
  </tbody>
  <% } %>
</table>
