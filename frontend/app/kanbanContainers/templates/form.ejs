<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-_id" class="control-label is-required"><%- helpers.t('PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-_id" class="form-control" type="text" autocomplete="new-password" name="_id" required pattern="^[A-Za-z0-9_-]{1,10}$">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- helpers.t('PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" autocomplete="new-password" name="name" required>
      </div>
      <div style="display: flex">
        <% ['length', 'width', 'height'].forEach(function(prop) { %>
        <div class="form-group">
          <label for="<%- idPrefix %>-<%- prop %>" class="control-label is-required"><%- helpers.t('PROPERTY:' + prop) %></label>
          <input id="<%- idPrefix %>-<%- prop %>" class="form-control" type="number" name="<%- prop %>" required min="0" step="1" style="width: 125px; margin-right: 15px">
        </div>
        <% }) %>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-image" class="control-label"><%- helpers.t('PROPERTY:image') %></label>
        <input id="<%- idPrefix %>-image" class="form-control" type="file" name="image" accept="image/jpeg,image/png">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
