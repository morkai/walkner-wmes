<form class="well filter-form">
  <div class="form-group form-group-dateRange">
    <div class="dropdown">
      <label class="control-label dropdown-toggle" data-toggle="dropdown">
        <a href="javascript:void(0)">
          <%- t('pressWorksheets', 'PROPERTY:date') %>
          <span class="caret"></span>
        </a>
      </label>
      <ul class="dropdown-menu">
        <% ['today', 'yesterday', 'currentWeek', 'prevWeek', 'currentMonth', 'prevMonth', 'q1', 'q2', 'q3', 'q4', 'currentYear', 'prevYear'].forEach(function(range) { %>
        <li><a data-range="<%- range %>"><%- t('core', 'filter:date:' + range) %></a></li>
        <% }) %>
      </ul>
    </div>
    <div>
      <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="YYYY-MM-DD">
      <label for="<%- idPrefix %>-to" class="control-label">-</label>
      <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="YYYY-MM-DD">
    </div>
  </div>
  <div class="form-group">
    <label><%- t('core', 'filter:shift') %></label>
    <div id="<%- idPrefix %>-shift" class="btn-group filter-btn-group" data-toggle="buttons">
      <% [0, 1, 2, 3].forEach(function(shift) { %>
      <label class="btn btn-default">
        <input type="radio" name="shift" value="<%- shift %>"> <%- t('core', 'SHIFT:' + shift) %>
      </label>
      <% }) %>
    </div>
  </div>
  <div class="form-group">
    <label><%- t('pressWorksheets', 'PROPERTY:type') %></label>
    <div id="<%- idPrefix %>-type" class="btn-group filter-btn-group" data-toggle="buttons">
      <% ['any', 'mech', 'paintShop', 'optics'].forEach(function(type) { %>
      <label class="btn btn-default">
        <input type="radio" name="type" value="<%- type %>"> <%- t('pressWorksheets', 'filter:type:' + type) %>
      </label>
      <% }) %>
    </div>
  </div>
  <div id="<%- idPrefix %>-orgUnit" class="form-group"></div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="master">
        <%- t('pressWorksheets', 'filter:user:master') %>
      </label><label>
        <input name="userType" type="radio" value="operators">
        <%- t('pressWorksheets', 'filter:user:operators') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="hidden">
  </div>
  <%- renderLimit() %>
  <div class="form-group no-label">
    <div id="<%- idPrefix %>-mine" class="btn-group filter-btn-group" data-toggle="buttons">
      <label class="btn btn-default" title="<%- t('pressWorksheets', 'filter:mine:title') %>">
        <input type="checkbox" name="mine" value="1"> <%- t('pressWorksheets', 'filter:mine') %>
      </label>
    </div>
  </div>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('pressWorksheets', 'filter:submit') %></span></button>
  </div>
</form>
