<tr>
  <td><textarea class="form-control" name="observations[<%- i %>].what" rows="2" required><%= observation.what %></textarea></td>
  <td><textarea class="form-control" name="observations[<%- i %>].why" rows="2" required><%= observation.why %></textarea></td>
  <td class="actions">
    <div class="actions-group">
      <button type="button" class="btn btn-default" data-remove="observation"><i class="fa fa-times"></i></button>
    </div>
  </td>
</tr>
