<form method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-_id" class="control-label is-required"><%- t('PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-_id" class="form-control" type="text" autocomplete="new-password" name="_id" required maxlength="12" pattern="^[0-9]{12}$" style="width: 110px">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-mrps" class="control-label is-required"><%- t('PROPERTY:mrps') %></label>
        <input id="<%- idPrefix %>-mrps" type="text" autocomplete="new-password" name="mrps" required>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" autocomplete="new-password" name="name" maxlength="60">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
