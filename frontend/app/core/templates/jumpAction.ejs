    <input name="phrase" type="text" class="form-control" placeholder="<%- placeholder %>" required <%- autoFocus ? 'autofocus' : '' %> pattern="<%- pattern %>">
    <span class="input-group-btn">
      <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
    </span>
  </div>
</form>
