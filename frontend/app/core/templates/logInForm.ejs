<form class="logInForm" method="post" action="/login">
  <div class="form-group">
    <input id="<%- idPrefix %>-login" name="login" type="text" class="form-control input-lg" placeholder="<%- t('core', 'LOG_IN_FORM:LABEL:LOGIN') %>" autofocus>
  </div>
  <div class="form-group">
    <input id="<%- idPrefix %>-password" name="password" type="password" class="form-control input-lg" placeholder="<%- t('core', 'LOG_IN_FORM:LABEL:PASSWORD') %>">
  </div>
  <button class="btn btn-block btn-lg btn-primary logInForm-submit" type="submit">
    <i class="fa fa-spinner fa-spin logInForm-submit-spinner"></i>
    <span class="logInForm-submit-label"><%- t('core', 'LOG_IN_FORM:SUBMIT:LOG_IN') %></span>
  </button>
  <p class="logInForm-links">
    <button id="<%- idPrefix %>-loginLink" class="btn btn-link" type="button"><%- t('core', 'LOG_IN_FORM:LINK:LOG_IN') %></button>
    <button id="<%- idPrefix %>-resetLink" class="btn btn-link" type="button"><%- t('core', 'LOG_IN_FORM:LINK:RESET') %></button>
  </p>
</form>
