<form class="well filter-form fap-entries-filter" autocomplete="off">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'createdAt',
    startHour: 6
  }) %>
  <div class="form-group">
    <div class="filter-radioLabels">
      <label>
        <input name="userType" type="radio" value="mine">
        <%- helpers.t('filter:user:mine') %>
      </label><label>
        <input name="userType" type="radio" value="unseen">
        <%- helpers.t('filter:user:unseen') %>
      </label><label>
        <input name="userType" type="radio" value="others">
        <%- helpers.t('filter:user:others') %>
      </label>
    </div>
    <input id="<%- idPrefix %>-user" name="user" type="text">
  </div>
  <div class="form-group" style="min-width: 150px">
    <div class="filter-radioLabels">
      <label>
        <input name="statusType" type="radio" value="specific">
        <%- helpers.t('filter:status:specific') %>
      </label><label class="fap-entries-filter-analysis">
        <input name="statusType" type="radio" value="analysis">
        <%- helpers.t('filter:status:analysis') %>
      </label>
    </div>
    <select id="<%- idPrefix %>-status" name="status[]" class="form-control is-expandable" multiple size="1" data-expanded-length="10">
      <% statuses.forEach(function(status) { %>
        <option value="<%- status %>"><%- helpers.t('status:' + status) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-order"><%- helpers.t('filter:order') %></label>
    <input id="<%- idPrefix %>-order" name="order" class="form-control text-mono" type="text" pattern="^[A-Za-z0-9]{7,12}$" style="width: 110px">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-mrp"><%- helpers.t('PROPERTY:mrp') %></label>
    <input id="<%- idPrefix %>-mrp" name="mrp" type="text" autocomplete="new-password" data-placeholder=" ">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-category"><%- helpers.t('PROPERTY:category') %></label>
    <input id="<%- idPrefix %>-category" name="category" type="text" autocomplete="new-password" data-placeholder=" ">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= helpers.t('filter:submit') %></span></button>
  </div>
</form>
