<form class="fap-addForm">
  <div class="form-group">
    <label class="control-label"><%- helpers.t('PROPERTY:subdivisionType') %></label>
    <br>
    <% subdivisionTypes.forEach(function(type) { %>
    <div class="radio-inline">
      <label>
        <input type="radio" name="subdivisionType" value="<%- type %>" required>
        <%- helpers.t('subdivisionType:' + type) %>
      </label>
    </div>
    <% }) %>
  </div>
  <% if (!user.isLoggedIn()) { %>
  <div class="form-group has-required-select2">
    <label for="<%- idPrefix %>-owner" class="control-label is-required"><%- helpers.t('PROPERTY:owner') %></label>
    <input id="<%- idPrefix %>-owner" name="owner" required>
  </div>
  <% } %>
  <div style="display: flex">
    <div class="form-group" style="margin-right: 15px">
      <label for="<%- idPrefix %>-orderNo" class="control-label"><%- helpers.t('PROPERTY:orderNo') %></label>
      <input id="<%- idPrefix %>-orderNo" name="orderNo" class="form-control text-mono" maxlength="9" pattern="^[0-9]{9}$" style="width: 110px">
    </div>
    <div class="form-group">
      <label for="<%- idPrefix %>-lines" class="control-label"><%- helpers.t('PROPERTY:lines') %></label>
      <input id="<%- idPrefix %>-lines" name="lines" style="width: 300px">
    </div>
  </div>
  <div style="display: flex">
    <div class="form-group" style="margin-right: 15px">
      <label for="<%- idPrefix %>-componentCode" class="control-label"><%- helpers.t('PROPERTY:componentCode') %></label>
      <input id="<%- idPrefix %>-componentCode" name="componentCode" class="form-control text-mono" placeholder="12NC" maxlength="12" pattern="^[0-9]{1,12}$" style="width: 110px">
    </div>
    <div class="form-group">
      <label class="control-label"><%- helpers.t('PROPERTY:componentName') %></label>
      <p id="<%- idPrefix %>-componentName" class="form-control-static fap-addForm-componentName">-</p>
    </div>
  </div>
  <div class="form-group has-required-select2">
    <div style="display: flex">
      <label for="<%- idPrefix %>-category" class="control-label is-required"><%- helpers.t('PROPERTY:category') %></label>
      <i id="<%- idPrefix %>-category-notifications" class="fa fa-group fap-addForm-notifications"></i>
    </div>
    <input id="<%- idPrefix %>-category" name="category" required>
  </div>
  <div class="form-group">
    <div style="display: flex">
      <label for="<%- idPrefix %>-subCategory" class="control-label"><%- helpers.t('PROPERTY:subCategory') %></label>
      <i id="<%- idPrefix %>-subCategory-notifications" class="fa fa-group fap-addForm-notifications"></i>
    </div>
    <input id="<%- idPrefix %>-subCategory" name="subCategory">
  </div>
  <div class="form-group">
    <div style="display: flex">
      <label for="<%- idPrefix %>-problem" class="control-label is-required"><%- helpers.t('PROPERTY:problem') %></label>
      <div id="<%- idPrefix %>-copy" class="fap-addForm-copy" title="<%- helpers.t('addForm:copy:title') %>">
        <i class="fa fa-copy"></i>
      </div>
    </div>
    <textarea id="<%- idPrefix %>-problem" name="problem" class="form-control text-mono" rows="4" required style="resize: none"></textarea>
  </div>
  <div class="form-group has-required-select2">
    <label for="<%- idPrefix %>-subdivisions" class="control-label is-required"><%- helpers.t('addForm:subdivisions') %></label>
    <input id="<%- idPrefix %>-subdivisions" name="subdivisions" required>
  </div>
  <div class="form-group" style="margin-bottom: 12px">
    <label class="control-label"><%- helpers.t('PROPERTY:attachments') %></label>
    <ul id="<%- idPrefix %>-uploads" class="fap-addForm-uploads">
      <li><%- helpers.t('upload:drop') %></li>
    </ul>
  </div>
  <div class="form-group">
    <button id="<%- idPrefix %>-submit" type="submit" class="btn btn-primary"><%- helpers.t('addForm:submit') %></button>
    <button id="<%- idPrefix %>-cancel" type="button" class="btn btn-link"><%- helpers.t('addForm:cancel') %></button>
  </div>
</form>
