<div class="fap-attachment fap-details-list-item" data-attachment-id="<%- attachment._id %>" data-preview="<%- attachment.preview ? '1' : '0' %>">
  <span class="fap-details-list-icon">
    <i class="fa <%- uploaded ? attachment.icon : 'fa-spinner fa-spin' %>"></i>
  </span>
  <% if (uploaded) { %>
  <a class="fap-details-list-label" href="/fap/entries/<%- entryId %>/attachments/<%- attachment._id %>" target="_blank"><%= attachment.label %></a>
  <% } else { %>
  <span class="fap-details-list-label"><%= attachment.label %></span>
  <% } %>
  <button class="fap-details-list-action" type="button" data-action="<%- uploaded ? 'showMenu' : 'removeUpload' %>" <%- uploaded && !attachment.menu ? 'disabled' : '' %>><i class="fa <%- uploaded ? 'fa-wrench' : 'fa-times' %>"></i></button>
</div>