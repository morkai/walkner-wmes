<div class="fap-details">
  <div id="<%- idPrefix %>-message" class="message message-inline message-<%- model.message.type %>">
    <%- model.message.text %>
  </div>
  <div class="fap-props">
    <div class="fap-prop" data-prop="rid">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:rid') %></div>
      <div class="fap-prop-value text-mono"><%= model.rid %></div>
    </div>
    <div class="fap-prop" data-prop="category">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:category') %></div>
      <div class="fap-prop-value"><%= model.category %></div>
    </div>
    <div class="fap-prop fap-is-textarea <%- model.problemMultiline ? 'fap-is-multiline' : '' %>" data-prop="problem">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:problem') %></div>
      <div class="fap-prop-value"><%= model.problem %></div>
    </div>
  </div>
  <div class="fap-prop-separator"></div>
  <div class="fap-props">
    <div class="fap-prop" data-prop="orderNo">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:orderNo') %></div>
      <div class="fap-prop-value text-mono">
        <% if (model.orderNo !== '-' && user.isAllowedTo('ORDERS:VIEW')) { %>
        <a href="#orders/<%- model.orderNo %>"><%- model.orderNo %></a>
        <% } else { %>
        <%- model.orderNo %>
        <% } %>
      </div>
    </div>
    <div class="fap-prop" data-prop="nc12">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:nc12') %></div>
      <div class="fap-prop-value text-mono"><%= model.nc12 %></div>
    </div>
    <div class="fap-prop" data-prop="productName">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:productName') %></div>
      <div class="fap-prop-value text-mono"><%= model.productName %></div>
    </div>
  </div>
  <div class="fap-prop-separator"></div>
  <div class="fap-props">
    <div class="fap-prop" data-prop="qty">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:qty') %></div>
      <div class="fap-prop-value">
        <span class="text-mono" data-prop="qtyDone"><%- model.qtyDone %></span>
        /
        <span class="text-mono" data-prop="qtyTodo"><%- model.qtyTodo %></span>
      </div>
    </div>
    <div class="fap-prop" data-prop="mrp">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:mrp') %></div>
      <div class="fap-prop-value text-mono"><%= model.mrp %></div>
    </div>
    <div class="fap-prop" data-prop="divisions">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:divisions') %></div>
      <div class="fap-prop-value"><%= model.divisions %></div>
    </div>
    <div class="fap-prop" data-prop="lines">
      <div class="fap-prop-name"><%- helpers.t('PROPERTY:lines') %></div>
      <div class="fap-prop-value"><%= model.lines %></div>
    </div>
  </div>
  <div class="fap-prop-separator"></div>
  <div style="display: flex">
    <div id="<%- idPrefix %>-chat"></div>
    <div id="<%- idPrefix %>-observersAndAttachments" style="flex: 1 1 auto; margin-left: 30px"></div>
  </div>
  <div class="fap-analysis">
    <div class="fap-analysis-header"><%- helpers.t('assessment:header') %></div>
    <div class="fap-prop-separator"></div>
    <div class="fap-props">
      <div class="fap-prop" data-prop="assessment" style="flex: 1 1 auto">
        <div class="fap-prop-name"><%- helpers.t('PROPERTY:assessment') %></div>
        <div class="fap-prop-value"><%- model.assessment %></div>
      </div>
      <div class="fap-prop" data-prop="analysisNeed" style="flex: 1 1 auto">
        <div class="fap-prop-name"><%- helpers.t('PROPERTY:analysisNeed') %></div>
        <div class="fap-prop-value"><%- model.analysisNeed %></div>
      </div>
      <div class="fap-prop" data-prop="analysisDone" style="flex: 1 1 auto">
        <div class="fap-prop-name"><%- helpers.t('PROPERTY:analysisDone') %></div>
        <div class="fap-prop-value"><%- model.analysisDone %></div>
      </div>
    </div>
    <div class="fap-prop-separator"></div>
    <div class="fap-props">
      <div class="fap-prop" data-prop="why5" style="flex: 1 1 auto">
        <div class="fap-prop-name"><%- helpers.t('PROPERTY:why5') %></div>
        <div class="fap-prop-value">
          <% for (var i = 0; i < 5; ++i) { %>
            <div class="fap-analysis-why" data-why-index="<%- i %>">
              <div class="fap-analysis-why-label"><%- helpers.t('PROPERTY:why') %></div>
              <div class="fap-analysis-why-value"><%- model.why5[i] || '' %></div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="fap-prop-separator"></div>
    <div class="fap-props">
      <div class="fap-prop fap-is-textarea <%- model.solutionMultiline ? 'fap-is-multiline' : '' %>" data-prop="solution" style="flex: 1 1 auto">
        <div class="fap-prop-name"><%- helpers.t('PROPERTY:solution') %></div>
        <div class="fap-prop-value"><%= model.solution %></div>
      </div>
    </div>
  </div>
  <div class="fap-prop-separator" style="margin-top: 15px"></div>
</div>
