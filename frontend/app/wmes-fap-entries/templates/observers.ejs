<div class="fap-observers fap-details-panel <%- showMessage ? 'fap-details-panel-message-show' : '' %>">
  <div class="fap-details-panel-hd"><%- helpers.t('PROPERTY:observers') %></div>
  <div class="fap-details-panel-message message message-inline message-warning">Dodatkowe osoby zostaną automatycznie dodane po eskalacji zgłoszenia.</div>
  <div class="fap-details-panel-bd fap-details-list">
    <% observers.forEach(function(observer) { %>
    <div class="fap-observer fap-details-list-item <%- observer.online ? 'fap-is-online' : '' %>" data-observer-id="<%- observer._id %>">
      <span class="fap-details-list-icon" style="color: <%- observer.color %>">
        <i class="fa fa-user"></i>
      </span>
      <span class="fap-details-list-label"><%- observer.label %></span>
    </div>
    <% }) %>
    <div style="border-top: 1px solid #ddd">&nbsp;</div>
  </div>
  <div class="fap-details-panel-ft">
    <input id="<%- idPrefix %>-observer" type="text">
  </div>
</div>
