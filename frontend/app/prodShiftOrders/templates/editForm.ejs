<form class="prodShiftOrders-editForm" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%= formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-master" class="control-label"><%- t('prodShiftOrders', 'PROPERTY:master') %></label>
          <input id="<%- idPrefix %>-master" type="text" name="master" placeholder="<%- t('prodShiftOrders', 'FORM:PLACEHOLDER:personnel') %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-leader" class="control-label"><%- t('prodShiftOrders', 'PROPERTY:leader') %></label>
          <input id="<%- idPrefix %>-leader" type="text" name="leader" placeholder="<%- t('prodShiftOrders', 'FORM:PLACEHOLDER:personnel') %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-operator" class="control-label"><%- t('prodShiftOrders', 'PROPERTY:operator') %></label>
          <input id="<%- idPrefix %>-operator" type="text" name="operator" placeholder="<%- t('prodShiftOrders', 'FORM:PLACEHOLDER:personnel') %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-2">
          <label for="<%- idPrefix %>-quantityDone" class="control-label"><%- t('prodShiftOrders', 'PROPERTY:quantityDone') %></label>
          <input id="<%- idPrefix %>-quantityDone" class="form-control" type="number" name="quantityDone" min="0" required>
        </div>
        <div class="form-group col-md-2">
          <label for="<%- idPrefix %>-workerCount" class="control-label"><%- t('prodShiftOrders', 'PROPERTY:workerCount') %></label>
          <input id="<%- idPrefix %>-workerCount" class="form-control" type="number" name="workerCount" min="1" required>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-order"><%- t('prodShiftOrders', 'PROPERTY:order') %></label>
        <input id="<%- idPrefix %>-order" type="text" required>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-operation"><%- t('prodShiftOrders', 'PROPERTY:operation') %></label>
        <input id="<%- idPrefix %>-operation" type="text" required>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
