<div class="form-group">
  <label for="<%- idPrefix %>-answers-<%- question._id %>" class="control-label"><%= question.short %></label>
  <p class="help-block"><%= question.full %></p>
  <input type="hidden" name="answers[<%- index %>].question" value="<%- question._id %>">
  <% ['yes', 'no', 'na'].forEach(function(answer) { %>
  <label class="radio-inline">
    <input type="radio" name="answers[<%- index %>].answer" value="<%- answer %>" <%- value === answer ? 'checked' : '' %>> <%- t('opinionSurveyResponses', 'answer:' + answer) %>
  </label>
  <% }) %>
</div>
