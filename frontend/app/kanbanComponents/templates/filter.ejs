<form class="well filter-form">
  <div class="form-group">
    <label for="<%- idPrefix %>-_id"><%- helpers.t('PROPERTY:_id') %></label>
    <input id="<%- idPrefix %>-_id" class="form-control" name="_id" type="text" autocomplete="new-password" maxlength="12" style="width: 110px">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-description"><%- helpers.t('PROPERTY:description') %></label>
    <input id="<%- idPrefix %>-description" class="form-control" name="description" type="text" autocomplete="new-password">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= helpers.t('filter:submit') %></span></button>
  </div>
</form>
