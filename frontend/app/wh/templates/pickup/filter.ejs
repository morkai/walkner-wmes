<form class="well filter-form planning-mrp-filter">
  <div class="form-group">
    <label for="<%- id('whStatuses') %>" class="control-label"><%- t('filter:whStatuses') %></label>
    <select id="<%- id('whStatuses') %>" name="whStatuses" multiple class="form-control is-expandable" size="1" data-expanded-length="5">
      <% ['pending', 'started', 'finished', 'problem', 'cancelled'].forEach(function(whStatus) { %>
      <option value="<%- whStatus %>" <%- _.includes(whStatuses, whStatus) ? 'selected' : '' %>><%- t('status:' + whStatus) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- id('psStatuses') %>" class="control-label"><%- t('filter:psStatuses') %></label>
    <select id="<%- id('psStatuses') %>" name="psStatuses" multiple class="form-control is-expandable" size="1" data-expanded-length="7">
      <% ['unknown', 'new', 'started', 'partial', 'finished', 'aside', 'cancelled'].forEach(function(psStatus) { %>
      <option value="<%- psStatus %>" <%- _.includes(psStatuses, psStatus) ? 'selected' : '' %>><%- t('planning', 'orders:psStatus:' + psStatus) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- id('distStatuses') %>" class="control-label"><%- t('filter:distStatuses') %></label>
    <select id="<%- id('distStatuses') %>" name="distStatuses" multiple class="form-control is-expandable" size="1" data-expanded-length="7">
      <% ['pending', 'started', 'finished'].forEach(function(distStatus) { %>
        <option value="<%- distStatus %>" <%- _.includes(distStatuses, distStatus) ? 'selected' : '' %>><%- t('distStatus:' + distStatus) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <div class="dateTimeRange">
      <div class="dateTimeRange-labels">
        <div class="dateTimeRange-label">
          <label for="<%- id('from') %>" class="control-label"><%- t('filter:startTime') %></label>
        </div>
      </div>
      <div class="dateTimeRange-fields">
        <div class="dateTimeRange-field dateTimeRange-from">
          <input id="<%- id('from') %>" name="from" class="form-control" type="time" step="60" value="<%- from %>">
        </div>
        <div class="dateTimeRange-separator">-</div>
        <div class="dateTimeRange-field dateTimeRange-to">
          <input id="<%- id('to') %>" name="to" class="form-control" type="time" step="60" value="<%- to %>">
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="filter-radioLabels">
      <% ['orders', 'lines', 'mrps'].forEach(function(f) { %>
      <label>
        <input name="filter" type="radio" value="<%- f %>" <%- filter === f ? 'checked' : '' %>>
        <%- t('filter:' + f) %>
      </label>
      <% }) %>
    </div>
    <input id="<%- id('orders') %>" name="orders" type="text" class="form-control" value="<%- orders %>" style="width: 698px">
    <input id="<%- id('lines') %>" name="lines" type="text" value="<%= lines %>">
    <input id="<%- id('mrps') %>" name="mrps" type="text" value="<%= mrps %>">
  </div>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button id="<%- id('useDarkerTheme') %>" type="button" class="btn btn-default <%- useDarkerTheme ? 'active' : '' %>">
        <i class="fa fa-adjust"></i>
        <span><%- t('filter:useDarkerTheme') %></span>
      </button>
    </div>
  </div>
</form>
