<form class="wh-problems-editor wh-problems-editor-solveProblem">
  <% if (carts) { %>
  <input class="form-control" name="carts" placeholder="<%- helpers.t('problem:editor:carts') %>" required>
  <% } %>
  <textarea class="form-control" name="comment" rows="3" placeholder="<%- helpers.t('problem:editor:comment') %>"><%= comment %></textarea>
  <div class="wh-problems-editor-actions">
    <button class="btn btn-lg btn-primary" type="submit"><%- helpers.t('problem:editor:solveProblem:yes') %></button>
    <button class="btn btn-lg btn-default" type="button"><%- helpers.t('problem:editor:solveProblem:no') %></button>
  </div>
</form>
