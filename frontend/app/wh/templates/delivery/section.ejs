<div class="wh-delivery-section">
  <div class="wh-delivery-section-hd">
    <div class="wh-delivery-section-title">
      <%- t('delivery:title:' + status, {kind: kind}) %>
    </div>
    <% if (actions) { %>
    <div class="wh-delivery-section-actions">
      <%- resolveAction %>
      <button id="<%- idPrefix %>-forceLine" class="btn btn-default" type="button">
        <i class="fa fa-crosshairs"></i><span><%- t('delivery:forceLine:action') %></span>
      </button>
    </div>
    <% } %>
  </div>
  <div class="wh-delivery-section-bd">
    <table id="<%- idPrefix %>-items" class="wh-delivery-items">
      <tfoot>
      <tr>
        <td colspan="<%- status === 'completed' ? 3 : 4 %>"></td>
      </tr>
      </tfoot>
      <% items.forEach(function(item) { %>
      <%- renderItem({item: item}) %>
      <% }) %>
    </table>
  </div>
  <div class="wh-delivery-section-ft">
    <div class="wh-delivery-stats">
      <% ['sets', 'orders', 'qty', 'time'].forEach(function(stat) { %>
      <div class="wh-delivery-stat" data-stat="<%- stat %>">
        <div class="wh-delivery-stat-label"><%- t('delivery:stats:' + stat) %></div>
        <div class="wh-delivery-stat-value">?</div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
