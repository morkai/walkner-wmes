<div class="panel panel-primary">
  <div class="panel-heading">
    <%- t('mrpControllers', 'PANEL:TITLE:details') %>
  </div>
  <div class="panel-details">
    <div class="props first">
      <div class="prop">
        <div class="prop-name"><%- t('mrpControllers', 'PROPERTY:subdivision') %></div>
        <div class="prop-value">
          <% if (model.division && model.subdivision) { %>
          <a href="#divisions/<%= model.division._id %>"><%= model.division._id %></a>
          \
          <a href="#subdivisions/<%= model.subdivision._id %>"><%= model.subdivision.name %></a>
          <% } else { %>
          -
          <% } %>
        </div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('mrpControllers', 'PROPERTY:_id') %></div>
        <div class="prop-value"><%= model._id %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('mrpControllers', 'PROPERTY:description') %></div>
        <div class="prop-value"><%= model.description %></div>
      </div>
    </div>
  </div>
</div>
