<form class="mrpControllers-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="orgUnitDropdowns-container"></div>
      <div class="form-group">
        <label for="<%- idPrefix %>-_id" class="control-label is-required"><%- t('mrpControllers', 'PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-_id" class="form-control" type="text" name="_id" autofocus required maxlength="50" pattern="^[a-zA-Z0-9_-~]+$">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-inout" class="control-label is-required"><%- t('mrpControllers', 'PROPERTY:inout') %></label>
        <% [0, -1, 1].forEach(function(inout) { %>
        <div class="radio">
          <label><input type="radio" name="inout" value="<%- inout %>" required> <%- t('mrpControllers', 'inout:' + inout) %></label>
        </div>
        <% }) %>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label is-required"><%- t('mrpControllers', 'PROPERTY:description') %></label>
        <input id="<%- idPrefix %>-description" class="form-control" type="text" name="description" required maxlength="150">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-deactivatedAt" class="control-label"><%- t('mrpControllers', 'PROPERTY:deactivatedAt') %></label>
        <input id="<%- idPrefix %>-deactivatedAt" class="form-control" type="date" name="deactivatedAt" maxlength="10">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-replacedBy" class="control-label"><%- t('mrpControllers', 'PROPERTY:replacedBy') %></label>
        <input id="<%- idPrefix %>-replacedBy" type="text" name="replacedBy">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
