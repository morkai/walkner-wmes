<form class="well filter-form" autocomplete="off">
  <div class="form-group">
    <label for="<%- idPrefix %>-codes"><%- t('filter:codes') %></label>
    <input id="<%- idPrefix %>-codes" class="form-control" name="codes" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-target"><%- t('PROPERTY:target') %></label>
    <select id="<%- idPrefix %>-target" class="form-control is-expandable" name="target" multiple size="1">
      <% ['docs', 'ps'].forEach(function(target) { %>
      <option value="<%- target %>"><%- t('target:' + target) %>
      <% }) %>
    </select>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('core', 'filter:submit') %></span></button>
  </div>
</form>
