<div class="panel panel-primary">
  <div class="panel-heading">
    <%- t('subdivisions', 'PANEL:TITLE:details') %>
  </div>
  <div class="panel-details">
    <div class="props first">
      <% ['division', 'type', 'name', 'prodTaskTags', 'aor'].forEach(function(prop) { %>
      <div class="prop">
        <div class="prop-name"><%- t('subdivisions', 'PROPERTY:' + prop) %></div>
        <div class="prop-value"><%- model[prop] || '-' %></div>
      </div>
      <% }) %>
      <div class="prop">
        <div class="prop-name"><%- t('subdivisions', 'PROPERTY:autoDowntimes') %></div>
        <div class="prop-value">
          <% if (model.autoDowntimes.length) { %>
          <ol>
            <% model.autoDowntimes.forEach(function(autoDowntime) { %>
            <li>
              <% if (autoDowntime.when !== 'time') { %>
              <%= autoDowntime.reason %> (<%- t('subdivisions', 'autoDowntimes:when:' + autoDowntime.when) %>)
              <% } else { %>
              <%= autoDowntime.reason %>, <%- t('subdivisions', 'autoDowntimes:when:time') %>
              <ul>
                <% _.forEach(autoDowntime.time, function(time) { %>
                <li>
                  <%- time.h %>:<%- time.m %>
                  <% if (time.d) { %>
                  <%- t('subdivisions', 'autoDowntimes:duration', {minutes: time.d}) %>
                  <% } %>
                </li>
                <% }) %>
              </ul>
              <% } %>
            </li>
            <% }) %>
          </ol>
          <% } else { %>
          -
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
