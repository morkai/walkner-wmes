<form class="subdivisions-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="orgUnitDropdowns-container"></div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('subdivisions', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required maxlength="150">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-prodTaskTags" class="control-label"><%- t('subdivisions', 'PROPERTY:prodTaskTags') %></label>
        <input id="<%- idPrefix %>-prodTaskTags" type="text" name="prodTaskTags" value="">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
