<form class="subdivisions-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="orgUnitDropdowns-container"></div>
      <div class="form-group">
        <label for="<%- idPrefix %>-type" class="control-label is-required"><%- t('subdivisions', 'PROPERTY:type') %></label>
        <% ['assembly', 'press', 'storage', 'paintShop', 'other'].forEach(function(type) { %>
        <div class="radio">
          <label><input type="radio" name="type" value="<%- type %>" checked> <%- t('subdivisions', 'TYPE:' + type) %></label>
        </div>
        <% }) %>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- t('subdivisions', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required maxlength="150">
      </div>
      <% ['prodTaskTags', 'aor', 'initialDowntime', 'autoDowntime'].forEach(function(prop) { %>
      <div class="form-group">
        <label for="<%- idPrefix %>-<%- prop %>" class="control-label"><%- t('subdivisions', 'PROPERTY:' + prop) %></label>
        <input id="<%- idPrefix %>-<%- prop %>" type="text" name="<%- prop %>">
      </div>
      <% }) %>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
