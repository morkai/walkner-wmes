<form class="subdivisions-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="orgUnitDropdowns-container"></div>
      <div class="form-group">
        <label for="<%- idPrefix %>-type" class="control-label"><%- t('subdivisions', 'PROPERTY:type') %></label>
        <div class="radio">
          <label><input type="radio" name="type" value="assembly" checked> <%- t('subdivisions', 'TYPE:assembly') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="type" value="press"> <%- t('subdivisions', 'TYPE:press') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="type" value="storage"> <%- t('subdivisions', 'TYPE:storage') %></label>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('subdivisions', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required maxlength="150">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-prodTaskTags" class="control-label"><%- t('subdivisions', 'PROPERTY:prodTaskTags') %></label>
        <input id="<%- idPrefix %>-prodTaskTags" type="text" name="prodTaskTags" value="">
      </div>
      <div class="form-group has-required-select2">
        <label for="<%- idPrefix %>-aor" class="control-label is-required"><%- t('subdivisions', 'PROPERTY:aor') %></label>
        <input id="<%- idPrefix %>-aor" type="text" name="aor" value="" placeholder="<%- t('subdivisions', 'FORM:PLACEHOLDER:aor') %>" required>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
