<form class="prodDowntimes-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%= formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-master" class="control-label"><%- t('prodDowntimes', 'PROPERTY:master') %></label>
          <input id="<%- idPrefix %>-master" type="text" name="master">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-leader" class="control-label"><%- t('prodDowntimes', 'PROPERTY:leader') %></label>
          <input id="<%- idPrefix %>-leader" type="text" name="leader">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-operator" class="control-label"><%- t('prodDowntimes', 'PROPERTY:operator') %></label>
          <input id="<%- idPrefix %>-operator" type="text" name="operator">
        </div>
      </div>
      <% if (!editMode) { %>
      <div class="row">
        <div class="form-group col-md-4 has-required-select2">
          <label for="<%- idPrefix %>-reason" class="control-label"><%- t('prodDowntimes', 'PROPERTY:reason') %></label>
          <input id="<%- idPrefix %>-reason" type="text" name="reason" required>
        </div>
        <div class="form-group col-md-4 has-required-select2">
          <label for="<%- idPrefix %>-aor" class="control-label"><%- t('prodDowntimes', 'PROPERTY:aor') %></label>
          <input id="<%- idPrefix %>-aor" type="text" name="aor" required>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-reasonComment" class="control-label"><%- t('prodDowntimes', 'PROPERTY:reasonComment') %></label>
        <textarea id="<%- idPrefix %>-reasonComment" class="form-control" name="reasonComment" rows="3"></textarea>
      </div>
      <% } %>
      <div class="form-group">
        <label for="<%- idPrefix %>-startedAtDate" class="control-label"><%- t('prodDowntimes', 'PROPERTY:startedAt') %></label>
        <div class=" form-group-datetime">
          <input id="<%- idPrefix %>-startedAtDate" class="form-control" name="startedAtDate" type="date" required>
          <input id="<%- idPrefix %>-startedAtTime" class="form-control" name="startedAtTime" type="time" required step="1">
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-finishedAtDate" class="control-label"><%- t('prodDowntimes', 'PROPERTY:finishedAt') %></label>
        <div class=" form-group-datetime">
          <input id="<%- idPrefix %>-finishedAtDate" class="form-control" name="finishedAtDate" type="date" required>
          <input id="<%- idPrefix %>-finishedAtTime" class="form-control" name="finishedAtTime" type="time" required step="1">
        </div>
      </div>
      <% if (!editMode) { %>
      <div class="form-group">
        <label for="<%- idPrefix %>-status" class="control-label"><%- t('prodDowntimes', 'PROPERTY:status') %></label>
        <div class="radio">
          <label><input type="radio" name="status" value="undecided" required> <%- t('prodDowntimes', 'PROPERTY:status:undecided') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="status" value="confirmed" required> <%- t('prodDowntimes', 'PROPERTY:status:confirmed') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="status" value="rejected" required> <%- t('prodDowntimes', 'PROPERTY:status:rejected') %></label>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-decisionComment" class="control-label"><%- t('prodDowntimes', 'PROPERTY:decisionComment') %></label>
        <textarea id="<%- idPrefix %>-decisionComment" class="form-control" name="decisionComment" rows="3"></textarea>
      </div>
      <% } %>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
