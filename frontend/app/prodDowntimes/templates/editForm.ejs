<form class="prodDowntimes-editForm" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%= formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-master" class="control-label"><%- t('prodDowntimes', 'PROPERTY:master') %></label>
          <input id="<%- idPrefix %>-master" type="text" name="master" placeholder="<%- t('prodDowntimes', 'FORM:PLACEHOLDER:personnel') %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-leader" class="control-label"><%- t('prodDowntimes', 'PROPERTY:leader') %></label>
          <input id="<%- idPrefix %>-leader" type="text" name="leader" placeholder="<%- t('prodDowntimes', 'FORM:PLACEHOLDER:personnel') %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-operator" class="control-label"><%- t('prodDowntimes', 'PROPERTY:operator') %></label>
          <input id="<%- idPrefix %>-operator" type="text" name="operator" placeholder="<%- t('prodDowntimes', 'FORM:PLACEHOLDER:personnel') %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-reason" class="control-label"><%- t('prodDowntimes', 'PROPERTY:reason') %></label>
          <input id="<%- idPrefix %>-reason" type="text" name="reason">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-aor" class="control-label"><%- t('prodDowntimes', 'PROPERTY:aor') %></label>
          <input id="<%- idPrefix %>-aor" type="text" name="aor">
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-reasonComment" class="control-label"><%- t('prodDowntimes', 'PROPERTY:reasonComment') %></label>
        <textarea id="<%- idPrefix %>-reasonComment" class="form-control" name="reasonComment" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-status" class="control-label"><%- t('prodDowntimes', 'PROPERTY:status') %></label>
        <div class="radio">
          <label><input type="radio" name="status" value="undecided"> <%- t('prodDowntimes', 'PROPERTY:status:undecided') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="status" value="confirmed"> <%- t('prodDowntimes', 'PROPERTY:status:confirmed') %></label>
        </div>
        <div class="radio">
          <label><input type="radio" name="status" value="rejected"> <%- t('prodDowntimes', 'PROPERTY:status:rejected') %></label>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-decisionComment" class="control-label"><%- t('prodDowntimes', 'PROPERTY:decisionComment') %></label>
        <textarea id="<%- idPrefix %>-decisionComment" class="form-control" name="decisionComment" rows="3"></textarea>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
