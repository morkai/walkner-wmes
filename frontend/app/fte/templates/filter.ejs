<form class="well filter-form">
  <div class="orgUnitDropdowns-container"></div>
  <div class="form-group">
    <label for="<%- idPrefix %>-from"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date">
  </div>
  <div class="form-group">
    <label><%- t('core', 'filter:shift') %></label>
    <div id="<%- idPrefix %>-shift" class="btn-group filter-btn-group" data-toggle="buttons">
      <% [0, 1, 2, 3].forEach(function(shift) { %>
      <label class="btn btn-default">
        <input type="radio" name="shift" value="<%- shift %>"> <%- t('core', 'SHIFT:' + shift) %>
      </label>
      <% }) %>
    </div>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('fte', 'filter:submit') %></span></button>
  </div>
</form>
