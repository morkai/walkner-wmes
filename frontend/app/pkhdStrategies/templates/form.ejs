<form class="pkhdStrategies-form" method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-s" class="control-label is-required"><%- helpers.t('PROPERTY:s') %></label>
        <input id="<%- idPrefix %>-s" class="form-control no-controls" type="number" name="s" required min="0" max="999">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-t" class="control-label is-required"><%- helpers.t('PROPERTY:t') %></label>
        <input id="<%- idPrefix %>-t" class="form-control no-controls" type="number" name="t" required min="0" max="999">
        <a id="<%- idPrefix %>-alreadyExists" class="help-block hidden" href="#pkhdStrategies/0-0"><%- helpers.t('FORM:ERROR:alreadyExists') %></a>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- helpers.t('PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required maxlength="50">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
