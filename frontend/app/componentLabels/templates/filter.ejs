<form class="well filter-form" autocomplete="off">
  <div class="form-group">
    <label for="<%- idPrefix %>-componentCode"><%- t('PROPERTY:componentCode') %></label>
    <input id="<%- idPrefix %>-componentCode" class="form-control" name="componentCode" type="text" autocomplete="new-password">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-operationNo"><%- t('PROPERTY:operationNo') %></label>
    <input id="<%- idPrefix %>-operationNo" class="form-control" name="operationNo" type="text" autocomplete="new-password">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('core', 'filter:submit') %></span></button>
  </div>
</form>
