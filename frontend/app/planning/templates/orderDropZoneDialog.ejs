<form autocomplete="off">
  <div style="display: flex">
    <div class="form-group" style="width: 125px">
      <label for="<%- idPrefix %>-dropZone" class="control-label"><%- t('planning', 'orders:menu:dropZone:dropZone') %></label>
      <input id="<%- idPrefix %>-dropZone" name="dropZone" class="form-control" type="text" value="<%- dropZone %>" pattern="^[0-9]{1,30}$" maxlength="30">
    </div>
    <div class="form-group" style="margin-left: 15px; margin-right: 15px; width: 50px">
      <label for="<%- idPrefix %>-time" class="control-label"><%- t('planning', 'orders:menu:dropZone:time') %></label>
      <input id="<%- idPrefix %>-time" name="time" class="form-control" type="text" value="<%- time %>" placeholder="<%- t('core', 'placeholder:time') %>" pattern="^[0-9]{2}:[0-9]{2}$">
    </div>
    <% if (canChangeStatus) { %>
    <div class="form-group">
      <label for="<%- idPrefix %>-status" class="control-label"><%- t('planning', 'orders:menu:dropZone:status') %></label>
      <br>
      <% ['unknown', 'todo', 'done'].forEach(function(s) { %>
      <div class="radio-inline">
        <label>
          <input name="status" type="radio" value="<%- s %>" required <%- status === s ? 'checked' : '' %>> <%- t('planning', 'orders:whStatus:' + s) %>
        </label>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-orders" class="control-label"><%- t('planning', 'orders:menu:dropZone:orders') %></label>
    <textarea id="<%- idPrefix %>-orders" name="orders" class="form-control text-mono" rows="4" required><%- orders %></textarea>
  </div>
  <% if (canChangeStatus) { %>
  <div class="form-group">
    <label for="<%- idPrefix %>-comment" class="control-label"><%- t('planning', 'orders:menu:dropZone:comment') %></label>
    <textarea id="<%- idPrefix %>-comment" name="comment" class="form-control"></textarea>
  </div>
  <% } %>
  <div class="form-actions">
    <button id="<%- idPrefix %>-submit" type="submit" class="btn btn-primary">
      <span class="fa fa-spinner fa-spin hidden"></span>
      <span><%- t('planning', 'orders:menu:dropZone:submit') %></span>
    </button>
    <button type="button" class="cancel btn btn-link"><%- t('core', 'ACTION_FORM:BUTTON:cancel') %></button>
  </div>
</form>
