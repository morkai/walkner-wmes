<form class="well filter-form planning-mrp-filter">
  <div class="form-group">
    <label for="<%- idPrefix %>-date" class="control-label"><%- t('planning', 'filter:date') %></label>
    <input id="<%- idPrefix %>-date" name="date" class="form-control" type="date" value="<%- date %>" min="<%- minDate %>" max="<%- maxDate %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-mrps" class="control-label"><%- t('planning', 'filter:mrps') %></label>
    <input id="<%- idPrefix %>-mrps" name="mrps" value="<%- mrps %>">
  </div>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button id="<%- idPrefix %>-wrapLists" type="button" class="btn btn-default <%- !wrapLists ? 'active' : '' %>">
        <i class="fa fa-exchange"></i>
        <span><%- t('planning', 'filter:wrapLists') %></span>
      </button>
      <button id="<%- idPrefix %>-useLatestOrderData" type="button" class="btn btn-default <%- useLatestOrderData ? 'active' : '' %>">
        <i class="fa fa-refresh"></i>
        <span><%- t('planning', 'filter:useLatestOrderData') %></span>
      </button>
    </div>
  </div>
  <div class="form-group" style="flex-grow: 1"></div>
  <div class="form-group">
    <table class="planning-mrp-stats">
      <tbody>
      <% ['manHours', 'quantity'].forEach(function(group) { %>
      <tr class="planning-mrp-stats-bd">
        <th><%- t('planning', 'filter:stats:' + group) %></th>
        <% ['todo', 'late', 'done'].forEach(function(subgroup) { %>
        <td data-group="<%- group %>" data-subgroup="<%- subgroup %>" title="<%- t('planning', 'filter:stats:tooltip:' + subgroup) %>">0</td>
        <% }) %>
      </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</form>
