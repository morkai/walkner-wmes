<div class="btn-toolbar planning-mrp-toolbar">
  <div class="btn-group">
    <table class="planning-mrp-stats">
      <tbody>
      <% ['manHours', 'quantity'].forEach(function(group) { %>
      <tr class="planning-mrp-stats-bd">
        <th><%- t('planning', 'toolbar:stats:' + group) %></th>
        <% ['todo', 'late', 'done'].forEach(function(subgroup) { %>
        <td data-group="<%- group %>" data-subgroup="<%- subgroup %>" data-value="<%- stats[group][subgroup] %>" title="<%- t('planning', 'toolbar:stats:tooltip:' + subgroup) %>"><%- stats[group][subgroup].toLocaleString() %></td>
        <% }) %>
      </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
  <div class="btn-group">
    <% if (user.isAllowedTo('PLANNING:MANAGE', 'PLANNING:PLANNER')) { %>
    <button id="<%- idPrefix %>-setHourlyPlan" type="button" class="btn btn-default" title="<%- t('planning', 'toolbar:setHourlyPlan') %>"><i class="fa fa-calendar"></i></button>
    <% } %>
    <div id="<%- idPrefix %>-printDropdown" class="btn-group" role="group">
      <button id="<%- idPrefix %>-printPlan" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="<%- t('planning', 'toolbar:printPlan') %>" <%- lines.length ? '' : 'disabled' %>>
        <i class="fa fa-print"></i>
      </button>
      <ul id="<%- idPrefix %>-printList" class="dropdown-menu dropdown-menu-right">
        <% include toolbarPrintLineList.ejs %>
      </ul>
    </div>
  </div>
</div>
