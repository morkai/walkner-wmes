<form class="well filter-form planning-mrp-filter" autocomplete="stahp">
  <div class="form-group">
    <label for="<%- idPrefix %>-date" class="control-label"><%- t('planning', 'filter:date') %></label>
    <input id="<%- idPrefix %>-date" name="date" class="form-control" type="date" value="<%- date %>" min="<%- minDate %>" max="<%- maxDate %>">
  </div>
  <div class="form-group">
    <div class="filter-radioLabels"><% ['1', '0', 'mine', 'wh'].forEach(function(mode) { %><label><input name="mrpMode" type="radio" value="<%- mode %>" <%- mode === mrpMode ? 'checked' : '' %>> <%- t('planning', 'filter:mrps:' + mode) %></label><% }) %></div>
    <input id="<%- idPrefix %>-mrps" name="mrps" type="text" autocomplete="new-password" value="<%- mrps %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-lines" class="control-label"><%- t('planning', 'filter:lines') %></label>
    <input id="<%- idPrefix %>-lines" name="lines" type="text" autocomplete="new-password" value="<%- lines %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-whStatuses" class="control-label"><%- t('planning', 'filter:whStatuses') %></label>
    <select id="<%- idPrefix %>-whStatuses" name="whStatuses" multiple class="form-control is-expandable" size="1" data-expanded-length="4">
      <% ['0', '1', '2', '3'].forEach(function(whStatus) { %>
      <option value="<%- whStatus %>" <%- _.includes(whStatuses, whStatus) ? 'selected' : '' %>><%- t('planning', 'wh:status:' + whStatus, {qtySent: 0}) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-psStatuses" class="control-label"><%- t('planning', 'filter:psStatuses') %></label>
    <select id="<%- idPrefix %>-psStatuses" name="psStatuses" multiple class="form-control is-expandable" size="1" data-expanded-length="6">
      <% ['unknown', 'new', 'started', 'partial', 'finished', 'cancelled'].forEach(function(psStatus) { %>
      <option value="<%- psStatus %>" <%- _.includes(psStatuses, psStatus) ? 'selected' : '' %>><%- t('planning', 'orders:psStatus:' + psStatus) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <div class="dateTimeRange">
      <div class="dateTimeRange-labels">
        <div class="dateTimeRange-label">
          <label for="<%- idPrefix %>-from" class="control-label"><%- t('planning', 'filter:startTime') %></label>
        </div>
      </div>
      <div class="dateTimeRange-fields">
        <div class="dateTimeRange-field dateTimeRange-from">
          <input id="<%- idPrefix %>-from" name="from" class="form-control" type="time" step="60" value="<%- from %>">
        </div>
        <div class="dateTimeRange-separator">-</div>
        <div class="dateTimeRange-field dateTimeRange-to">
          <input id="<%- idPrefix %>-to" name="to" class="form-control" type="time" step="60" value="<%- to %>">
        </div>
      </div>
    </div>
  </div>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button id="<%- idPrefix %>-useDarkerTheme" type="button" class="btn btn-default <%- useDarkerTheme ? 'active' : '' %>">
        <i class="fa fa-adjust"></i>
        <span><%- t('planning', 'filter:useDarkerTheme') %></span>
      </button>
    </div>
  </div>
  <div class="form-group" style="flex-grow: 1"></div>
  <div class="form-group" style="align-self: center">
    <table class="planning-wh-stats">
      <tbody id="<%- idPrefix %>-stats">
      <tr>
        <% ['all', 0, 1, 2, 3].forEach(function(status) { %>
        <th class="planning-wh-stats-k"><%- t('planning', 'wh:status:' + status, {qtySent: 0}) %></th>
        <% }) %>
      </tr>
      <tr>
        <% ['all', 0, 1, 2, 3].forEach(function(status) { %>
        <td class="planning-wh-stats-v" data-status="<%- status %>">0</td>
        <% }) %>
      </tr>
      </tbody>
    </table>
  </div>
</form>
