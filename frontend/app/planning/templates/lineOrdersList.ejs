<div class="planning-mrp-lineOrders-list <%- expanded ? 'is-expanded' : '' %>">
  <table class="planning-mrp-lineOrders-table">
    <thead>
      <tr>
        <% ['no', 'shift', 'orderNo', 'status', 'nc12', 'name', 'qty:header', 'startTime', 'finishTime', 'lines'].forEach(prop => { %>
        <th class="is-min" data-id="<%- prop %>"><%- t(`lineOrders:list:${prop}`) %></th>
        <% }) %>
        <% if (version > 1) { %>
        <th class="is-min"><%- t(`lineOrders:list:orderGroup`) %></th>
        <% } %>
        <th><%- t('lineOrders:list:comment') %></th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach((order, i) => { %>
      <tr class="<%- order.rowClassName %>" data-id="<%- order.orderNo %>" data-index="<%- i %>">
        <td class="is-min text-right"><%- order.no %>.</td>
        <td class="is-min"><%- t('core', 'SHIFT:' + order.shift) %></td>
        <td class="is-min planning-mrp-lineOrders-status" data-status="<%- order.status %>"><%- order.orderNo %></td>
        <td class="is-min planning-mrp-lineOrders-status" data-status="<%- order.status %>"><%- order.statuses %></td>
        <td class="is-min"><%= order.nc12 %></td>
        <td class="is-min"><%= order.name %></td>
        <td class="is-min text-right">
          <% if (order.qtyPlan === order.qtyTodo) { %>
          <%- order.qtyPlan.toLocaleString() %>
          <% } else { %>
          <%- t('lineOrders:list:qty:value', {plan: order.qtyPlan, todo: order.qtyTodo}) %>
          <% } %>
        </td>
        <td class="is-min text-right"><%- order.startTime %></td>
        <td class="is-min text-right"><%- order.finishTime %></td>
        <td class="is-min"><%= order.lines %></td>
        <% if (version > 1) { %>
        <td class="is-min"><%= order.orderGroup %></td>
        <% } %>
        <td class="planning-mrp-lineOrders-comment"><%- order.comment %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
