<form>
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    required: true,
    startHour: 6
  }) %>
  <div class="form-group">
    <div class="radio-inline">
      <label class="control-label">
        <input name="filter" value="mrps" type="radio" checked>
        <%- helpers.t('transport:export:mrps') %>
      </label>
    </div>
    <div class="radio-inline">
      <label class="control-label">
        <input name="filter" value="lines" type="radio">
        <%- helpers.t('transport:export:lines') %>
      </label>
    </div>
    <br>
    <input id="<%- idPrefix %>-mrps" name="mrps" type="text" value="<%- mrps %>">
    <input id="<%- idPrefix %>-lines" name="lines" type="text" value="">
  </div>
  <div class="form-actions">
    <button id="<%- idPrefix %>-submit" type="submit" class="btn btn-primary">
      <span class="fa fa-spinner fa-spin hidden"></span>
      <span><%- helpers.t('transport:export:submit') %></span>
    </button>
    <button type="button" class="cancel btn btn-link"><%- t('core', 'ACTION_FORM:BUTTON:cancel') %></button>
  </div>
</form>
