<form class="panel panel-primary">
  <div class="panel-heading">
    <%- t('hourlyPlans', 'addForm:panel:title') %>
  </div>
  <div class="panel-body">
    <div class="form-group orgUnitDropdowns-container"></div>
    <div class="form-group">
      <label for="<%- idPrefix %>-date" class="control-label is-required"><%- t('hourlyPlans', 'property:date') %></label>
      <input id="<%- idPrefix %>-date" class="form-control" type="date" value="<%- date %>" max="<%- time.getMoment().add(7, 'days').format('YYYY-MM-DD') %>" min="2013-12-01" required>
    </div>
  </div>
  <div class="panel-footer">
    <button class="btn btn-primary">
      <i class="fa fa-plus"></i>
      <span><%- t('hourlyPlans', 'addForm:submit') %></span>
    </button>
  </div>
</form>
