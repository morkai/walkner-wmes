<div class="panel panel-default orders-documents <%- documents.length || canManage ? '' : 'hidden' %> is-with-actions">
  <div class="panel-heading">
    <div class="panel-heading-title"><%- t('PANEL:TITLE:documents') %></div>
    <div class="panel-heading-actions">
      <% if (canManage) { %>
      <button id="<%- id('reload') %>" class="btn btn-default" type="button" title="<%- t('documents:reload:tooltip') %>"><i class="fa fa-refresh"></i></button>
      <button id="<%- id('add') %>" class="btn btn-default" type="button" title="<%- t('documents:add:tooltip') %>"><i class="fa fa-plus"></i></button>
      <% } %>
    </div>
  </div>
  <% if (documents.length) { %>
  <div class="list">
    <div class="table-responsive">
      <table class="table table-condensed table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th class="is-min"><%- t('PROPERTY:documents.item') %>
            <th class="is-min"><%- t('PROPERTY:documents.nc15') %>
            <th><%- t('PROPERTY:documents.name') %>
            <% if (canManage) { %>
            <th class="actions"><%- t('core', 'LIST:COLUMN:actions') %></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% documents.forEach(function(document) { %>
          <tr data-nc15="<%- document.nc15 %>">
            <td class="is-min is-number"><%= document.item || '' %>
            <td class="is-min is-number">
              <% if (canView) { %>
              <a href="/orderDocuments/<%- document.nc15 %>?order=<%- orderNo %>"><%= document.nc15 %></a>
              <% } else { %>
              <%= document.nc15 %>
              <% } %>
            <td><%= document.name  %>
            <% if (canManage) { %>
            <td class="actions">
              <div class="actions-group">
                <% if (document.added) { %>
                <button data-action="remove" class="btn btn-default" type="button" title="<%- t('documents:remove:tooltip') %>"><i class="fa fa-times"></i></button>
                <% } %>
              </div>
            </td>
            <% } %>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <div class="panel-body">
    <%- t('DOCUMENTS:NO_DATA') %>
  </div>
  <% } %>
</div>
