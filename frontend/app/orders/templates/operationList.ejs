<div class="panel panel-default orders-operations">
  <div class="panel-heading"><%- t('orders', 'PANEL:TITLE:operations') %></div>
  <% if (operations.length) { %>
  <table class="table table-condensed table-hover table-bordered">
    <thead>
      <tr>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.no') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.workCenter') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.name') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.qty') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.machineSetupTime') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.laborSetupTime') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.machineTime') %>
        <th class="is-min"><%- t('orders', 'PROPERTY:operations.laborTime') %>
        <th>
      </tr>
    </thead>
    <tbody>
      <% operations.forEach(function(operation) { %>
      <tr class="<%- operation.no === highlighted ? 'info' : '' %>">
        <td class="is-min is-number"><%= operation.no || '-' %>
        <td class="is-min"><%= operation.workCenter || '-' %>
        <td class="is-min"><%= operation.name || '-' %>
        <td class="is-min is-number"><%= operation.qtyUnit || '-' %>
        <td class="is-min is-number" title="<%- operation.sapMachineSetupTime || '' %>"><%= operation.machineSetupTime || '-' %>
        <td class="is-min is-number" title="<%- operation.sapLaborSetupTime || '' %>"><%= operation.laborSetupTime || '-' %>
        <td class="is-min is-number" title="<%- operation.sapMachineTime || '' %>"><%= operation.machineTime || '-' %>
        <td class="is-min is-number" title="<%- operation.sapLaborTime || '' %>"><%= operation.laborTime || '-' %>
        <td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>
  <div class="panel-body">
    <%- t('orders', 'OPERATIONS:NO_DATA') %>
  </div>
  <% } %>
</div>
