<div class="panel panel-<%- panelType %> orders-details">
  <div class="panel-heading"><%- panelTitle %></div>
  <div class="panel-details row">
    <div class="col-md-4">
      <div class="props first">
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:_id') %></div>
          <div class="prop-value">
            <% if (linkOrderNo && model._id) { %>
            <a href="#orders/<%- model._id %>" title="<%- t('orders', 'details:showMoreLink') %>"><%- model._id %></a>
            <% } else { %>
            <%- model._id || '-' %>
            <% } %>
          </div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:nc12') %></div>
          <div class="prop-value"><%- model.nc12 || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:name') %></div>
          <div class="prop-value"><%= model.name || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:description') %></div>
          <div class="prop-value"><%= model.description || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:leadingOrder') %></div>
          <div class="prop-value">
            <% if (model.leadingOrder) { %>
            <% if (model.leadingOrder === model._id) { %>
            <%- model._id %>
            <% } else { %>
            <a href="#orders/<%- model.leadingOrder %>"><%- model.leadingOrder %></a>
            <% } %>
            <% } else { %>
            -
            <% } %>
          </div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:salesOrder') %></div>
          <div class="prop-value"><%- model.salesOrder || '-' %>/<%- model.salesOrderItem || '-' %></div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="props">
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:soldToParty') %></div>
          <div class="prop-value"><%= model.soldToParty || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:mrp') %></div>
          <div class="prop-value"><%= model.mrp || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:qty') %></div>
          <div class="prop-value"><%= model.qtyUnit || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:priority') %></div>
          <div class="prop-value"><%- model.priority || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:statuses') %></div>
          <div class="prop-value"><%- model.statusLabels %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:delayReason') %></div>
          <div class="prop-value"><%- model.delayReason || '-' %></div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="props">
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:startDate') %></div>
          <div class="prop-value"><%= model.startDateText || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:finishDate') %></div>
          <div class="prop-value"><%= model.finishDateText || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:scheduledStartDate') %></div>
          <div class="prop-value"><%= model.scheduledStartDateText || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:scheduledFinishDate') %></div>
          <div class="prop-value"><%= model.scheduledFinishDateText || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:createdAt') %></div>
          <div class="prop-value"><%= model.createdAtText || '-' %></div>
        </div>
        <div class="prop">
          <div class="prop-name"><%- t('orders', 'PROPERTY:updatedAt') %></div>
          <div class="prop-value"><%= model.updatedAtText || '-' %></div>
        </div>
      </div>
    </div>
  </div>
</div>
