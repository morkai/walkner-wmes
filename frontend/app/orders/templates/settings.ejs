<form class="settings orders-settings">
  <div class="list-group">
    <a class="list-group-item" href="#orders;settings?tab=operations" data-tab="operations"><%- t('orders', 'settings:tab:operations') %></a>
    <a class="list-group-item" href="#orders;settings?tab=documents" data-tab="documents"><%- t('orders', 'settings:tab:documents') %></a>
  </div>
  <div class="panel panel-primary">
    <div class="panel-body" data-tab="operations">
      <div class="form-group">
        <label for="<%- idPrefix %>-operations-groups"><%- t('orders', 'settings:operations:groups') %></label>
        <span class="help-block"><%- t('orders', 'settings:operations:groups:help') %></span>
        <textarea id="<%- idPrefix %>-operations-groups" class="form-control text-mono" name="orders.operations.groups" rows="20" data-keyup-delay="10000" data-change-delay="0"></textarea>
      </div>
    </div>
    <div class="panel-body" data-tab="documents">
      <div class="form-group">
        <label for="<%- idPrefix %>-documents-remoteServer"><%- t('orders', 'settings:documents:remoteServer') %></label>
        <input id="<%- idPrefix %>-documents-remoteServer" class="form-control" name="orders.documents.remoteServer" type="text" data-change-delay="0">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-documents-path"><%- t('orders', 'settings:documents:path') %></label>
        <input id="<%- idPrefix %>-documents-path" class="form-control" name="orders.documents.path" type="text" data-change-delay="0">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-documents-extra"><%- t('orders', 'settings:documents:extra') %></label>
        <textarea id="<%- idPrefix %>-documents-extra" class="form-control text-mono" name="orders.documents.extra" rows="20" data-keyup-delay="10000" data-change-delay="0"></textarea>
      </div>
    </div>
  </div>
</form>
