<div class="<%- showPanel ? 'panel panel-default' : '' %> orders-changes <%- noSystemChanges ? 'orders-no-system-changes' : '' %>">
  <% if (showPanel) { %>
  <div class="panel-heading is-with-actions">
    <%- helpers.t('PANEL:TITLE:changes') %>
    <div class="panel-actions">
      <button id="<%- idPrefix %>-toggleSystemChanges" class="btn btn-default <%- noSystemChanges ? 'active' : '' %>" type="button"><%- helpers.t('CHANGES:toggleSystemChanges') %></button>
    </div>
  </div>
  <% } %>
  <div class="list">
    <div class="table-responsive">
      <table id="<%- idPrefix %>-table" class="table table-condensed table-bordered table-hover">
        <thead>
          <tr>
            <th class="is-min"><%- helpers.t('CHANGES:time') %>
            <th class="is-min"><%- helpers.t('CHANGES:user') %>
            <th class="is-min"><%- helpers.t('CHANGES:property') %>
            <th class="is-min"><%- helpers.t('CHANGES:oldValue') %>
            <th><%- helpers.t('CHANGES:newValue') %>
          </tr>
        </thead>
        <% if (canComment) { %>
        <tfoot>
          <tr>
            <td class="orders-commentForm-container" colspan="5"></td>
          </tr>
        </tfoot>
        <% } %>
        <% if (!changes.length) { %>
        <tbody id="<%- idPrefix %>-empty">
          <tr>
            <td colspan="5"><%- helpers.t('CHANGES:NO_DATA') %></td>
          </tr>
        </tbody>
        <% } %>
        <% changes.forEach(function(change, i) { %>
        <%- renderChange({
          renderPropertyLabel: renderPropertyLabel,
          renderValueChange: renderValueChange,
          change: change,
          i: i
        }) %>
        <% }) %>
      </table>
    </div>
  </div>
</div>
