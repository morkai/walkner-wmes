<form class="well filter-form" autocomplete="off">
  <div class="form-group">
    <label for="<%- idPrefix %>-from"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" placeholder="YYYY-MM-DD">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" placeholder="YYYY-MM-DD">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-_id"><%- t('orders', 'PROPERTY:_id') %></label>
    <input id="<%- idPrefix %>-_id" class="form-control orders-filter-_id" name="_id" type="text" maxlength="9">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-nc12"><%- t('orders', 'PROPERTY:nc12') %></label>
    <input id="<%- idPrefix %>-nc12" class="form-control orders-filter-nc12" name="nc12" type="text" maxlength="12">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-mrp"><%- t('orders', 'PROPERTY:mrp') %></label>
    <input id="<%- idPrefix %>-mrp" name="mrp" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-statusesIn"><%- t('orders', 'filter:statuses:in') %></label>
    <input id="<%- idPrefix %>-statusesIn" name="statusesIn" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-statusesNin"><%- t('orders', 'filter:statuses:nin') %></label>
    <input id="<%- idPrefix %>-statusesNin" name="statusesNin" type="text">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('orders', 'filter:submit') %></span></button>
  </div>
</form>
